    {% block body %}
        <div id="page-wrapper">
            {% set arrRuta = app.request.attributes.get('_route')|split('_') %}
            {% if arrRuta.0 != 'admin' %}
                <div class="row">
                    <br>
                    {{ notificar()|raw }}
                    <div class="col-lg-12">
                        <h3 class='page-header'>
                            {{ arrRuta.0 | capitalize }} {{ arrRuta.1 | capitalize }}
                            <small style="font-size: 20px">{{ arrRuta.2 | capitalize }}
                                {% if arrRuta|length>3 %}
                                    :{{ arrRuta.3}} {% if arrRuta|length>4 %}
                                     {{ arrRuta.4}}
                                {% endif%}
                                {% endif%}</small>
                        </h3>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            {% endif %}
            {% block content %}

