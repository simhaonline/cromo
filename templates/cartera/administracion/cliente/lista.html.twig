{% extends 'base_cartera.html.twig' %}
{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de b√∫squeda
        </div>
        <div class="panel-body">
        </div>
    </div>
    {{ form_start(form) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>DIGITO</th>
            <th>NIT</th>
            <th>CIUDAD</th>
            <th>NOMBRE</th>
            <th>FORMA PAGO</th>
            <th>PLAZO PAGO</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arCliente in arCliente %}
            <tr>
                <td>{{ arCliente.codigoClientePk }}</td>
                <td>{{ arCliente.digitoVerificacion }}</td>
                <td>{{ arCliente.nit }}</td>
                <td>{{ arCliente.ciudad }}</td>
                <td>{{ arCliente.nombreCorto }}</td>
                <td>{{ arCliente.nombre }}</td>
                <td>{{ arCliente.plazoPago}}</td>
                <td style="text-align: center"><a href="{{ path('car_adm_cliente_nuevo', {'codigoCliente': arCliente.codigoClientePk }) }}"><i class="fa fa-edit" style="font-size: large; "></i></a></td>
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCliente.codigoClientePk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCliente.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arCliente) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('car_adm_cliente_nuevo', {'codigoCliente': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

