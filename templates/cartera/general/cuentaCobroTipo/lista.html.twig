{% extends 'base_cartera.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>TIPO CUENTA CLIENTE</th>
            <th>CUENTA CLIENTE</th>
            <th>CUENTA RETENCION FUENTE</th>
            <th>CUENTA RETENCION IVA</th>
            <th>CUENTA RETENCION ICA</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arCuentaCobrarTipo in arCuentaCobrarTipo %}
            <tr>
                <td>{{ arCuentaCobrarTipo.codigoCuentaCobrarTipoPk }}</td>
                <td>{{ arCuentaCobrarTipo.nombre }}</td>
                <td style="text-align: center">{% if arCuentaCobrarTipo.tipoCuentaCliente == 1 %} DEBITO {% else %} CREDITO {% endif %}</td>
                <td>{{ arCuentaCobrarTipo.codigoCuentaClienteFk }}</td>
                <td>{{ arCuentaCobrarTipo.codigoCuentaRetencionFuenteFk }}</td>
                <td>{{ arCuentaCobrarTipo.codigoCuentaRetencionIvaFk }}</td>
                <td>{{ arCuentaCobrarTipo.codigoCuentaRetencionIcaFk }}</td>
                <td style="text-align: center"><a href="{{ path('car_adm_general_cuenta_cobrar_tipo_nuevo', {'codigoCuentaCobrarTipo': arCuentaCobrarTipo.codigoCuentaCobrarTipoPk }) }}"><i class="fa fa-edit" style="font-size: large; "></i></a></td>
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCuentaCobrarTipo.codigoCuentaCobrarTipoPk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCuentaCobrarTipo.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arCuentaCobrarTipo) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('car_adm_general_cuenta_cobrar_tipo_nuevo', {'codigoCuentaCobrarTipo': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

