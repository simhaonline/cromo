{% extends 'base_cartera.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arNotaDebitoConcepto in arNotaDebitoConcepto %}
            <tr>
                <td>{{ arNotaDebitoConcepto.codigoNotaDebitoConceptoPk }}</td>
                <td>{{ arNotaDebitoConcepto.nombre }}</td>
                <td style="text-align: center"><a href="{{ path('car_adm_general_nota_debito_concepto_nuevo', {'codigoNotaDebitoConcepto': arNotaDebitoConcepto.codigoNotaDebitoConceptoPk }) }}"><i class="fa fa-edit" style="font-size: large; "></i></a></td>
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arNotaDebitoConcepto.codigoNotaDebitoConceptoPk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arNotaDebitoConcepto.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arNotaDebitoConcepto) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('car_adm_general_nota_debito_concepto_nuevo', {'codigoNotaDebitoConcepto': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

