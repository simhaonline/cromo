        {#{% if arAnticipo.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}#}
    </div>
    <br/><br/>
    {% include 'cartera/movimiento/anticipo/anticipo/informacion.html.twig' %}
