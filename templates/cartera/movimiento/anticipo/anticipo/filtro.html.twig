{{ form_start(formFiltro, { 'attr': {'class': 'form-horizontal'} }) }}
<div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-editbutton="false"
     data-widget-fullscreenbutton="true">
    <header>
        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
        <h2>Lista</h2>
    </header>
    <div>
        <div class="widget-body no-padding">
            <div class="panel-body">
                {% include 'estructura/buscarClienteCartera.html.twig' %}
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Numero:</label>
                    <div class="col-sm-2">
                        {{ form_widget(formFiltro.numero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Codigo:</label>
                    <div class="col-sm-2">
                        {{ form_widget(formFiltro.codigoAnticipoPk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Tipo:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.codigoAnticipoTipoFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Asesor:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.codigoAsesorFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Autorizado:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.estadoAutorizado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Desde:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.fechaDesde) }}
                    </div>
                    <label class="col-sm-1 control-label">Aprobado:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.estadoAprobado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Hasta:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.fechaHasta) }}
                    </div>
                    <label class="col-sm-1 control-label">Anulado:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.estadoAnulado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{ form_end(formFiltro) }}
            </div>
        </div>
    </div>
</div>