{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-1 control-label">Cliente:</label>
                <div class="col-sm-11">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                <input id="txtCodigoCliente"  name="txtCodigoCliente"  type="text" class="form-control" value="{{ arCuentaCobrar.codigoClienteFk |default('') }}"/>
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arCuentaCobrar.clienteRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('cartera_buscar_cliente', { 'campoCodigo': 'txtCodigoCliente', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre1" class="col-sm-1 control-label">Tipo:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.cuentaCobrarTipoRel, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
                <label for="form_nombre2" class="col-sm-1 control-label">Asesor:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.asesorRel, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
                <label for="form_nombre1" class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.numeroDocumento) }}
                    {{ form_errors(form.numeroDocumento) }}
                </div>
                <label for="form_nombre1" class="col-sm-1 control-label">Saldo original:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.vrSaldoOriginal) }}
                    {{ form_errors(form.vrSaldoOriginal) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre1" class="col-sm-1 control-label">fecha:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.fecha) }}
                    {{ form_errors(form.fecha) }}
                </div>
                <label for="form_nombre1" class="col-sm-1 control-label">Plazo:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.plazo) }}
                    {{ form_errors(form.plazo) }}
                </div>
                <label for="form_nombre1" class="col-sm-1 control-label">Soporte:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.soporte) }}
                    {{ form_errors(form.soporte) }}
                </div>
                <label for="form_nombre1" class="col-sm-1 control-label">Subtotal:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.vrSubtotal) }}
                    {{ form_errors(form.vrSubtotal) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre1" class="col-sm-1 col-sm-offset-9 control-label">Rte fuente:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.vrRetencionFuente) }}
                    {{ form_errors(form.vrRetencionFuente) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre1" class="col-sm-1 col-sm-offset-9 control-label">Total:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.vrTotal) }}
                    {{ form_errors(form.vrTotal) }}
                </div>
            </div>
            {#<div class="form-group">#}
                {#<label class="col-sm-2 control-label">Comentario:</label>#}
                {#<div class="col-sm-10">#}
                    {#{{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}#}
                {#</div>#}
            {#</div>#}
        </div>
    </div>

    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('cartera_movimiento_cuentacobrar_cuentacobrar_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
