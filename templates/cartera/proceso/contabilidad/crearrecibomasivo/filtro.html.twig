<div id="content sortable-grid ui-sortable">
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
        <header role="heading" class="ui-sortable-handle">
            <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
            <h2>Filtro</h2>
        </header>
        <div>
            <div class="widget-body">
                <div class="form-group form-group-sm">
                    <label  class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.cuentaCobrarTipo) }}
                    </div>
                    <label  class="col-sm-2 control-label">Referencia:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.numeroReferencia) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaDesde) }}
                    </div>
                    <label class="col-sm-2 control-label">Autorizado:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estadoAutorizado) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaHasta) }}
                    </div>
                    <label class="col-sm-2 control-label">Aprobado:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estadoAprobado) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 col-sm-offset-6 control-label">Anulado:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estadoAnulado) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>