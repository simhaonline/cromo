{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {% include('cartera/proceso/contabilidad/crearrecibomasivo/filtro.html.twig') %}
    {{ form_end(form) }}
    {{ form_start(formRecibo) }}
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>TIPO</th>
            <th>NUMERO</th>
            <th title="Numero referencia">NUM_REF</th>
            <th>FECHA</th>
            <th>VENCE</th>
            <th>CLIENTE</th>
            <th>SALDO</th>
            <th><input type="checkbox" name="ChkSeleccionarTodosDetalle"
                       OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
        </tr>
        </thead>
        <tbody>
        {% for arCuentaCobrar in arCuentasCobrar %}
            <tr>
                <td>{{ arCuentaCobrar.codigoCuentaCobrarPk }}</td>
                <td>{{ arCuentaCobrar.tipo }}</td>
                <td>{{ arCuentaCobrar.numeroDocumento }}</td>
                <td>{{ arCuentaCobrar.numeroReferencia }}</td>
                <td>{{ arCuentaCobrar.fecha | date('Y-m-d') }}</td>
                <td>{{ arCuentaCobrar.fechaVence | date('Y-m-d') }}</td>
                <td>{{ arCuentaCobrar.nombreCorto }}</td>
                <td class="numero">{{ arCuentaCobrar.vrSaldo | number_format(0, '.', ',') }}</td>
                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]"
                                                       value="{{ arCuentaCobrar.codigoCuentaCobrarPk }}"/></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <div class="btn-group" style="float: left">
            <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span
                            class="badge">{{ arCuentasCobrar.getTotalItemCount }}</span></div>
            </div>
        </div>
        <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
            {{ knp_pagination_render(arCuentasCobrar) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                <a class="btn btn-sm btn-default" data-toggle="modal"
                   data-target="#myModal">Recibo caja
                </a>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width: 1250px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel"> Parámetros recibo</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-heading">Información general</div>
                        <div class="panel-body">
                            <div class="form-group form-group-sm">
                                <label for="form_nombre2" class="col-sm-2 control-label">Cuenta:</label>
                                <div class="col-sm-4">
                                    {{ form_widget(formRecibo.cuentaRel, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                                </div>
                                <label for="form_nombre1" class="col-sm-2 control-label">Asesor:</label>
                                <div class="col-sm-4">
                                    {{ form_widget(formRecibo.asesorRel) }}
                                    {{ form_errors(formRecibo.asesorRel) }}
                                </div>
                            </div>
                            <br>
                            <div class="form-group form-group-sm">
                                <label for="form_nombre1" class="col-sm-2 control-label">Fecha pago:</label>
                                <div class="col-sm-4">
                                    {{ form_widget(formRecibo.fechaPago) }}
                                </div>
                                <label for="form_soporte" class="col-sm-2 control-label">Soporte:</label>
                                <div class="col-sm-4">
                                    {{ form_widget(formRecibo.soporte) }}
                                    {{ form_errors(formRecibo.soporte) }}
                                </div>
                            </div>
                            <br>
                            <div class="form-group form-group-sm">
                                <label class="col-sm-2 control-label">Comentario:</label>
                                <div class="col-sm-10">
                                    {{ form_widget(formRecibo.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancelar
                    </button>
                    {{ form_widget(formRecibo.guardar) }}
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
    {{ form_widget(formRecibo._token) }}
    {{ form_end(formRecibo, {'render_rest': false}) }}
    <br/> <br/>
{% endblock %}

