{% extends 'base_compra.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtNumero, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-1 control-label">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cboEgresoTipo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Fecha desde:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaDesde) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Fecha hasta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaHasta) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-4">
                    {{ form_widget(form.filtrarPorFecha) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NUMERO</th>
            <th>TIPO</th>
            <th>FECHA</th>
            <th>NIT</th>
            <th>CLIENTE</th>
            <th>TOTAL</th>
        </tr>
        </thead>
        <tbody>
        {% for arEgreso in arEgresos %}
            <tr>
                <td>{{ arEgreso.codigoEgresoPk }}</td>
                <td>{{ arEgreso.numero }}</td>
                <td>{{ arEgreso.tipo }}</td>
                <td>{{ arEgreso.fecha | date('Y-m-d') }}</td>
                <td>{{ arEgreso.numeroIdentificacion }}</td>
                <td>{{ arEgreso.nombreCorto }}</td>
                <td class="numero">{{ arEgreso.vrPagoTotal| number_format(0, '.', ',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arEgresos.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arEgresos) }}
    </div>
    <div class="btn-group" style="float: right">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}

