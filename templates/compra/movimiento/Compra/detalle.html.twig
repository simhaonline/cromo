{% extends 'base_compra.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ notificar()|raw }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('compra_movimiento_compra_compra_lista') }}">Volver</a>&nbsp;&nbsp;
        </div>
    </div>
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {% include 'estructura/botonera.html.twig' %}
        </div>
    </div>
    <div style="float:right">
        {% if arCompra.estadoAutorizado == true %}<span class="label label-default">Autorizado</span>{% endif %}
        {% if arCompra.estadoAprobado == true %}<span class="label label-success">Aprobado</span>{% endif %}
        {% if arCompra.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}
    </div>
    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">CODIGO:</td>
            <td class="td-in-well">{{ arCompra.codigoCompraPk }}</td>
            <td class="titulo">CLIENTE:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCompra.proveedorRel.nombreCorto }}</td>
            <td class="titulo">SUBTOTAL:</td>
            <td class="td-in-well" style="text-align: right;">{{ arCompra.vrSubtotal |number_format(0, '.', ',') }}</td>

        </tr>
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arCompra.numero }}</td>
            <td class="titulo">USUARIO:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCompra.usuarioCrea | default('') }}</td>
            <td class="titulo">IVA:</td>
            <td class="td-in-well" style="text-align: right;">{{ arCompra.vrIva |number_format(0, '.', ',') }}</td>

        </tr>
        <tr>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arCompra.fecha | date('Y-m-d') }}</td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo">DESCUENTO:</td>
            <td class="td-in-well"
                style="text-align: right;">{{ arCompra.vrDescuento |number_format(0, '.', ',') }}</td>
        </tr>
        <tr>
            <td class="titulo">FECHA VENCIMIENTO</td>
            <td>{{ arCompra.fechaVencimiento | date('Y-m-d') }}</td>
            <td class="titulo"></td>
            <td></td>
            <td class="titulo">TOTAL:</td>
            <td class="td-in-well" style="text-align: right;">{{ arCompra.vrTotal |number_format(0, '.', ',') }}</td>
        </tr>
        <tr>
            <td class="titulo">COMENTARIO:</td>
            <td class="td-in-well" colspan="6">{{ arCompra.comentarios }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>CONCEPTO</th>
                            <th>NOMBRE</th>
                            <th>CANTIDAD</th>
                            <th title="Valor unitario" style="width: 12%;">PRECIO</th>
                            <th style="width: 12%;">SUBTOTAL</th>
                            <th title="Porcentaje IVA" style="width: 12%;">% DESCUENTO</th>
                            <th title="Valor IVA" style="width: 10%;">DESCUENTO</th>
                            <th title="Porcentaje IVA" style="width: 12%;">% IVA</th>
                            <th title="Valor IVA" style="width: 10%;">IVA</th>
                            <th style="width: 15%;">TOTAL</th>
                            <th><input type="checkbox" name="ChkSeleccionarTodosDetalle"
                                       OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arCompraDetalle in arCompraDetalles %}
                            <tr>
                                <td>{{ arCompraDetalle.codigoCompraDetallePk }}</td>
                                <td>{{ arCompraDetalle.conceptoRel.codigoConceptoPk }}</td>
                                <td>{{ arCompraDetalle.conceptoRel.nombre | default('') }}</td>
                                {% if arCompra.estadoAutorizado == false %}
                                    <td style="text-align: center;">
                                        <input type="number"
                                               name="arrCantidad[{{ arCompraDetalle.codigoCompraDetallePk }}]"
                                               value="{{ arCompraDetalle.cantidad }}"
                                               style="text-align: right; width:60px"
                                               size="10">
                                    </td>
                                    <td style="text-align: center">
                                        <input class="input-valor" type="number" placeholder="Valor unitario"
                                               name="arrValor[{{ arCompraDetalle.codigoCompraDetallePk }}]"
                                               value="{{ arCompraDetalle.vrPrecioUnitario }}"
                                               style="text-align: right; width:90px" size="10"/>
                                    </td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.vrSubtotal | number_format(0, '.', ',') }}
                                    </td>
                                    <td style="text-align: center">
                                        <input class="input-valor" type="number" placeholder="% DESCUENTO"
                                               name="arrDescuento[{{ arCompraDetalle.codigoCompraDetallePk }}]"
                                               value="{{ arCompraDetalle.porDescuento }}"
                                               style="text-align: right; width:40px" size="10"/>
                                    </td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.vrDescuento | number_format(0, '.', ',') }}
                                    </td>
                                    <td style="text-align: center">
                                        <input class="input-valor" type="number" placeholder="% IVA"
                                               name="arrIva[{{ arCompraDetalle.codigoCompraDetallePk }}]"
                                               value="{{ arCompraDetalle.porIva }}"
                                               style="text-align: right; width:40px" size="10"/>
                                    </td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.vrIva | number_format(0, '.', ',') }}
                                    </td>
                                {% else %}
                                    <td style="text-align: right;">{{ arCompraDetalle.cantidad }}</td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.vrPrecioUnitario |number_format(0, '.', ',') }}
                                    </td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.vrSubtotal | number_format(0, '.', ',') }}
                                    </td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.porDescuento }}
                                    </td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.vrDescuento | number_format(0, '.', ',') }}
                                    </td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.porIva }}
                                    </td>
                                    <td style="text-align: right">
                                        {{ arCompraDetalle.vrIva }}
                                    </td>
                                {% endif %}
                                <td style="text-align: right">
                                    {{ arCompraDetalle.vrTotal | number_format(0, '.', ',') }}
                                </td>
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]"
                                                                       value="{{ arCompraDetalle.codigoCompraDetallePk }}"/>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {#<div class="separador-1"></div>#}
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {% if arCompra.estadoAutorizado == true %}
                            <input type="button" class="btn btn-default btn-sm" href="#" disabled="disabled"
                                   value="Nuevo"/>
                        {% else %}
                            <a class="btn btn-default btn-sm"
                               href="javascript:abrirVentana3('{{ path('compra_movimiento_compra_compra_detalle_nuevo', {'id' : arCompra.codigoCompraPk  }) }}', 'Compra detalle', 600, 900)">Nuevo</a>
                        {% endif %}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnActualizar) }}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminar) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arCompraDetalles.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs">
        {{ knp_pagination_render(arCompraDetalles) }}
    </div>
    {{ form_end(form) }}
{% endblock %}

