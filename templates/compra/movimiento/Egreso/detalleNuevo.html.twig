{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br/>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4> Filtros de b√∫squeda</h4>
        </div>
        <div class="panel-body">
            {{ form_label(form.txtCodigoItem) }}
            <div class="col-sm-4">
                {{ form_widget(form.txtCodigoItem) }}

            </div>
            {{ form_label(form.txtNombreItem) }}
            <div class="col-sm-4">

                {{ form_widget(form.txtNombreItem) }}
            </div>
        </div>
        <div class="panel-footer">
            {{ form_widget(form.btnFiltrar,{'attr':{'style':'float: right;'}}) }}
            <br/>
            <br/>
        </div>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ITEM</th>
                <th>NOMBRE</th>
                <th>GRUPO</th>
                {#<th>EXI</th>#}
                {#<th>REM</th>#}
                {#<th>DIS</th>#}
                {#<th>PED</th>#}
                {#<th>OC</th>#}
                <th>CANT</th>
            </tr>
            </thead>
            <tbody>
            {% for arConcepto in arConceptos %}
                <tr>
                    <td style="text-align: right;">{{ arConcepto.codigoConceptoPk }}</td>
                    <td style="text-align: left;">{{ arConcepto.nombre }}</td>
                    <td style="text-align: left;">{{ arConcepto.conceptoTipoRel.nombre }}</td>
                    {#<td style="text-align: right;">{{ arConcepto.cantidadExistencia }}</td>#}
                    {#<td style="text-align: right;">{{ arConcepto.cantidadRemisionada }}</td>#}
                    {#<td style="text-align: right;">{{ arConcepto.cantidadDisponible }}</td>#}
                    {#<td style="text-align: right;">{{ arConcepto.cantidadPedido }}</td>#}
                    {#<td style="text-align: right;">{{ arConcepto.cantidadOrden }}</td>#}
                    <td style="text-align: center;">
                        <input type="number" name="conceptoCantidad[{{ arConcepto.codigoConceptoPk }}]"
                               size="10" style="width:70px">
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ form_widget(form.btnGuardar,{'attr':{'style':'float: right;'}}) }}
    {{ form_end(form) }}
{% endblock %}
