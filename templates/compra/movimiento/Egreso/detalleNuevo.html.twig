{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br/>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4> Filtros de b√∫squeda</h4>
        </div>
        <div class="panel-body">
            {{ form_label(form.txtCodigoCuentaPagar) }}
            <div class="col-sm-4">
                {{ form_widget(form.txtCodigoCuentaPagar) }}

            </div>
            {#{{ form_label(form.txtNombreItem) }}#}
            {#<div class="col-sm-4">#}

            {#{{ form_widget(form.txtNombreItem) }}#}
            {#</div>#}
        </div>
        <div class="panel-footer">
            {{ form_widget(form.btnFiltrar,{'attr':{'style':'float: right;'}}) }}
            <br/>
            <br/>
        </div>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>NUMERO</th>
                <th>PROVEEDOR</th>
                <th>NIT</th>
                <th>FECHA</th>
                <th>ABONO</th>
                <th>SALDO</th>
                <th>VALOR</th>
            </tr>
            </thead>
            <tbody>
            {% for arCuentaPagar in arCuentasPagar %}
                <tr>
                    <td style="text-align: right;">{{ arCuentaPagar.codigoCuentaPagarPk }}</td>
                    <td style="text-align: left;">{{ arCuentaPagar.numeroDocumento }}</td>
                    <td style="text-align: left;">{{ arCuentaPagar.nombreCorto }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.numeroIdentificacion }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.fecha | date('d/m/Y') }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.vrAbono }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.vrSaldo }}</td>
                    <td style="text-align: center;">
                        <input type="number" name="cuentaPagarValor[{{ arCuentaPagar.codigoCuentaPagarPk }}]"
                               size="10" style="width:70px">
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ form_widget(form.btnGuardar,{'attr':{'style':'float: right;'}}) }}
    {{ form_end(form) }}
{% endblock %}
