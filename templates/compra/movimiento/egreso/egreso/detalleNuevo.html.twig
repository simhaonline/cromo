{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br/>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4> Filtros de b√∫squeda</h4>
        </div>
        <div class="panel-body">
            <label class="col-sm-2 control-label">Codigo:</label>
            <div class="col-sm-4">
                {{ form_widget(form.txtCodigoCuentaPagar) }}
            </div>
        </div>
        <div class="panel-body">
            <label class="col-sm-2 control-label">Fecha desde:</label>
            <div class="col-sm-4">
                {{ form_widget(form.fechaDesde) }}
            </div>
        </div>
        <div class="panel-body">
            <label class="col-sm-2 control-label">Fecha hasta:</label>
            <div class="col-sm-4">
                {{ form_widget(form.fechaHasta) }}
            </div>
        </div>
        <div class="panel-body">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-4">
                {{ form_widget(form.filtrarPorFecha) }}
            </div>
        </div>
        <div class="panel-footer">
            {{ form_widget(form.btnFiltrar,{'attr':{'style':'float: right;'}}) }}
            <br/>
            <br/>
        </div>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover tabla-datos">
            <thead>
            <tr>
                <th>ID</th>
                <th>NUMERO</th>
                <th>PROVEEDOR</th>
                <th>NIT</th>
                <th>FECHA</th>
                <th>VENCIMIENTO</th>
                <th>ABONO</th>
                <th>SALDO</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for arCuentaPagar in arCuentasPagar %}
                <tr>
                    <td style="text-align: right;">{{ arCuentaPagar.codigoCuentaPagarPk }}</td>
                    <td style="text-align: left;">{{ arCuentaPagar.numeroDocumento }}</td>
                    <td style="text-align: left;">{{ arCuentaPagar.nombreCorto }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.numeroIdentificacion }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.fechaFactura | date('d/m/Y') }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.fechaVence | date('d/m/Y') }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.vrAbono | number_format(0,'.',',') }}</td>
                    <td style="text-align: right;">{{ arCuentaPagar.vrSaldo | number_format }}</td>
                    <td style="text-align: center;">
                        <input type="checkbox" name="ChkSeleccionar[]"
                               size="10" value="{{ arCuentaPagar.codigoCuentaPagarPk }}" style="width:70px">
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ form_widget(form.btnGuardar,{'attr':{'style':'float: right;'}}) }}
    {{ form_end(form) }}
{% endblock %}
