{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-1 control-label">Cliente:</label>
                <div class="col-sm-11">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.txtCodigoProveedor) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                {{ form_widget(form.txtNombreCorto) }}
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('compra_bus_proveedor', { 'campoCodigo': 'form_txtCodigoCliente', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaDesde) }}
                </div>
                <label class="col-sm-1 control-label">Tipo:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.cboEgresoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaHasta) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-5">
                    {{ form_widget(form.filtrarFecha) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NUMERO</th>
            <th>FECHA</th>
            <th>NIT</th>
            <th>CLIENTE</th>
            <th>TOTAL</th>
            {#<th>ANU</th>#}
            {#<th>AUT</th>#}
            {#<th>APR</th>#}
            <th><input type="checkbox" name="ChkSeleccionarTodosDetalle"
                       OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
        </tr>
        </thead>
        <tbody>
        {% for arEgreso in arEgresos %}
            <tr>
                <td>{{ arEgreso.codigoEgresoPk }}</td>
                <td>{{ arEgreso.numero }}</td>
                <td>{{ arEgreso.fecha | date('Y-m-d') }}</td>
                <td>{{ arEgreso.numeroIdentificacion }}</td>
                <td>{{ arEgreso.nombreCorto }}</td>
                <td class="numero">{{ arEgreso.vrPago | number_format(0, '.', ',') }}</td>
                {#{{ validarTipo(arEgreso.estadoAnulado) }}#}
                {#{{ validarTipo(arEgreso.estadoAutorizado) }}#}
                {#{{ validarTipo(arEgreso.estadoAprobado) }}#}
                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]"
                                                       value="{{ arEgreso.codigoEgresoPk }}"/></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arEgresos.getTotalItemCount }}</span>
            </div>
        </div>

        <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arEgresos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.btnContabilizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

