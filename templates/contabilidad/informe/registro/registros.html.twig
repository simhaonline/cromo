{% extends 'base_contabilidad.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-1 control-label">Tercero:</label>
                <div class="col-sm-11">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.txtCodigoTercero) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                {{ form_widget(form.txtNombreCorto) }}
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('contabilidad_buscar_tercero', { 'campoCodigo': 'form_txtCodigoTercero', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Comprobante:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtComprobante) }}
                </div>
                <label class="col-sm-1 control-label">Numero hasta:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtNumeroHasta) }}
                </div>
                <label class="col-sm-4 control-label">Numero desde:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtNumeroDesde) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Cuenta:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtCuenta) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Centro costo:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtCentroCosto) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaDesde) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaHasta) }}
                </div>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-1 control-label"></label>
            <div class="col-sm-5">
                {{ form_widget(form.filtrarFecha) }}
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>COD</th>
            <th>NUMERO</th>
            <th>NUMERO REF.</th>
            <th>FECHA</th>
            <th>COMPRABANTE</th>
            <th>CUENTA</th>
            <th>C_C</th>
            <th>NIT</th>
            <th>TERCERO</th>
            <th>DEBITO</th>
            <th>CREDITO</th>
            <th>BASE</th>
            <th>DETALLE</th>
        </tr>
        </thead>
        <tbody>
        {% for arRegistro in arRegistros %}
            <tr>
                <td>{{ arRegistro.codigoRegistroPk }}</td>
                <td>{{ arRegistro.numero }}</td>
                <td>{{ arRegistro.numeroReferencia }}</td>
                <td>{{ arRegistro.fecha | date('Y-m-d') }}</td>
                <td>{{ arRegistro.codigoComprobanteFk  }} - {{ arRegistro.nombre  }}</td>
                <td>{{ arRegistro.codigoCuentaFk }}</td>
                <td>{{ arRegistro.codigoCentroCostoFk }}</td>
                <td>{{ arRegistro.numeroIdentificacion }}</td>
                <td>{{ arRegistro.nombreCorto }}</td>
                <td class="numero">{{ arRegistro.vrDebito }}</td>
                <td class="numero">{{ arRegistro.vrCredito }}</td>
                <td class="numero">{{ arRegistro.vrBase }}</td>
                <td>{{ arRegistro.descripcion }}</td>
            </tr>
        {% endfor %}
    </table>
    {#<div class="btn-group">#}
        {#{{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}#}
    {#</div>#}
    {{ form_rest(form) }}
    {{ form_end(form) }}
    </div>
{% endblock %}
