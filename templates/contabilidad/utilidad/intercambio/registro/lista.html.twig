{% extends 'base_contabilidad.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaDesde) }}
                </div>
                <label class="col-sm-1 control-label">Comprobante:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtComprobante) }}
                </div>
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaHasta) }}
                </div>
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-2">

                </div>
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-5">
                    {{ form_widget(form.filtrarFecha) }}
                </div>
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-2">

                </div>
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-2">

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group">
                {{ form_widget(form.btnGenerar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                {{ form_widget(form.btnDescargar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>COD</th>
            <th title="Prefijo">P</th>
            <th>NUMERO</th>
            <th>NUMERO REF.</th>
            <th>FECHA</th>
            <th>COMPRABANTE</th>
            <th>CUENTA</th>
            <th>C_C</th>
            <th>NIT</th>
            <th>TERCERO</th>
            <th>DEBITO</th>
            <th>CREDITO</th>
            <th>BASE</th>
            <th>DETALLE</th>
        </tr>
        </thead>
        <tbody>
        {% for arRegistro in arRegistros %}
            <tr>
                <td>{{ arRegistro.codigoRegistroPk }}</td>
                <td>{{ arRegistro.numeroPrefijo }}</td>
                <td>{{ arRegistro.numero }}</td>
                <td>{{ arRegistro.numeroReferencia }}</td>
                <td>{{ arRegistro.fecha | date('Y-m-d') }}</td>
                <td>{{ arRegistro.codigoComprobanteFk  }} - {{ arRegistro.nombre  }}</td>
                <td>{{ arRegistro.codigoCuentaFk }}</td>
                <td>{{ arRegistro.codigoCentroCostoFk }}</td>
                <td>{{ arRegistro.numeroIdentificacion }}</td>
                <td>{{ arRegistro.nombreCorto }}</td>
                <td class="numero">{{ arRegistro.vrDebito | number_format(0, '.', ',')}}</td>
                <td class="numero">{{ arRegistro.vrCredito | number_format(0, '.', ',')}}</td>
                <td class="numero">{{ arRegistro.vrBase | number_format(0, '.', ',')}}</td>
                <td>{{ arRegistro.descripcion }}</td>
            </tr>
        {% endfor %}
    </table>
    <div>
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRegistros.getTotalItemCount }}</span></div>
        </div>

        <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arRegistros) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.btnGenerar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

