{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('crm_administracion_comercial_cliente_lista') }}">Volver</a> &nbsp;&nbsp;
        </div>
    </div>
    <br><br>
    <table width="100%" class="table table-condensed table-bordered tabla-informacion">
        <tbody>
        <tr>
            <td class="titulo">ID:</td>
            <td class="td-in-well">{{ arCliente.codigoClientePk }}</td>
            <td class="titulo">INGRESO:</td>
            <td class="td-in-well">{{ arCliente.codigoIdentificacionFk }}</td>
        </tr>
        <tr>
            <td class="titulo">NUMERO IDENTIFICACIÓN:</td>
            <td class="td-in-well">{{ arCliente.numeroIdentificacion }}</td>
            <td class="titulo">CIUDAD:</td>
            <td class="td-in-well">{{ arCliente.ciudadRel.nombre }}</td>
        </tr>
        <tr>
            <td class="titulo">DÍGITO VERIFICACIÓN:</td>
            <td class="td-in-well">{{ arCliente.digitoVerificacion }}</td>
            <td class="titulo">NOMBRE CORTO:</td>
            <td class="td-in-well">{{ arCliente.nombreCorto }}</td>
        </tr>
        <tr>
            <td class="titulo">NOMBRES:</td>
            <td class="td-in-well">{{ arCliente.nombres }}</td>
            <td class="titulo">APELLIDO 1:</td>
            <td class="td-in-well">{{ arCliente.apellido1 }}</td>
        </tr>
        <tr>
            <td class="titulo">APELLIDO 2:</td>
            <td class="td-in-well">{{ arCliente.apellido2 }}</td>
            <td class="titulo">DIRECCIÓN:</td>
            <td class="td-in-well">{{ arCliente.direccion }}</td>
        </tr>
        <tr>
            <td class="titulo">TELÉFONO:</td>
            <td class="td-in-well">{{ arCliente.telefono }}</td>
            <td class="titulo">CELULAR:</td>
            <td class="td-in-well">{{ arCliente.celular }}</td>
        </tr>
        <tr>
            <td class="titulo">EMAIL:</td>
            <td class="td-in-well">{{ arCliente.email }}</td>
        </tr>
        </tbody>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#contactos" data-toggle="tab">Contactos</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="sucursales">
            <div id="sucursales" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover tabla-informacion">
                        <thead>
                        <tr>
                            <th>CODIGO</th>
                            <th title="Número de identificación">IDENTIFICACION </th>
                            <th>NOMBRE</th>
                            <th>DIRECCIÓN</th>
                            <th>TELÉFONO</th>
                            <th>SALUDO</th>
                            <th>CORREO</th>
                            <th>CARGO</th>
                            <th>ESPECIALIDAD</th>
                            <th>HORA  VISITA</th>
                            <th>SECRETARIA</th>
                            <th>CIUDAD</th>
                            <td></td>
                            <th class="text-center" title="seleccionar todas los grupos"><input type="checkbox" name="ChkSeleccionarTodos" onclick="ChequearTodosTabla(this, 'ChkSeleccionar[]')"> </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arContacto in arContactos %}
                            <tr>
                                <td>{{ arContacto.codigoContactoPk }}</td>
                                <td>{{ arContacto.numeroIdentificacion }}</td>
                                <td>{{ arContacto.nombreCorto }}</td>
                                <td>{{ arContacto.direccion }}</td>
                                <td>{{ arContacto.telefono }}</td>
                                <td>{{ arContacto.saludo }}</td>
                                <td>{{ arContacto.correo }}</td>
                                <td>{{ arContacto.cargo }}</td>
                                <td>{{ arContacto.especialidad }}</td>
                                <td>{{ arContacto.horarioVisita }}</td>
                                <td>{{ arContacto.secretaria }}</td>
                                <td>{{ arContacto.ciudadRel.nombre }}</td>
                                <td style="text-align: center;">
                                    <a
                                       href="javascript:abrirVentana3('{{ path('crm_administracion_comercial_cliente_detalle_nuevo', { 'id':  arContacto.codigoContactoPk, 'codigoCliente': arCliente.codigoClientePk  }) }}', 'nuevoContacto', 600, 900)">
                                        <i class="fa fa-edit" style="color: black;font-size: large;"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <input type="checkbox" name="ChkSeleccionar[]" value="{{ arContacto.codigoContactoPk }}"/>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminar,  { 'attr': {'class': 'btn btn-danger'}}) }}
                    </div>
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm"
                           href="javascript:abrirVentana3('{{ path('crm_administracion_comercial_cliente_detalle_nuevo', { 'id': 0, 'codigoCliente': arCliente.codigoClientePk  }) }}', 'nuevoContacto', 600, 900)">Nuevo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
