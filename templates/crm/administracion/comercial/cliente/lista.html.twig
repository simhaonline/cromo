{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header role="heading" class="ui-sortable-handle">
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Filtro</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="form-group form-group-sm">
                        <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.TxtNombre , { 'attr': {'class': 'form-control','autofocus':true, 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
            <tr>
                <th>CÓDIGO</th>
                <th>NOMBRE</th>
                <td>NUMERO IDENTIFICACIÓN</td>
                <td>DÍGITO VERIFICACIÓN</td>
                <td>CIUDAD</td>
                <td>DIRECCIÓN</td>
                <th></th>
                <th></th>
                <th class="text-center" title="seleccionar todas los grupos"><input type="checkbox" name="ChkSeleccionarTodos" onclick="ChequearTodosTabla(this, 'ChkSeleccionar[]')"> </th>
            </tr>
        </thead>
        {% for arClientes in arClientes %}
            <tr>
                <td>{{ arClientes.codigoClientePk }}</td>
                <td>{{ arClientes.nombreCorto }}</td>
                <td>{{ arClientes.numeroIdentificacion }}</td>
                <td>{{ arClientes.digitoVerificacion }}</td>
                <td>{{ arClientes.ciudad }}</td>
                <td>{{ arClientes.direccion }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('crm_administracion_comercial_cliente_nuevo',{'id': arClientes.codigoClientePk }) }}"><i
                                class="fa fa-edit" style="color: black;font-size: large;"></i></a>
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('crm_administracion_comercial_cliente_detalle_nuevo',{'id' : arClientes.codigoClientePk}) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td class="text-center">
                    <input type="checkbox" name="ChkSeleccionar[]" value="{{ arClientes.codigoClientePk  }}"/>
                </td>
            </tr>
        {% endfor %}
    </table>
    <!-- Botones Menu Items -->
    <div class="btn-toolbar">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arClientes.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arClientes) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.btnEliminar,  { 'attr': {'class': 'btn btn-danger'}}) }}
            </div>
            <div class="btn-group">
                {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm"
                   href="{{ path('crm_administracion_comercial_cliente_nuevo', {'id': 0}) }}">Nuevo</a>
            </div>
    </div>
    </div>
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
