{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Código:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.identificacionRel) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.ciudadRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Identificion:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numeroIdentificacion) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Digito:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.digitoVerificacion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Nombres:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombres) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Nombre corto:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombreCorto) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Primer apellido:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.apellido1) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Segundo apellido:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.apellido2) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Dirección:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.direccion) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Teléfono:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.telefono) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Celular:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.celular) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Email:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.email) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm"
           href="{{ path('crm_administracion_control_cliente_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
