{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Identificación:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numeroIdentificacion) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombreCorto) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Direccion:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.direccion) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Teléfono:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.telefono) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-2 control-label">Saludo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.saludo) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Cargo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cargo) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Especialidad:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.especialidad) }}
                </div>
                <label for="form_clienteRel" class="col-sm-2 control-label">Horario visita:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.horarioVisita) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Secretaria:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.secretaria) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Correo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.correo) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
