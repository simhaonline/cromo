{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label  class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label  class="col-sm-2 control-label">Fecha cierre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaCierre, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Fecha negocio:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaNegocio, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label  class="col-sm-2 control-label">Valor:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.valor, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label  class="col-sm-2 control-label">fase:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.faseRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label  class="col-sm-2 control-label">Cliente:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.clienteRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label  class="col-sm-2 control-label">Contacto:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.contactoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm"
           href="{{ path('crm_movimiento_comercial_negocio_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
