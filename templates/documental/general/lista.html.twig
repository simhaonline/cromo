{% extends 'base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    
    <h3>Lista archivos</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Masivo</div>
        <div class="panel-body">
            <div>                      
                <table  class="table table-striped table-bordered table-condensed table-hover">
                    <tr>
                        <th>ID</th>
                        <th>IDENTIFICADOR</th>
                        <th></th>
                    </tr>
                    {% for arArchivos in arArchivos %}
                    <tr>
                        <td><input type="hidden" name="LblCodigo[]" value="{{ arArchivos.codigoMasivoPk }}">{{ arArchivos.codigoMasivoPk }} </td>
                        <td>{{ arArchivos.identificador  }}</td>
                        <td style="text-align: center"><a href="{{ path('documental_general_general_descargar', { 'codigo': arArchivos.codigoMasivoPk }) }}"><i class="fa fa-download" style="font-size: large;color: black;"></i></a></td>
                    </tr>
                    {% endfor %}
                </table>
                {{ knp_pagination_render(arArchivos) }}
            </div>                                            
        </div>
    </div>
</div>
{% endblock %}
