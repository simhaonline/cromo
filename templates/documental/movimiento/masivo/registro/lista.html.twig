{% extends 'base_documental.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Identificador:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtIdentificador, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>IDENTIFICADOR</th>
            </tr>
            </thead>
            <tbody>
            {% for arRegistro in arRegistros %}
                <tr>
                    <td>{{ arRegistro.codigoRegistroPk }}</td>
                    <td>{{ arRegistro.identificador }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arRegistros.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-toolbar">
        <div class="btn-group" style="float: right;">
            <a class="btn btn-sm btn-default"
               href="{{ path('documental_movimiento_masivo_registro_carga') }}">Carga</a>
        </div>
    </div>
    <div class="btn-group btn-xs">
        {{ knp_pagination_render(arRegistros) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
