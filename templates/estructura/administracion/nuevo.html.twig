{% extends 'base.html.twig' %}
{% block content %}
    <br>
    {{ form_start(form,{'attr':{'class' : 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                {% set contador = 0 %}
                {% for input in form.children %}
                    {% set input = obtenerFormView(form,input.vars.name) %}
                    {% if  input.vars.block_prefixes.1 is not same as('submit') and input.vars.block_prefixes.1 is not same as('hidden') %}
                        {% set label = input.vars.label %}
                        {% if contador is divisible by(2) and contador != 0 %}
                            </div>
                            <div class="form-group form-group-sm">
                                <label for=""
                                       class="col-sm-2 control-label">{{ label }}</label>
                                <div class="col-sm-4">
                                    {{ form_widget(input) }}
                                </div>
                        {% else %}
                            <label for=""
                                   class="col-sm-2 control-label">{{ label }}</label>
                            <div class="col-sm-4">
                                {{ form_widget(input) }}
                            </div>
                        {% endif %}
                        {% set contador = contador + 1 %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="btn-toolbar">
            <div class="btn-group" style="float: left;">
                <a class="btn btn-sm btn-default"
                   href="{{ path('administracion_lista',{'modulo' : modulo,'entidad' : entidad }) }}">Cancelar</a>
            </div>
            <div class="btn-group" style="float: right;">
                {{ form_widget(form.guardar) }}
            </div>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form) }}
{% endblock %}