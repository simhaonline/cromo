{% extends 'base_'~arEntidad.modulo~'.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class='page-header'>
                <a href="{{ path('admin_navigator',{'modulo':arEntidad.modulo}) }}" class="link-black">
                    {{ arEntidad.modulo | capitalize }}
                </a>
                <a href="{{ path('admin_navigator',{'modulo':arEntidad.modulo,'funcion':arEntidad.funcion}) }}"
                   class="link-black">
                    {{ arEntidad.funcion }}
                </a>
                <small style='font-size: 20px'>
                    <a href="{{ path('admin_navigator',{'modulo':arEntidad.modulo,'funcion':arEntidad.funcion,'grupo': arEntidad.grupo}) }}"
                       class="link-grey">
                        {{ arEntidad.grupo|capitalize }}:
                    </a>
                    <a href="{{ path('admin_navigator',{'modulo':arEntidad.modulo,'funcion':arEntidad.funcion,'grupo': arEntidad.grupo, 'entidad': arEntidad.entidad}) }}"
                       class="link-grey">
                        {{ arEntidad.entidad }} detalle
                    </a>
                </small>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            {% set ar = [] %}
            {% for arrCampo in arrCampos %}
        <tr>
            <td class="titulo">{{ arrCampo.alias }}</td>
            {{ validarTipoDetalle(arRegistros[0][arrCampo.alias]) }}
        </tr>
        </td>
        </tr>
        <tr>
            {% endfor %}
            {% for llave,dato in ar %}
        <tr>
            <td class="titulo">{{ llave }}</td>
            <td colspan="5">{{ dato }}</td>
        </tr>
        {% endfor %}
        </tr>
    </table>
    <hr>
    <div style="float: left">
        <a href="{{ path('admin_lista',{'modulo':arEntidad.modulo,'entidad':arEntidad.entidad }) }}"
           class="btn btn-sm btn-default">Volver</a>
    </div>
{% endblock %}