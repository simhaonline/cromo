{% extends arConfiguracionEntidad.base %}
{% block content %}
    {{ form_start(form) }}
    <div style="float: right;padding-right: 5px;">
        <a href="javascript:abrirVentana3('{{ path('configuracion_entidad',{'entidad':arConfiguracionEntidad.codigoConfiguracionEntidadPk}) }}', 'ConfiguracionEntidad', 700, 900)"><i
                    class="fa fa-gear"></i></a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            {% if arRegistros.getTotalItemCount > 0 %}
                {% for llave,dato in arRegistros[0] %}
                    <th>{{ llave }}</th>
                {% endfor %}
                <th></th>
                {% if rutaDetalle != null %}
                    <th></th>
                {% endif %}
                <th></th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for llave,datos in arRegistros %}
            <tr>
                {% for key,dato in datos %}
                    {% if isDate(dato) %}
                        <td style="text-align: center">{{ dateAnswer(dato) }}</td>
                    {% elseif isBoolean(dato) %}
                        <td style="text-align: center">{{ boolAnswer(dato) }}</td>
                    {% else %}
                        <td style="text-align: center">{{ dato }}</td>
                    {% endif %}
                {% endfor %}
                <td style="text-align: center">
                    {% if rutaNuevo != null %}
                        <a href="{{ path(rutaNuevo, { 'id': datos.ID}) }}"><i
                                    class="fa fa-edit" style="font-size: large"></i>
                        </a>
                    {% endif %}
                    {% if rutaDetalle != null %}
                <td style="text-align: center"><a href="{{ path(rutaDetalle, { 'id': datos.ID}) }}"><i
                                class="fa fa-share-square-o" style="font-size: large"></i></a></td>
                {% endif %}
                </td>
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]"
                                                      value="{{ datos.ID }}"/></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRegistros.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRegistros) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel) }}
        </div>
        {% if rutaNuevo != null %}
            <div class="btn-group">
                <a class="btn btn-default btn-sm"
                   href="{{ path( rutaNuevo,{'id':0}) }}">Nuevo
                </a>
            </div>
        {% endif %}
        <div class="btn-group">
            {{ form_widget(form.btnEliminar) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

