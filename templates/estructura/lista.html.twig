{% extends arConfiguracionEntidad.base %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {{ crearTitulo(arConfiguracionEntidad,1) }}
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {% if filtrar %}
        <div class="panel panel-default">
            <div class="panel-heading">
                Filtros de b√∫squeda
            </div>
            <div class="panel-body">
                {{ form_start(formFiltro) }}
                {{ form_widget(formFiltro) }}
                {{ form_rest(formFiltro) }}
            </div>
            <div class="panel-footer" style="padding-bottom: 35px;">
                <div style="float: right;">
                    {{ form_widget(formFiltro.btnFiltrar) }}
                    {{ form_end(formFiltro) }}
                </div>
            </div>
        </div>
    {% endif %}
    <div style="float: right;padding-right: 5px;">
        <a href="javascript:abrirVentana3('{{ path('configuracion_entidad',{'entidad':arConfiguracionEntidad.codigoConfiguracionEntidadPk}) }}', 'ConfiguracionEntidad', 700, 900)"><i
                    class="fa fa-gear"></i></a>
    </div>
    {{ form_start(form) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            {% if arRegistros.getTotalItemCount > 0 %}
                {% for llave,dato in arRegistros[0] %}
                    <th>{{ llave }}</th>
                {% endfor %}
                {% if entidadCubo != "" %}
                    <th></th>
                {% endif %}
                <th></th>
                <th></th>
                <th></th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for llave,datos in arRegistros %}
            <tr>
                {% for key,dato in datos %}
                    {{ validarTipo(dato) }}
                {% endfor %}
                {% if entidadCubo != "" %}
                    <td style="text-align: center"><!-- Example single danger button -->
                        <a class="btn btn-xs btn-primary"
                           href="javascript:abrirVentana3('{{ path('lista_cubo_entidad',{'entidadCubo':entidadCubo,'id': datos.ID,'opcion':'lista'}) }}', 'Lista', 600, 1200)">Ejecutar</a>
                    </td>
                {% endif %}
                <td style="text-align: center">
                    <a href="{{ path('nuevo', {'entidad': arConfiguracionEntidad.codigoConfiguracionEntidadPk,'id': datos.ID,'entidadCubo':entidadCubo }) }}"><i
                                class="fa fa-edit" style="font-size: large"></i>
                    </a>
                <td style="text-align: center">

                    <a href="{{ path('detalle', { 'entidad': arConfiguracionEntidad.codigoConfiguracionEntidadPk,'id': datos.ID,'entidadCubo':entidadCubo }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large">
                        </i>
                    </a>
                </td>
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]"
                                                      value="{{ datos.ID }}"/></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRegistros.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRegistros) }}
    </div>
    <div class="btn-toolbar" style="float: left">
        {% if(arConfiguracionEntidad.codigoConfiguracionEntidadPk != "GenCubo") %}
            <div class="btn-group">
                <a class="btn btn-default btn-sm"
                   href="{{ path('lista',{'entidad': 'GenCubo','entidadCubo':arConfiguracionEntidad.codigoConfiguracionEntidadPk}) }}"><i
                            class="fa fa-cube"></i>
                </a>
            </div>
        {% else %}
            <a href="{{ path('lista',{'entidad': entidadCubo }) }}"
               class="btn btn-sm btn-default">Volver</a>
        {% endif %}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('nuevo',{'entidad': arConfiguracionEntidad.codigoConfiguracionEntidadPk,'id': 0,'entidadCubo': entidadCubo}) }}">Nuevo
            </a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnEliminar) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

