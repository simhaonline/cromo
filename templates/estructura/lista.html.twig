{% extends arConfiguracionEntidad.base %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {{ crearTitulo(arConfiguracionEntidad,1)}}
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {{ form_start(form) }}
    <div style="float: right;padding-right: 5px;">
        <a href="javascript:abrirVentana3('{{ path('configuracion_entidad',{'entidad':arConfiguracionEntidad.codigoConfiguracionEntidadPk}) }}', 'ConfiguracionEntidad', 700, 900)"><i
                    class="fa fa-gear"></i></a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            {% if arRegistros.getTotalItemCount > 0 %}
                {% for llave,dato in arRegistros[0] %}
                    <th>{{ llave }}</th>
                {% endfor %}
                <th></th>
                <th></th>
                <th></th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for llave,datos in arRegistros %}
            <tr>
                {% for key,dato in datos %}
                    {{ validarTipo(dato) }}
                {% endfor %}
                <td style="text-align: center">
                    {% if rutaNuevo != null %}
                        <a href="{{ path(rutaNuevo, { 'id': datos.ID}) }}"><i
                                    class="fa fa-edit" style="font-size: large"></i>
                        </a>
                    {% endif %}
                <td style="text-align: center">
                    <a href="{{ path('detalle', { 'entidad': arConfiguracionEntidad.codigoConfiguracionEntidadPk,'id': datos.ID }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large">
                        </i>
                    </a>
                </td>
                </td>
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]"
                                                      value="{{ datos.ID }}"/></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRegistros.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRegistros) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel) }}
        </div>
        {% if rutaNuevo != null %}
            <div class="btn-group">
                <a class="btn btn-default btn-sm"
                   href="{{ path( rutaNuevo,{'id':0}) }}">Nuevo
                </a>
            </div>
        {% endif %}
        <div class="btn-group">
            {{ form_widget(form.btnEliminar) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

