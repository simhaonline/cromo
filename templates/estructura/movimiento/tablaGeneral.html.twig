<div class="table-responsive">
    <table class='table table-striped table-bordered table-hover'>
        <thead>
        <tr>
            {% for campo in arrDatosLista.arrCampos %}
                <th title="{{ campo.ayuda }}">{{ campo.titulo }}</th>
            {% endfor %}
            <th></th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arDato in arrDatosLista.arDatos %}
            <tr>
                {% for campo in arrDatosLista.campos %}
                    <td>
                        {% if campo.tipo == "fecha" %}
                            {{ arDato[campo.campo]  | date('Y-m-d') }}
                        {% else %}
                            {{ arDato[campo.campo]  }}
                        {% endif %}
                    </td>
                {% endfor %}
                <td style="text-align: center;">
                    {% if arDato.estadoAutorizado == 0 %}
                        <a href="{{ path(arrDatosLista.ruta ~ '_nuevo',{'id' : arDato[arrDatosLista.campos[0].campo] }) }}"><i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;"></i></a>
                    {% endif %}
                </td>
                <td style="text-align: center"><a href="{{ path(arrDatosLista.ruta ~ '_detalle', { 'id': arDato[arrDatosLista.campos[0].campo] }) }}"><img src="{{ asset('../public/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDato[arrDatosLista.campos[0].campo] }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="btn-group" style="float: left">
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arrDatosLista.arDatos.getTotalItemCount }}</span>
        </div>
    </div>
</div>

<div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
    {{ knp_pagination_render(arrDatosLista.arDatos) }}
</div>
