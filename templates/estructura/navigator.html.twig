{% block content %}
    <h3>Navigator</h3>
    <ul class="list-group list-group-flush" style="width: 40%;">
        <li class="list-group-item active">{{ arRutas[0].modulo |capitalize }}</li>
            <ul>
                <li>{{ arRutas[0].funcion|capitalize }}</li>
                    <ul>
                        <li>{{ arRutas[0].grupo|capitalize }}
                            <ul>
                                <li>
                                    {{ arRutas[0].entidad | capitalize }}
                                </li>
        {% for arRuta in arRutas %}

            {% set grupoActivo = arRuta.grupo %}
            {% set funcionActiva = arRuta.funcion %}
            {% set moduloActivo = arRuta.modulo %}

            {% if grupoActivo == arRuta.grupo %}
                                <li>
                                    {{ arRuta.entidad|capitalize }}
                                </li>
            {% else %}
                            </ul>
                        </li>
                        <li>{{ arRuta.grupo }}
                            <ul>
                                <li>
                                    {{ arRuta.entidad }}
                                </li>
                {% if funcionActiva == arRuta.funcion %}
                {% else %}
                    {% if grupoActivo != arRuta.grupo %}
                    {% else %}
                    {% endif %}
                {% endif %}
            {% endif %}
        {% endfor %}
{% endblock %}