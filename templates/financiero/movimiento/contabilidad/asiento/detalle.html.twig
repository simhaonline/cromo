{% extends 'base_financiero.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('financiero_movimiento_contabilidad_asiento_lista') }}">Volver</a>&nbsp;&nbsp;
        </div>
        <div class="btn-group">
            {% include 'estructura/botonera.html.twig' %}
        </div>
    </div>
    <div style="float:right">
        {% if arAsiento.estadoAutorizado == true %}<span class="label label-default">Autorizado</span>{% endif %}
        {% if arAsiento.estadoAprobado == true %}<span class="label label-success">Aprobado</span>{% endif %}
        {% if arAsiento.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}
    </div>

    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">CODIGO:</td>
            <td class="td-in-well">{{ arAsiento.codigoAsientoPk }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arAsiento.fecha | date('') }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>CUENTA</th>
                            <th>DEBITO</th>
                            <th>CREDITO</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arAsientoDetalle in arAsientoDetalles %}
                            <tr>
                                <td>{{ arAsientoDetalle.codigoAsientoDetallePk }}<input type="hidden" name="TxtCodigo[]" value="{{ arAsientoDetalle.codigoAsientoDetallePk }}"></td>

                                <td style="text-align: center;">
                                    <input type="text" name="arrCuenta[{{ arAsientoDetalle.codigoAsientoDetallePk }}]" id="arrCuenta[{{ arAsientoDetalle.codigoAsientoDetallePk }}]" value="{{ arAsientoDetalle.codigoCuentaFk }}" style="text-align: left; width:120px" size="20">
                                    <a href="javascript:abrirVentana3('{{ path('financiero_buscar_cuenta_asiento',{'campoCodigo' : 'arrCuenta['~ arAsientoDetalle.codigoAsientoDetallePk ~']' }) }}','BuscarCuenta',600,900)" class="btn-xs btn btn-default" style="height: 20px;">..</a>
                                </td>

                                <td style="text-align: center;">
                                    {% if not arAsiento.estadoAutorizado %}
                                        <input style="text-align: right;" type="text" name="TxtDebito[{{ arAsientoDetalle.codigoAsientoDetallePk }}]" value="{{ arAsientoDetalle.vrDebito }}" size="10" style="width:70px">
                                    {% else %}
                                        {{ arAsientoDetalle.vrDebito | number_format(0, '.', ',') }}
                                    {% endif %}
                                </td>
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arAsientoDetalle.codigoAsientoDetallePk }}"/>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {% if arAsiento.estadoAutorizado == true %}
                            <input type="button" class="btn btn-default btn-sm" href="#" disabled="disabled"
                                   value="Nuevo"/>
                        {% else %}
                            {#<a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('financiero_movimiento_contabilidad_asiento_detalle_nuevo', {'codigoAsiento':arAsiento.codigoAsientoPk }) }}', 'AsientoAdicionarDetalle', 600, 900)">Nuevo</a>#}
                        {% endif %}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnActualizarDetalle) }}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminar) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
