{% extends 'base_financiero.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>NIT</th>
            <th>P_NOMBRE</th>
            <th>S_NOMBRE</th>
            <th>P_APELLIDO</th>
            <th>S_APELLIDO</th>
        </tr>
        </thead>
        <tbody>
        {% for arTercero in arTerceros %}
            <tr>
                <td>{{ arTercero.numeroIdentificacion }}</td>
                <td>{{ arTercero.nombre1 }}</td>
                <td>{{ arTercero.nombre2 }}</td>
                <td>{{ arTercero.apellido1 }}</td>
                <td>{{ arTercero.apellido2 }}</td>
            </tr>
        {% endfor %}
    </table>
    <div>
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arTerceros.getTotalItemCount }}</span>
            </div>
        </div>

        <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arTerceros) }}
        </div>
        <div class="btn-toolbar">
            <div class="btn-group" style="float: right;">
                {{ form_widget(form.btnIlimitada, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

