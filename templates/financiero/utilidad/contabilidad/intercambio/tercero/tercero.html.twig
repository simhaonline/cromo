{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>IDENTIFICACION</th>
            <th>TIPO</th>
            <th>NOMBRE</th>
            <th>DIRECCION</th>
            <th>CIUDAD</th>
            <th>TELEFONO</th>
        </tr>
        </thead>
        <tbody>
        {% for arTercero in arTerceros %}
            <tr>
                <td>{{ arTercero.numeroIdentificacion }}</td>
                <td>{{ arTercero.codigoIdentificacionFk }}</td>
                <td>{{ arTercero.nombreCorto }}</td>
                <td>{{ arTercero.direccion }}</td>
                <td>{{ arTercero.ciudadNombre }}</td>
                <td>{{ arTercero.telefono }}</td>
            </tr>
        {% endfor %}
    </table>
    <div>
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arTerceros.getTotalItemCount }}</span>
            </div>
        </div>

        <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arTerceros) }}
        </div>
        <div class="btn-toolbar">
            <div class="btn-group" style="float: right;">
                {{ form_widget(form.btnIlimitada, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

