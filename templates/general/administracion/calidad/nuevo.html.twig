{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Numero:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_fechaVence" class="col-sm-2 control-label">Prefijo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.prefijo) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Fecha desde:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Fecha hasta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaVence" class="col-sm-2 control-label">Numero desde:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numeroDesde) }}
                </div>
                <label for="form_fechaVence" class="col-sm-2 control-label">Numero hasta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numeroHasta) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('general_administracion_general_resolucion_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
