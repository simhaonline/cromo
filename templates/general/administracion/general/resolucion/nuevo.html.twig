{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_examenClaseRel" class="col-sm-2 control-label">Código:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.codigoVacacionTipoPk) }}
                    {{ form_errors(form.codigoVacacionTipoPk) }}
                </div>
                <label for="form_entidadExamenRel" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_examenClaseRel" class="col-sm-2 control-label">Concepto dinero:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.conceptoDineroRel) }}
                    {{ form_errors(form.conceptoDineroRel) }}
                </div>
                <label for="form_entidadExamenRel" class="col-sm-2 control-label">Concepto disfrute:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.conceptoDisfrutadaRel) }}
                    {{ form_errors(form.conceptoDisfrutadaRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_examenClaseRel" class="col-sm-2 control-label">Consecutivo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.consecutivo) }}
                    {{ form_errors(form.consecutivo) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('recursohumano_administracion_nomina_vacaciontipo_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
