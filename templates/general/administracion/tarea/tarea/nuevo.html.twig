{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-editbutton="false"
         data-widget-fullscreenbutton="true">
        <header>
            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
            <h2>Nuevo</h2>
        </header>
        <div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="" class="control-label col-sm-1">Titulo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.titulo) }}
                    </div>
                    <label for="" class="control-label col-sm-1">Prioridad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.tareaPrioridadRel) }}
                    </div>

                </div>
                <div class="form-group form-group-sm">
                    <label for="" class="control-label col-sm-1">Asignar a:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.usuarioRecibeRel) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="" class="control-label col-sm-1">Descripcion:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.descripcion) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(form.guardar) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
