{% extends 'base_general.html.twig' %}
{% block content %}
    <br>
    <br>
    {{ form_start(form,{'attr' :{'class':'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Tercero:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.tercero) }}
                </div>
                <label for="" class="control-label col-sm-2">Identificación:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.identificacion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Modulo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.modulo) }}
                </div>
                <label for="" class="control-label col-sm-2">Numero:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numero) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group">
                {{ form_widget(form.btnFiltrar) }}
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NUMERO</th>
            <th>IDENTIFICACIÓN</th>
            <th>CLIENTE</th>
            <th>TIPO</th>
            <th>MODULO</th>
            <th>FECHA</th>
            <th>VENCE</th>
            <th>TOTAL</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arFactura in arFacturas %}
            <tr>
                <td>{{ arFactura.codigoFacturaPk }}</td>
                <td>{{ arFactura.numero }}</td>
                <td>{{ arFactura.identificacion }}</td>
                <td>{{ arFactura.tercero }}</td>
                <td>{{ arFactura.facturaTipo }}</td>
                <td>{{ arFactura.modulo }}</td>
                <td>{{ arFactura.fecha | date('Y-m-d')}}</td>
                <td>{{ arFactura.fechaVence | date('Y-m-d')}}</td>
                <td>{{ arFactura.vrTotal | number_format(0,'.',',') }}</td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-toolbar">
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.btnExportar) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}