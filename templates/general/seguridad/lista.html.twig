{% extends 'base_general.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class='page-header'>
                General seguridad
                <small style="font-size: 20px">usuario: lista</small>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>USERNAME</th>
                <th>EMAIL</th>
                <th>ACTIVO</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for arUsuario in arUsuarios %}
                <tr>
                    {{ validarTipo(arUsuario.username) }}
                    {{ validarTipo(arUsuario.email) }}
                    {{ validarTipo(arUsuario.isActive) }}
                    <td style="text-align: center;">
                        <a href="{{ path('gen_seguridad_usuario_nuevo', {'hash' : encriptar( arUsuario.id)}) }}">
                            <i class="fa fa-edit" style="font-size: large">
                            </i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div style="float: right;">
        <a class="btn btn-sm btn-default" href="{{ path('gen_seguridad_usuario_nuevo',{'hash' : 0}) }}" >Nuevo</a>
    </div>
{% endblock %}

