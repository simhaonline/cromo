{% extends 'base_general.html.twig' %}
{% block content %}
            <div class="row">
                <div class="col-lg-12">
                    <h3 >
                        <small style="font-size: 20px">
                            {% if arUsuarioNombre%}
                                {{ arUsuarioNombre}}
                            {% endif%}</small>
                    </h3>
                </div>
                <!-- /.col-lg-12 -->
            </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th rowspan="2">MODELO</th>
                <th colspan="6">PERMISOS</th>
                <th rowspan="2"></th>
            </tr>
            <tr>
                <th>LISTA</th>
                <th>NUEVO</th>
                <th>DETALLE</th>
                <th>AUTORIZAR</th>
                <th>APROBAR</th>
                <th>ANULAR</th>
            </tr>
            </thead>
            <tbody>
            {% for arSeguridadUsuarioModelo in arSeguridadUsuarioModelo %}
                <tr>
                    <td>
                        {{ arSeguridadUsuarioModelo.modelo }}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.lista %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.detalle %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.nuevo %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.autorizar %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.aprobar %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.anular %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td style="text-align: center;">
                        <a class="btn btn-xs btn-default" title="Cambiar permisos"
                           href="javascript:abrirVentana3('{{ path('gen_seguridad_usuario_nuevo_clave',{'hash' : encriptar(arSeguridadUsuarioModelo.codigoSeguridad)}) }}','editarPermisos',600,900)">
                            <i class="fa fa-edit" style="font-size: large;color: blue;">
                            </i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="btn-toolbar">
        <div style="float: right;" class="btn-group">
            <a class="btn btn-sm btn-default" href="javascript:abrirVentana3('{{ path('general_seguridad_usuario_modelo_nuevo',{'hash' : 0}) }}','editarPermisos',600,900)">Nuevo</a>
        </div>
    </div>
{% endblock %}
