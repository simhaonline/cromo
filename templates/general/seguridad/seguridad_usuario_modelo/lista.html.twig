{% extends 'base_general.html.twig' %}
{% block content %}
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td >USUARIO:</td>
            <td class="td-in-well">{% if arUsuarioNombre%}
                    {{ arUsuarioNombre}}
                {% endif%}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div>
        <br>
        {{ form_start(form, {'attr':{'class':'form_horizontal'}}) }}
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th rowspan="2">TIPO</th>
                <th rowspan="2">MODELO</th>
                <th colspan="6">PERMISOS</th>
                <th rowspan="2"></th>
                <th rowspan="2">
                    <input type="checkbox" name="chkSeleccionarTodosPermisos" id="chkSeleccionarTodosPermisos" onclick="ChequearTodosTabla(this, 'ChkSeleccionarPermiso[]')" />
                </th>
            </tr>
            <tr>
                <th>LISTA</th>
                <th>NUEVO</th>
                <th>DETALLE</th>
                <th>AUTORIZAR</th>
                <th>APROBAR</th>
                <th>ANULAR</th>
            </tr>
            </thead>
            <tbody>
            {% for arSeguridadUsuarioModelo in arSeguridadUsuarioModelo %}
                <tr>
                    <td>
                        {{ arSeguridadUsuarioModelo.tipo }}
                    </td>
                    <td>
                        {{ arSeguridadUsuarioModelo.modelo }}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.lista %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.detalle %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.nuevo %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.autorizar %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.aprobar %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if arSeguridadUsuarioModelo.anular %}
                            {{ "Si" }}
                        {% else %}
                            {{ "No" }}
                        {% endif %}
                    </td>
                    <td style="text-align: center;">
                        <a  title="Cambiar permisos"
                           href="javascript:abrirVentana3('{{ path('general_seguridad_usuario_modelo_editar',{'hash' : hash,'codigoSeguridadUsuarioModelo':arSeguridadUsuarioModelo.codigoSeguridad}) }}','editarPermisos',600,900)">
                            <i class="fa fa-edit" style="font-size: large;color: black;">
                            </i>
                        </a>
                    </td>
                    <td style="text-align: center;">
                        <input type="checkbox" name="ChkSeleccionarPermiso[]" value="{{arSeguridadUsuarioModelo.codigoSeguridad  }}"/>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="modal-footer">
            <a class="btn btn-sm btn-default" href="javascript:abrirVentana3('{{ path('general_seguridad_usuario_modelo_nuevo',{'hash' : hash}) }}','editarPermisos',600,900)">Nuevo</a>
            {#<a class="btn btn-sm btn-danger" href="{{ path('general_seguridad_usuario_modelo_eliminar') }}">Eliminar</a>#}
        {{ form_widget(form.btnEliminar,{'attr':{'class':'btn btn-sm btn-danger'}}) }}
    </div>
        {{ form_end(form) }}
{% endblock %}
