{%  extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtro busqueda</div>
        <div class="panel-body">

            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Modulo:</label>
                <div class="col-sm-4">
                    {{form_widget(form.cboModulo, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Proceso tipo:</label>
                <div class="col-sm-4">
                    {{form_widget(form.cboTipoProceso, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} ,'onclick':'ChequearTodos()' })}}
                </div>
            </div>
        </div>
    </div>

    <div>
        <table class="table table-striped table-bordered table-hover tabla-datos">
            <thead>
            <tr>
                <th>MODULO</th>
                <th>TIPO</th>
                <th>PROCESO</th>
                <th>NOMBRE</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
            </tr>
            </thead>
            <tbody>
            {%for arGenProceso in arGenProceso %}
                <tr>
                    <td>{{  arGenProceso.modulo}}</td>
                    <td>{{  arGenProceso.tipo}}</td>
                    <td>{{  arGenProceso.codigoProcesoPk}}</td>
                    <td>{{  arGenProceso.nombre}}</td>
                    <td align="center"><input type="checkbox"  name="ChkSeleccionar[]" value="{{ arGenProceso.codigoProcesoPk }}"/></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" onclick="window.close();">Cancelar</a>
        {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
    </div>
    {{ form_end(form)}}
    <br/><br/><br/><br/>

{% endblock %}
