{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ notificar()|raw }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('tesoreria_movimiento_cuentapagar_cuentapagar_lista') }}">Volver</a>
        </div>
    </div>
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {% include 'estructura/botonera.html.twig' %}
        </div>
        {{ form_widget(form.btnVerificar) }}
    </div>
    <div style="float:right">
        {% if arCuentaPagar.estadoAutorizado == true %}<span class="label label-default">Autorizado</span>{% endif %}
        {% if arCuentaPagar.estadoAprobado == true %}<span class="label label-success">Aprobado</span>{% endif %}
        {% if arCuentaPagar.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}
        {% if arCuentaPagar.estadoVerificado == true %}<span class="label label-success">Verificado</span>{% endif %}
    </div>
    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered tabla-datos">
        <tr>
            <td class="titulo">ID:</td>
            <td class="td-in-well">{{ arCuentaPagar.codigoCuentaPagarPk }}</td>
            <td class="titulo">IDENTIFICACION:</td>
            <td class="td-in-well">{{ arCuentaPagar.terceroRel.numeroIdentificacion | default ('') }}</td>
            <td class="titulo">TERCERO:</td>
            <td class="td-in-well">{{ arCuentaPagar.terceroRel.nombreCorto | default ('') }}</td>
        </tr>
    </table>
    {{ form_end(form) }}
{% endblock %}
