{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">Detalle nuevo</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_apellido1" class="col-sm-2 control-label">Item:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.itemRel, { 'attr': {'class': 'form-control to-select-2'}}) }}
                </div>
                <label for="form_apellido2" class="col-sm-2 control-label">Precio:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.vrPrecio, { 'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_apellido1" class="col-sm-2 control-label">Dias promedio entrega:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.diasPromedioEntrega, { 'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="btn-toolbar" style="float: right">
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
