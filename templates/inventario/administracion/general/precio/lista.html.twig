{% extends 'base_inventario.html.twig' %}
{% block content %}
    <br>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            {#<div class="form-group form-group-sm">#}
                {#<label for="form_TxtCodigo" class="col-sm-2 control-label"></label>#}
                {#<div class="col-sm-4">#}

                {#</div>#}
                {#<label for="form_estadoAutorizado" class="col-sm-1 control-label">Numero:</label>#}
                {#<div class="col-sm-2">#}
                    {#{{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}#}
                {#</div>#}
                {#<label for="form_estadoAutorizado" class="col-sm-1 control-label"></label>#}
                {#<div class="col-sm-2">#}
                {#</div>#}
            {#</div>#}
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>FECHA_VENCE</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arPrecios in arPrecios %}
            <tr>
                <td>{{ arPrecios.codigoPrecioPk }}</td>
                <td>{{ arPrecios.nombre }}</td>
                <td>{{ arPrecios.fechaVence | date('Y-m-d') }}</td>
                <td style="text-align: center"><a href="{{ path('inventario_movimiento_comercial_pedido_detalle', { 'id': arPrecios.codigoPrecioPk }) }}"><img src="{{ asset('../public/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPrecios.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arPrecios) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {#{{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}#}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('inv_adm_general_precio_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

