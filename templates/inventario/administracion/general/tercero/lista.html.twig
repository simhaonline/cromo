{% extends 'base.html.twig' %}
{% block content %}
    <br>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-2 control-label">Tercero:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.codigoTercero) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="form_txtNombreCorto" class="form-control" readonly>

                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('inventario_buscar_tercero', { 'campoCodigo': 'form_codigoTercero', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombreTercero, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-informacion">
        <thead>
        <tr>
            <th>ID</th>
            <th>TIPO</th>
            <th>IDENTIFICACION</th>
            <th>NOMBRE</th>
            <th>DIRECCION</th>
            <th>CIUDAD</th>
            <th>CORREO</th>
            <th>CLI</th>
            <th>PRO</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arTercero in arTerceros %}
            <tr>
                <td>{{ arTercero.codigoTerceroPk }}</td>
                <td>{{ arTercero.codigoIdentificacionFk }}</td>
                <td>{{ arTercero.numeroIdentificacion }}</td>
                <td>{{ arTercero.nombreCorto }}</td>
                <td>{{ arTercero.direccion }}</td>
                <td>{{ arTercero.ciudadNombre }}</td>
                <td>{{ arTercero.email }}</td>
                <td>{{ arTercero.cliente ? 'SI':'NO' }}</td>
                <td>{{ arTercero.proveedor ? 'SI':'NO' }}</td>
                <td style="text-align: center;"><a
                            href="{{ path('inventario_administracion_general_tercero_nuevo',{'id' : arTercero.codigoTerceroPk }) }}">
                        <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('inventario_administracion_general_tercero_detalle',{'id' : arTercero.codigoTerceroPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">

                        </i>
                    </a>
                </td>
                <td style="text-align: center;">
                    <input type="checkbox" name="ChkSeleccionar[]" value="{{ arTercero.codigoTerceroPk }}">
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros
            <span class="badge">{{ arTerceros.getTotalItemCount }}
            </span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arTerceros) }}
    </div>
    <div class="btn-group btn-xs" style="float: left; width: 60px">
        {{ form_widget(form.limiteRegistros) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        {{ form_widget(form.btnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        <a class="btn btn-default btn-sm"
           href="{{ path('inventario_administracion_general_tercero_nuevo', {'id': 0}) }}">Nuevo</a>
    </div>
    <br /><br />
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}