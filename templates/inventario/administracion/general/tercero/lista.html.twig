{% extends 'base_inventario.html.twig' %}
{% block content %}
    <br>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-2 control-label">Tercero:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.txtCodigo) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                {{ form_widget(form.txtNombre) }}
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('inventario_bus_tercero', { 'campoCodigo': 'form_txtCodigo', 'campoNombre': 'form_txtNombre' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>IDENTIFICACION</th>
            <th>NOMBRE</th>
            <th>DIRECCION</th>
            <th>CLI</th>
            <th>PRO</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arTercero in arTerceros %}
            <tr>
                <td>{{ arTercero.codigoTerceroPk }}</td>
                <td>{{ arTercero.numeroIdentificacion }}</td>
                <td>{{ arTercero.nombreCorto }}</td>
                <td>{{ arTercero.direccion }}</td>
                {{ validarTipo(arTercero.cliente) }}
                {{ validarTipo(arTercero.proveedor) }}
                <td style="text-align: center;"><a href="{{ path('inventario_administracion_general_tercero_nuevo',{'id' : arTercero.codigoTerceroPk }) }}">
                        <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('inventario_administracion_general_tercero_detalle',{'id' : arTercero.codigoTerceroPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">

                        </i>
                    </a>
                </td>
                <td style="text-align: center;">
                    <input type="checkbox" name="ChkSeleccionar[]" value="{{ arTercero.codigoTerceroPk }}">
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arTerceros.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arTerceros) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('inventario_administracion_general_tercero_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnEliminar) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}