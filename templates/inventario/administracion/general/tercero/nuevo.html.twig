{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="col-sm-2 control-label">Nit:</label>
                <div class="col-sm-4" style="padding-left: 0px;">
                    <div class="col-sm-6">
                        {{ form_widget(form.numeroIdentificacion) }}
                        {{ form_errors(form.numeroIdentificacion) }}
                    </div>
                    <label for="form_nombre" class="col-sm-3 control-label">Digito ver:</label>
                    <div class="col-sm-3">
                        {{ form_widget(form.digitoVerificacion) }}
                        {{ form_errors(form.digitoVerificacion) }}
                    </div>
                </div>
                <label for="form_fechaVence" class="col-sm-2 control-label">Identificacion tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.identificacionRel) }}
                    {{ form_errors(form.identificacionRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="col-sm-2 control-label">Nombres:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombres) }}
                    {{ form_errors(form.nombres) }}
                </div>
                <label for="form_fechaVence" class="col-sm-2 control-label">Nombre corto:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombreCorto) }}
                    {{ form_errors(form.nombreCorto) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaVence" class="col-sm-2 control-label">Primer apellido:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.apellido1) }}
                    {{ form_errors(form.apellido1) }}
                </div>
                <label for="form_fechaVence" class="col-sm-2 control-label">Segundo apellido:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.apellido2) }}
                    {{ form_errors(form.apellido2) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="col-sm-2 control-label">Cliente</label>
                <div class="col-sm-1">
                    {{ form_widget(form.cliente) }}
                    {{ form_errors(form.cliente) }}
                </div>
                <label for="form_nombre" class="col-sm-1 control-label">Proveedor</label>
                <div class="col-sm-2">
                    {{ form_widget(form.proveedor) }}
                    {{ form_errors(form.proveedor) }}
                </div>
                <label for="form_nombre" class="col-sm-1 control-label">Bloqueo cartera</label>
                <div class="col-sm-2">
                    {{ form_widget(form.bloqueoCartera) }}
                    {{ form_errors(form.bloqueoCartera) }}
                </div>
            </div>
            <hr>
            <div class="form-group form-group-sm">
                <label for="form_fechaVence" class="col-sm-2 control-label">Ciudad:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.ciudadRel) }}
                    {{ form_errors(form.ciudadRel) }}
                </div>
                <label for="form_fechaVence" class="col-sm-2 control-label">Direccion:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.direccion) }}
                    {{ form_errors(form.direccion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaVence" class="col-sm-2 control-label">Telefono:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.telefono) }}
                    {{ form_errors(form.telefono) }}
                </div>
                <label for="form_celular" class="col-sm-2 control-label">Celular:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.celular) }}
                    {{ form_errors(form.celular) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_formaPagoRel" class="col-sm-2 control-label">Forma pago:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.formaPagoRel) }}
                    {{ form_errors(form.formaPagoRel) }}
                </div>
                <label for="form_plazoPago" class="col-sm-2 control-label">Plazo pago:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.plazoPago) }}
                    {{ form_errors(form.plazoPago) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_email" class="col-sm-2 control-label">Email:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
                <label for="form_cupoCompral" class="col-sm-2 control-label">Cupo compra:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cupoCompra) }}
                    {{ form_errors(form.cupoCompra) }}
                </div>
            </div>
            <hr>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-2">
                    {{ form_widget(form.retencionIva) }}
                </div>
                <div class="col-sm-2">
                    {{ form_widget(form.retencionFuente) }}
                </div>
                <div class="col-sm-2">
                    {{ form_widget(form.retencionFuenteSinBase) }}
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Listas de precios</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_precioVentaRel" class="col-sm-2 control-label">Lista de precios de venta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.precioVentaRel) }}
                    </div>
                    <label for="form_precioCompraRel" class="col-sm-2 control-label">Lista de precios de compra:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.precioCompraRel) }}
                    </div>
                </div>
            </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" style="float: left;"
           href="{{ path('inventario_administracion_general_tercero_lista') }}">Volver</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
