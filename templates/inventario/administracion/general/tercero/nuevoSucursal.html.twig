{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Codigo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.codigoSucursalPk) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombre) }}
                </div>
                <label for="" class="control-label col-sm-1">Dirección:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.direccion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Contacto:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.contacto) }}
                </div>
                <label for="" class="control-label col-sm-1">Ciudad:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.ciudadRel) }}
                </div>
            </div>
        </div>
        {{ form_widget(form.terceroRel,{'attr' : {'class':'hidden','required' : 'false'}}) }}
    </div>
    <div class="modal-footer">
        {{ form_widget(form.guardar) }}
        {{ form_widget(form.guardarnuevo) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
