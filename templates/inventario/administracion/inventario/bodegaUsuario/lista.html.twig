{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>USUARIO</th>
            <th>BODEGA</th>
            <th class="text-center" title="SELECCIONAR TODAS LAS BODEGAS"><input type="checkbox"
                                                                                 name="ChkSeleccionarTodos"
                                                                                 onclick="ChequearTodosTabla(this, 'ChkSeleccionar[]')">
            </th>
        </tr>
        </thead>
        <tbody>
        {% for arBodegaUsuario in arBodegaUsuario %}
            <tr>
                <td>{{ arBodegaUsuario.codigoBodegaUsuarioPk }}</td>
                <td>{{ arBodegaUsuario.usuario }}</td>
                <td>{{ arBodegaUsuario.bodega }}</td>
                <td class="text-center">
                    <input type="checkbox" name="ChkSeleccionar[]"
                           value="{{ arBodegaUsuario.codigoBodegaUsuarioPk }}"/>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arBodegaUsuario.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arBodegaUsuario) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group" style="float: right; margin-right: 5px !important;">
            {{ form_widget(form.btnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('inventario_administracion_inventario_bodegausuario_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    <br><br><br>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

