{% extends 'base_inventario.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Codigo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtCodigo, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtNombre, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>MARCA</th>
            <th>EXISTENCIA</th>
            <th>AFECTA INVENTARIO</th>
            <th>C_PROMEDIO</th>
            <th>STOCK MINIMO</th>
            <th>STOCK MAXIMO</th>
            <th>PRECIO PROMEDIO</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arItem in arItems %}
            <tr>
                <td>{{ arItem.codigoItemPk }}</td>
                <td>{{ arItem.nombre }}</td>
                <td>{{ arItem.marcaNombre }}</td>
                <td>{{ arItem.cantidadExistencia }}</td>
                {{ validarTipo(arItem.afectaInventario) }}
                <td class="numero">{{ arItem.vrCostoPredeterminado | number_format }}</td>
                <td>{{ arItem.stockMinimo }}</td>
                <td>{{ arItem.stockMinimo }}</td>
                <td class="numero">{{ arItem.vrPrecioPromedio | number_format }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('inventario_administracion_inventario_item_nuevo',{'id' : arItem.codigoItemPk}) }}">
                        <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('inventario_administracion_inventario_item_detalle',{'id' : arItem.codigoItemPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">

                        </i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arItems.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arItems) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('inventario_administracion_inventario_item_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

