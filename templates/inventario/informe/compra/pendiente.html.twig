{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">
            Filtros
        </div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_solicitudTipoRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.ordenTipoRel) }}
                    {{ form_errors(form.ordenTipoRel) }}
                </div>
                <label for="form_txtNumeroOrdenCompra" class="col-sm-2 control-label">Numero:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtNumero) }}
                    {{ form_errors(form.txtNumero) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group">
                {{ form_widget(form.btnFiltrar) }}
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th title="CODIGO ITEM">CODIGO</th>
                <th title="NUMERO ORDEN DE COMPRA">NUMERO</th>
                <th>NOMBRE</th>
                <th>CAN</th>
                <th>PEN</th>
            </tr>
            </thead>
            <tbody>
            {% for arOrdenCompraDetalle in arOrdenCompraDetalles %}
                <tr>
                    <td style="text-align: right;">{{ arOrdenCompraDetalle.codigoOrdenDetallePk }}</td>
                    <td style="text-align: right;">{{ arOrdenCompraDetalle.codigoItem }}</td>
                    <td style="text-align: right;">{{ arOrdenCompraDetalle.numero }}</td>
                    <td style="text-align: left;">{{ arOrdenCompraDetalle.nombre }}</td>
                    <td style="text-align: right;">{{ arOrdenCompraDetalle.cantidad }}</td>
                    <td style="text-align: right;">{{ arOrdenCompraDetalle.cantidadPendiente }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="btn-toolbar" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arOrdenCompraDetalles.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group" style="float: right;">
        {{ form_widget(form.btnExcel) }}
    </div>
    <div class="btn-group btn-xs">
        {{ knp_pagination_render(arOrdenCompraDetalles) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
