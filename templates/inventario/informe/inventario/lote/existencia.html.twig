{% extends 'base_inventario.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Lote:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtLote, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-1 control-label">Item:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtItem, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Bodega:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtBodega, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-4">
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ITEM</th>
                <th>NOMBRE</th>
                <th>MARCA</th>
                <th>BOD</th>
                <th>LOTE</th>
                <th>EX</th>
                <th>DS</th>
            </tr>
            </thead>
            <tbody>
            {% for arLote in arLotes %}
                <tr>
                    <td>{{ arLote.codigoItemFk }}</td>
                    <td>{{ arLote.itemNombre }}</td>
                    <td>{{ arLote.marca }}</td>
                    <td>{{ arLote.codigoBodegaFk }}</td>
                    <td>{{ arLote.loteFk }}</td>
                    <td class="numero">{{ arLote.cantidadExistencia | number_format(0, '.', ',') }}</td>
                    <td class="numero">{{ arLote.cantidadDisponible | number_format(0, '.', ',') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arLotes.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group" style="float: right">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
    </div>
    <div class="btn-group" style="float: right">
        {{ form_widget(form.btnPdf, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
    </div>
    <div class="btn-group btn-xs">
        {{ knp_pagination_render(arLotes) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
