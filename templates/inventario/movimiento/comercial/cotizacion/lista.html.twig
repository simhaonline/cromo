{% extends 'base_inventario.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtNumero, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Aprobado:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.chkEstadoAprobado, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cboCotizacionTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>NUMERO</th>
                <th>TIPO</th>
                <th>FECHA</th>
                <th title="Autorizado">AUT</th>
                <th title="Aprobado">APR</th>
                <th title="Anulado">ANU</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for arCotizacion in arCotizaciones %}
                <tr>
                    <td>{{ arCotizacion.codigoCotizacionPk }}</td>
                    <td>{{ arCotizacion.numero }}</td>
                    <td>{{ arCotizacion.nombreTipo }}</td>
                    <td>{{ arCotizacion.fecha |date('Y-m-d') }}</td>
                    {{ validarTipo(arCotizacion.estadoAutorizado) }}
                    {{ validarTipo(arCotizacion.estadoAprobado) }}
                    {{ validarTipo(arCotizacion.estadoAnulado) }}
                    <td style="text-align: center;">
                        {% if not arCotizacion.estadoAutorizado %}
                            <a href="{{ path('inventario_movimiento_comercial_cotizacion_nuevo',{'id' : arCotizacion.codigoCotizacionPk }) }}">
                                <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                                </i>
                            </a>
                        {% endif %}
                    </td>
                    <td style="text-align: center;">
                        <a href="{{ path('inventario_movimiento_comercial_cotizacion_detalle',{'id' : arCotizacion.codigoCotizacionPk }) }}">
                            <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                            </i>
                        </a>
                    </td>
                    <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCotizacion.codigoCotizacionPk }}" /></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arCotizaciones.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-toolbar">
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.btnEliminar) }}
        </div>
        <div class="btn-group" style="float: right;">
            <a class="btn btn-sm btn-default" href="{{ path('inventario_movimiento_comercial_cotizacion_nuevo',{'id' : 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
    </div>
    <div class="btn-group btn-xs">
        {{ knp_pagination_render(arCotizaciones) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
