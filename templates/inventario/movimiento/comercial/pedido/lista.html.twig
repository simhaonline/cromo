{% extends 'base_inventario.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-1 control-label">Tercero:</label>
                <div class="col-sm-11">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.txtCodigoTercero) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="" readOnly="ReadOnly" />
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('inventario_bus_tercero', { 'campoCodigo': 'form_txtCodigoTercero', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-1 control-label">Tipo:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.cboPedidoTipo, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>TIPO</th>
            <th>NUMERO</th>
            <th>FECHA</th>
            <th>TERCERO</th>
            <th>SUBTOTAL</th>
            <th>IVA</th>
            <th>NETO</th>
            <th>TOTAL</th>
            <th>AUT</th>
            <th>APR</th>
            <th>ANU</th>
            <th></th>
            <th></th>
            <th><input type="checkbox" name="ChkSeleccionar" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
        </tr>
        </thead>
        <tbody>
        {% for arPedido in arPedidos %}
            <tr>
                <td>{{ arPedido.codigoPedidoPk }}</td>
                <td>{{ arPedido.nombre }}</td>
                <td>{{ arPedido.numero }}</td>
                <td>{{ arPedido.fecha | date('Y-m-d') }}</td>
                <td>{{ arPedido.terceroNombreCorto }}</td>
                <td class="numero">{{ arPedido.vrSubtotal | number_format}}</td>
                <td class="numero">{{ arPedido.vrIva | number_format }}</td>
                <td class="numero">{{ arPedido.vrNeto | number_format }}</td>
                <td class="numero">{{ arPedido.vrTotal | number_format }}</td>
                <td class="estado">{{ arPedido.estadoAutorizado?'SI':'NO' }}</td>
                <td class="estado">{{ arPedido.estadoAprobado?'SI':'NO' }}</td>
                <td class="estado">{{ arPedido.estadoAnulado?'SI':'NO' }}</td>
                <td style="text-align: center;">
                    {% if not arPedido.estadoAutorizado %}
                        <a href="{{ path('inventario_movimiento_comercial_pedido_nuevo', { 'id': arPedido.codigoPedidoPk }) }}">
                            <i class="fa fa-edit" style="font-size: large;color: black;"></i>
                        </a>
                    {% endif %}
                </td>
                <td style="text-align: center">
                    <a href="{{ path('inventario_movimiento_comercial_pedido_detalle', { 'id': arPedido.codigoPedidoPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;"></i>
                    </a>
                </td>
                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPedido.codigoPedidoPk }}"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPedidos.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arPedidos) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('inventario_movimiento_comercial_pedido_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
