{% extends 'base_inventario.html.twig' %}
{% block content %}
    {% set foo = "one,two,three"|split(',') %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">

                </div>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label"></label>
                <div class="col-sm-2">

                </div>
            </div>

            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>FECHA</th>
            <th>TERCERO</th>
            <th>SUBTOTAL</th>
            <th>IVA</th>
            <th>NETO</th>
            <th>TOTAL</th>
            <th>AUT</th>
            <th>APR</th>
            <th>ANU</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arPedido in arPedidos %}
            <tr>
                <td>{{ arPedido.codigoPedidoPk }}</td>
                <td>{{ arPedido.fecha | date('Y-m-d') }}</td>
                <td>{{ arPedido.terceroNombreCorto }}</td>
                <td class="numero">{{ arPedido.vrSubtotal }}</td>
                <td class="numero">{{ arPedido.vrIva }}</td>
                <td class="numero">{{ arPedido.vrNeto }}</td>
                <td class="numero">{{ arPedido.vrTotal }}</td>
                <td class="estado">{{ arPedido.estadoAutorizado?'SI':'NO' }}</td>
                <td class="estado">{{ arPedido.estadoAprobado?'SI':'NO' }}</td>
                <td class="estado">{{ arPedido.estadoAnulado?'SI':'NO' }}</td>
                <td style="text-align: center"><a href="{{ path('inv_mto_comercial_pedido_detalle', { 'id': arPedido.codigoPedidoPk }) }}"><img src="{{ asset('../public/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPedidos.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arPedidos) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('inv_mto_comercial_pedido_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

