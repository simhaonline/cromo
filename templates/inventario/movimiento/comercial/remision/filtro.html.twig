<div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-editbutton="false"
     data-widget-fullscreenbutton="true">
    <header>
        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
        <h2>Lista</h2>
    </header>
    <div>
        <div class="widget-body no-padding">
            <div class="panel panel-default no-padding">
                {#<div class="panel-heading">Filtros</div>#}
                <div class="panel-body">
                    {% include 'estructura/buscarTerceroInventario.html.twig' %}
                    <div class="form-group form-group-sm">
                        <label for="" class="control-label col-sm-1">Numero:</label>
                        <div class="col-sm-2">
                            {{ form_widget(formFiltro.numero) }}
                        </div>
                        <label for="" class="control-label col-sm-1">Codigo:</label>
                        <div class="col-sm-2">
                            {{ form_widget(formFiltro.codigoRemisionPk) }}
                        </div>
                        <label for="" class="control-label col-sm-1">Tipo:</label>
                        <div class="col-sm-5">
                            {{ form_widget(formFiltro.codigoRemisionTipoFk) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="" class="control-label col-sm-1 col-sm-offset-6">Asesor:</label>
                        <div class="col-sm-5">
                            {{ form_widget((formFiltro.codigoAsesorFk)) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="" class="control-label col-sm-1 col-sm-offset-6">Autorizado:</label>
                        <div class="col-sm-5">
                            {{ form_widget((formFiltro.estadoAutorizado)) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="" class="control-label col-sm-1 col-sm-offset-6">Aprobado:</label>
                        <div class="col-sm-5">
                            {{ form_widget((formFiltro.estadoAprobado)) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="" class="control-label col-sm-1 col-sm-offset-6">Anulado:</label>
                        <div class="col-sm-5">
                            {{ form_widget((formFiltro.estadoAnulado)) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    {{ form_end(formFiltro) }}
                </div>
            </div>
        </div>
    </div>
</div>
