{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br/>
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_txtCodigoItem" class="col-sm-2 control-label">Codigo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtCodigoItem) }}
                </div>
                <label for="form_txtNombreItem" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtNombreItem) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_txtMarcaItem" class="col-sm-2 control-label">Marca:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cboMarcaItem, { 'attr': {'class': 'form-control to-select-2'} }) }}
                </div>
                <label class="col-sm-2 control-label">Referencia:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtReferenciaItem) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar,{'attr':{'style':'float: right;'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover tabla-datos">
            <thead>
            <tr>
                <th>ITEM</th>
                <th>NOMBRE</th>
                <th>MARCA</th>
                <th>REFERENCIA</th>
                <th>EXI</th>
                <th>REM</th>
                <th>DIS</th>
                <th>PED</th>
                <th>OC</th>
                <th>CANT</th>
            </tr>
            </thead>
            <tbody>
            {% for arItem in arItems %}
                <tr>
                    <td style="text-align: right;">{{ arItem.codigoItemPk }}</td>
                    <td style="text-align: left;">{{ arItem.nombre }}</td>
                    <td style="text-align: left;">{{ arItem.marcaNombre }}</td>
                    <td style="text-align: left;">{{ arItem.referencia }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadExistencia }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadRemisionada }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadDisponible }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadPedido }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadOrden }}</td>
                    <td style="text-align: center;"><input type="number" name="itemCantidad[{{ arItem.codigoItemPk }}]" size="10" style="width:70px"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="btn-group btn-xs">
        {{ knp_pagination_render(arItems) }}
    </div>
    {{ form_widget(form.btnGuardar,{'attr':{'style':'float: right;'}}) }}
    {{ form_end(form) }}
    <br /><br />
{% endblock %}
