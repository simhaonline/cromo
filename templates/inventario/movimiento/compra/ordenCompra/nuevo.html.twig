{% extends 'base_inventario.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                <input id="txtCodigoTercero"  name="txtCodigoTercero"  type="text" class="form-control" value="{{ arOrdenCompra.codigoTerceroFk |default('') }}"/>
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arOrdenCompra.terceroRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('inventario_bus_tercero', { 'campoCodigo': 'txtCodigoTercero', 'campoNombre': 'txtNombreCorto', 'terceroTipo': '2' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-3">
                    {{ form_widget(form.ordenCompraTipoRel,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.ordenCompraTipoRel) }}
                </div>
                <label for="form_codigoBarras" class="col-sm-2 control-label">Soporte:</label>
                <div class="col-sm-3">
                    {{ form_widget(form.soporte,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.soporte)}}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_descripcion" class="col-sm-2 control-label">Descripción</label>
                <div class="col-sm-8">
                    {{ form_widget(form.comentarios, {'attr':{'class':'form-control','rows':'10'}}) }}
                    {{ form_errors(form.comentarios)}}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {#<a class="btn btn-default btn-sm" href="{{ path('lista',{'entidad' : 'InvOrdenCompra' }) }}">Cancelar</a>#}
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
