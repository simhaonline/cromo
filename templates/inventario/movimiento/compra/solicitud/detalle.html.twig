{% extends 'base_inventario.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ notificar()|raw }}
    <div class="row">
        <div class="col-lg-12">
            <h3 class='page-header'>
                Inventario movimiento
                <small style="font-size: 20px">Inventario: solicitud detalle</small>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnAutorizar) }}
            {{ form_widget(form.btnDesautorizar) }}
            {{ form_widget(form.btnImprimir) }}
            {{ form_widget(form.btnAprobar) }}
            {{ form_widget(form.btnAnular) }}
        </div>
    </div>
    <div style="float:right">
        {% if arSolicitud.estadoAutorizado == true %}<span class="label label-default">Autorizado</span>{% endif %}
        {% if arSolicitud.estadoAprobado == true %}<span class="label label-success">Aprobado</span>{% endif %}
        {% if arSolicitud.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">CODIGO:</td>
            <td class="td-in-well">{{ arSolicitud.codigoSolicitudPk }}</td>
            <td class="titulo">USUARIO:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arSolicitud.usuario }}</td>

        </tr>
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arSolicitud.numero }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arSolicitud.fecha | date('Y-m-d') }}</td>
        </tr>
        <tr>
            <td class="titulo" >SOPORTE:</td>
            <td class="td-in-well" colspan="5">{{ arSolicitud.soporte }}</td>
        </tr>
        <tr>
            <td class="titulo" >COMENTARIO: </td>
            <td class="td-in-well" colspan="5">{{ arSolicitud.comentarios }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>ITEM</th>
                            <th>CANTIDAD</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arSolicitudDetalle in arSolicitudDetalles %}
                            <tr>
                                <td>{{ arSolicitudDetalle.codigoSolicitudDetallePk }}</td>
                                <td>{{ arSolicitudDetalle.itemRel.nombre | default('') }}</td>
                                <td>{{ arSolicitudDetalle.cantidadSolicitada }}</td>
                                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSolicitudDetalle.codigoSolicitudDetallePk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {#<div class="separador-1"></div>#}
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {% if arSolicitud.estadoAutorizado == true %}
                            <input type="button" class="btn btn-default btn-sm" href="#" disabled="disabled" value="Nuevo"/>
                        {% else %}
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('inv_mov_inventario_solicitud_detalle_nuevo', {'codigoDetalle': 0,'id':arSolicitud.codigoSolicitudPk }) }}', 'SolicitudAdicionarDetalle', 600, 900)">Nuevo</a>
                        {% endif %}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminar) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('admin_lista',{'modulo':'inventario','entidad':'solicitud'}) }}">Volver</a>
{% endblock %}
