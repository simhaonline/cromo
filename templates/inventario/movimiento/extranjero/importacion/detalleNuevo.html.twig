{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br/>
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-1 control-label">Codigo:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.txtCodigoItem, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Nombre:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.txtNombreItem, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-1 control-label">Referencia:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.txtReferenciaItem, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ITEM</th>
                <th>NOMBRE</th>
                <th>REFERENCIA</th>
                <th>MARCA</th>
                <th>EXI</th>
                <th>REM</th>
                <th>DIS</th>
                <th>PED</th>
                <th>OC</th>
                <th>CANT</th>
            </tr>
            </thead>
            <tbody>
            {% for arItem in arItems %}
                <tr>
                    <td style="text-align: right;">{{ arItem.codigoItemPk }}</td>
                    <td style="text-align: left;">{{ arItem.nombre }}</td>
                    <td style="text-align: left;">{{ arItem.referencia }}</td>
                    <td style="text-align: left;">{{ arItem.marcaNombre }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadExistencia }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadRemisionada }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadDisponible }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadPedido }}</td>
                    <td style="text-align: right;">{{ arItem.cantidadOrden }}</td>
                    <td style="text-align: center;"><input type="number" name="itemCantidad[{{ arItem.codigoItemPk }}]" size="10" style="width:70px"></td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arItems) }}
    </div>
    <div class="btn-toolbar" style="float: right;">
        <div class="btn-group btn-group-sm">
            {{ form_widget(form.btnGuardar,{'attr':{'style':'float: right;'}}) }}
        </div>
        <div class="btn-group btn-group-sm">
            {{ form_widget(form.btnGuardarCerrar,{'attr':{'style':'float: right;'}}) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
