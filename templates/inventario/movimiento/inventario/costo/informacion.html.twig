<table width="100%" class="table table-condensed table-bordered tabla-informacion">
    <tr>
        <td class="titulo">CODIGO:</td>
        <td class="td-in-well">{{ arCosto.codigoCostoPk }}</td>
        <td class="titulo">USUARIO:</td>
        <td class="td-in-well" style="text-transform: uppercase;">{{ arCosto.usuario }}</td>
        <td class="titulo">TOTAL:</td>
        <td align="right">{{ arCosto.vrCosto | number_format(0, '.', ',') }}</td>
    </tr>
    <tr>
        <td class="titulo">TIPO:</td>
        <td class="td-in-well">{{ arCosto.costoTipoRel.nombre | default('') }}</td>
        <td class="titulo"></td>
        <td class="td-in-well"></td>
        <td class="titulo"></td>
        <td align="right"></td>
    </tr>
    <tr>
        <td class="titulo">COMENTARIO:</td>
        <td class="td-in-well" colspan="7">{{ arCosto.comentario }}</td>
    </tr>
</table>