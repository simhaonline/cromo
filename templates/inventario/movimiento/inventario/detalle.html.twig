{% extends 'base_inventario.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ notificar()|raw }}
    <div class="row">
        <div class="col-lg-12">
            <h3 class='page-header'>
                Inventario movimiento
                <small style="font-size: 20px">Inventario: movimiento detalle</small>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnAutorizar) }}
            {{ form_widget(form.btnDesautorizar) }}
            {{ form_widget(form.btnImprimir) }}
            {{ form_widget(form.btnAprobar) }}
            {{ form_widget(form.btnAnular) }}
        </div>
    </div>
    <div style="float:right">
        {% if arMovimiento.estadoAutorizado == true %}<span class="label label-default">Autorizado</span>{% endif %}
        {% if arMovimiento.estadoAprobado == true %}<span class="label label-success">Aprobado</span>{% endif %}
        {% if arMovimiento.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}
    </div>
    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">CODIGO:</td>
            <td class="td-in-well">{{ arMovimiento.codigoMovimientoPk }}</td>
            <td class="titulo">USUARIO:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arMovimiento.usuario }}</td>

        </tr>
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arMovimiento.numero }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arMovimiento.fecha | date('Y-m-d') }}</td>
        </tr>
        <tr>
            <td class="titulo">SOPORTE:</td>
            <td class="td-in-well" colspan="5">{{ arMovimiento.soporte }}</td>
        </tr>
        <tr>
            <td class="titulo">COMENTARIO:</td>
            <td class="td-in-well" colspan="5">{{ arMovimiento.comentarios }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>ITEM</th>
                            <th>CANTIDAD</th>
                            <th>SUBTOTAL</th>
                            <th>% DECUENTO</th>
                            <th>DESCUENTO</th>
                            <th>% IVA</th>
                            <th>IVA</th>
                            <th>NETO</th>
                            <th>TOTAL</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arMovimientoDetalle in arMovimientoDetalles %}
                            <tr>
                                {{ validarTipo(arMovimientoDetalle.codigoMovimientoDetallePk) }}
                                {{ validarTipo(arMovimientoDetalle.itemRel.nombre) }}
                                {% if arMovimiento.estadoAutorizado %}
                                    {{ validarTipo(arMovimientoDetalle.cantidad) }}
                                {% else %}
                                    <td style="text-align: center;"><input type="number" style="text-align: right;"
                                                                           name="arrCantidad[{{ arMovimientoDetalle.codigoMovimientoDetallePk }}]"
                                                                           value="{{ arMovimientoDetalle.cantidad }}">
                                    </td>
                                {% endif %}
                                {{ validarTipo(arMovimientoDetalle.vrSubtotal) }}
                                <td style="text-align: center;"><input type="number" style="text-align: right;"
                                                                       name="arrDescuento[{{ arMovimientoDetalle.codigoMovimientoDetallePk }}]"
                                                                       value="{{ arMovimientoDetalle.porDescuento }}">
                                </td>
                                {{ validarTipo(arMovimientoDetalle.vrDescuento) }}
                                <td style="text-align: center;"><input type="number" style="text-align: right;"
                                                                       name="arrIva[{{ arMovimientoDetalle.codigoMovimientoDetallePk }}]"
                                                                       value="{{ arMovimientoDetalle.porIva }}"></td>
                                {{ validarTipo(arMovimientoDetalle.vrIva) }}
                                {{ validarTipo(arMovimientoDetalle.vrNeto) }}
                                {{ validarTipo(arMovimientoDetalle.vrTotal) }}
                                <td style="text-align: center;"><input type="checkbox" style="text-align: right;"
                                                                       name="ChkSeleccionar[]"
                                                                       value="{{ arMovimientoDetalle.codigoMovimientoDetallePk }}"/>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {#<div class="separador-1"></div>#}
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {% if arMovimiento.estadoAutorizado == true %}
                            <input type="button" class="btn btn-default btn-sm" href="#" disabled="disabled"
                                   value="Nuevo"/>
                        {% else %}
                            <a class="btn btn-default btn-sm"
                               href="javascript:abrirVentana3('{{ path('inv_mov_inventario_movimiento_detalle_nuevo', {'codigoDetalle': 0,'id':arMovimiento.codigoMovimientoPk }) }}', 'MovimientoAdicionarDetalle', 600, 900)">Nuevo</a>
                        {% endif %}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnActualizar) }}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminar) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <div class="btn-group">
        <a class="btn btn-sm btn-default"
           href="{{ path('inv_mov_inventario_movimiento_lista',{'tipoDocumento': arMovimiento.documentoRel.documentoTipoRel.codigoDocumentoTipoPk,'codigoDocumento': arMovimiento.documentoRel.codigoDocumentoPk }) }}">Volver</a>
    </div>
{% endblock %}
