{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br/>
    {{ notificar()|raw }}
    <div class="panel panel-default">
        <div class="panel-heading"><h5> Filtros</h5></div>
        <br>
        <div class="form-group form-group-sm">
            <label for="txtNit" class="col-sm-2 control-label">Item:</label>
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="input-group">
                            {{ form_widget(form.txtCodigo,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="input-group">
                            {{ form_widget(form.txtNombre,{'attr':{'class':'form-control'}}) }}
                            <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('inventario_buscar_item', { 'campoCodigo': 'form_txtCodigo', 'campoNombre': 'form_txtNombre'}) }}', 'buscarItem', 600, 900)">Buscar</a>
                                    </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_nombre" class="col-sm-2 control-label">Numero:</label>
            <div class="col-sm-3">
                {{ form_widget(form.txtNumero,{'attr':{'class':'form-control'}}) }}
            </div>
            <label for="form_codigoBarras" class="col-sm-2 control-label"></label>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="panel-footer">
            {{ form_widget(form.btnFiltrar,{'attr':{'style':'float: right;'}}) }}
            <br/>
            <br/>
        </div>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover tabla-datos">
            <thead>
            <tr>
                <th>ID</th>
                <th title="NUMERO IMPORTACION">NUMERO</th>
                <th title="CODIGO ITEM">ITEM</th>
                <th>NOMBRE</th>
                <th>REFERENCIA</th>
                <th>CAN</th>
                <th>PEN</th>
                <th>CAN</th>
            </tr>
            </thead>
            <tbody>
            {% for arImportacionDetalle in arImportacionDetalles %}
                <tr>
                    <td style="text-align: right;">{{ arImportacionDetalle.codigoImportacionDetallePk }}</td>
                    <td style="text-align: right;">{{ arImportacionDetalle.importacionNumero }}</td>
                    <td>{{ arImportacionDetalle.codigoItemFk }}</td>
                    <td style="text-align: left;">{{ arImportacionDetalle.itemNombre }}</td>
                    <td style="text-align: left;">{{ arImportacionDetalle.itemReferencia }}</td>
                    <td style="text-align: right;">{{ arImportacionDetalle.cantidad }}</td>
                    <td style="text-align: right;">{{ arImportacionDetalle.cantidadPendiente }}</td>
                    <td style="text-align: center;"><input type="number" name="itemCantidad[{{ arImportacionDetalle.codigoImportacionDetallePk }}]" style="text-align: right; width:70px" size="10" value="0"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ form_widget(form.btnGuardar,{'attr':{'style':'float: right;'}}) }}
    {{ form_end(form) }}
{% endblock %}
