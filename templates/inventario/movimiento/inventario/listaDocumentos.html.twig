{% extends 'base_inventario.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class='page-header'>
                Inventario movimiento
                <small style="font-size: 20px">Inventario: documentos</small>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>ABREVIATURA</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for arDocumento in arDocumentos %}
                <tr>
                    <td>{{ arDocumento.codigoDocumentoPk }}</td>
                    <td>{{ arDocumento.nombre | default('') }}</td>
                    <td>{{ arDocumento.abreviatura | default('') }}</td>
                    <td style="text-align: center;">
                        <a href="{{ path('inv_mto_inventario_movimiento_lista', {'tipoDocumento': tipoDocumento,'codigoDocumento' : arDocumento.codigoDocumentoPk }) }}">
                            <i class="fa fa-share-square-o" style="font-size: large">
                            </i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
