{% extends 'base_inventario.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class='page-header'>
                Inventario movimiento
                <small style="font-size: 20px">Inventario: movimiento lista</small>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>NUMERO</th>
                <th>TERCERO</th>
                <th>FECHA</th>
                <th>VR_SUBTOTAL</th>
                <th>VR_IVA</th>
                <th>VR_DESCUENTO</th>
                <th>VR_NETO</th>
                <th>VR_TOTAL</th>
                <th>AUTORIZADO</th>
                <th>APROBADO</th>
                <th>ANULADO</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for arMovimiento in arMovimientos %}
                <tr>
                    {{ validarTipo(arMovimiento.codigoMovimientoPk ) }}
                    {{ validarTipo(arMovimiento.numero) }}
                    {{ validarTipo(arMovimiento.terceroRel.nombreCorto ) }}
                    {{ validarTipo(arMovimiento.fecha) }}
                    {{ validarTipo(arMovimiento.vrSubtotal) }}
                    {{ validarTipo(arMovimiento.vrIva) }}
                    {{ validarTipo(arMovimiento.vrDescuento) }}
                    {{ validarTipo(arMovimiento.vrNeto) }}
                    {{ validarTipo(arMovimiento.vrTotal) }}
                    {{ validarTipo(arMovimiento.estadoAutorizado) }}
                    {{ validarTipo(arMovimiento.estadoAprobado) }}
                    {{ validarTipo(arMovimiento.estadoAnulado) }}
                    <td style="text-align: center;">
                        <a href="{{ path('inv_mov_inventario_movimiento_nuevo', {'codigoDocumento':arMovimiento.codigoDocumentoFk,'id': arMovimiento.codigoMovimientoPk}) }}">
                            <i class="fa fa-edit" style="font-size: large">
                            </i>
                        </a>
                    </td>
                    <td style="text-align: center;">
                        <a href="{{ path('inv_mov_inventario_movimiento_detalle', {'id' : arMovimiento.codigoMovimientoPk }) }}">
                            <i class="fa fa-share-square-o" style="font-size: large">
                            </i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="btn-group" style="float: right;">
        <a class="btn btn-sm btn-default" href="{{ path('inv_mov_inventario_movimiento_nuevo',{'codigoDocumento': codigoDocumento,'id' : 0 }) }}">Nuevo</a>
    </div>
    <div class="btn-group">
        <a class="btn btn-sm btn-default" href="{{ path('inv_mov_inventario_movimiento_documentos_lista',{'tipoDocumento': tipoDocumento}) }}">volver</a>
    </div>
{% endblock %}
