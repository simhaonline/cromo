{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-2 control-label">Tercero:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                <input id="txtCodigoTercero"  name="txtCodigoTercero"  type="text" class="form-control" value="{{ arMovimiento.codigoTerceroFk | default('') }}"/>
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arMovimiento.terceroRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('inventario_buscar_tercero', { 'campoCodigo': 'txtCodigoTercero', 'campoNombre': 'txtNombreCorto'}) }}', 'buscarTercero', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group form-group-sm">
                <label  class="col-sm-2 control-label">Fecha factura:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaDocumento) }}
                    {{ form_errors(form.fechaDocumento) }}
                </div>
                <label  class="col-sm-1 control-label">Soporte:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.soporte, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.soporte) }}
                </div>
                <label class="col-sm-1 control-label">Plazo:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.plazoPago, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.plazoPago) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    {{ form_errors(form.comentarios) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-sm btn-default" href="{{ path('inventario_movimiento_inventario_movimiento_lista',{'tipoDocumento': tipoDocumento,'codigoDocumento': arMovimiento.documentoRel.codigoDocumentoPk }) }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
