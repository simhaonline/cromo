{% extends 'base_inventario.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnDesautorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnAnular, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    <div style="float:right">
        {#{% if 1 == 1 %}<span class="label label-default">Generado</span>{% endif %}#}
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">SOLICITUD:</td>
            <td class="td-in-well">{{ arSolicitud.codigoSolicitudPk }}</td>
            <td class="titulo">USUARIO:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arSolicitud.usuario }}</td>

        </tr>
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arSolicitud.numero }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arSolicitud.fecha | date('Y-m-d') }}</td>
        </tr>
        <tr>
            <td class="titulo" >SOPORTE:</td>
            <td class="td-in-well" colspan="5">{{ arSolicitud.soporte }}</td>
        </tr>
        <tr>
            <td class="titulo" >COMENTARIO: </td>
            <td class="td-in-well" colspan="5">{{ arSolicitud.comentarios }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>ITEM</th>
                            <th>CANTIDAD</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arSolicitudDetalle in arSolicitudDetalles %}
                            <tr>
                                <td>{{ arSolicitudDetalle.codigoSolitudDetallePk }}</td>
                                <td>{{ arSolicitudDetalle.itemRel.nombre | default('') }}</td>
                                <td>{{ arSolicitudDetalle.cantidad }}</td>
                                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSolicitudDetalle.codigoSolitudDetallePk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('inv_mto_solicitud_detalle_nuevo', {'codigoDetalle': 0,'id':arSolicitud.codigoSolicitudPk }) }}', 'SolicitudAdicionarDetalle', 600, 900)">Nuevo</a>
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('lista',{'entidad':'InvSolicitud'}) }}">Volver</a>
{% endblock %}
