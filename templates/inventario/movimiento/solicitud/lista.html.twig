{% extends 'base_inventario.html.twig' %}
{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de b√∫squeda
        </div>
        <div class="panel-body">
        </div>
    </div>
    {{ form_start(form) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NUMERO</th>
            <th>FECHA</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arSolicitud in arSolicitudes %}
            <tr>
                <td style="text-align: center">{{ arSolicitud.codigoSolicitudPk }}</td>
                <td style="text-align: center">{{ arSolicitud.numero }}</td>
                <td style="text-align: center">{{ arSolicitud.fecha | date('Y-m-d') }}</td>
                <td style="text-align: center"><a href="{{ path('inv_mto_solicitud_nuevo', { 'codigoSolicitud': arSolicitud.codigoSolicitudPk }) }}"><i class="fa fa-edit" style="font-size: large"></i></a></td>
                <td style="text-align: center"><a href="{{ path('inv_mto_solicitud_detalle', { 'codigoSolicitud': arSolicitud.codigoSolicitudPk }) }}"><i class="fa fa-share-square-o" style="font-size: large"></i></a></td>
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSolicitud.codigoSolicitudPk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSolicitudes.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arSolicitudes) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('inv_mto_solicitud_nuevo', {'codigoSolicitud': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnEliminar) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

