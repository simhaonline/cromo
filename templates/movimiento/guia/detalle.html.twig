{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    <div style="float:right">
        {% if arGuia.estadoImpreso == 1 %}<span class="label label-default">Impresion</span>{% endif %}
        {% if arGuia.estadoDespachado == 1 %}<span class="label label-default">Despacho</span>{% endif %}
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arGuia.numero }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arGuia.fechaIngreso |date("Y/m/d") }}</td>
            <td class="titulo" >FLETE:</td>
            <td align="right">{{ arGuia.vrFlete | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >MANEJO:</td>
            <td align="right">{{ arGuia.vrManejo | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >DECLARA:</td>
            <td align="right">{{ arGuia.vrDeclara | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >RECAUDO:</td>
            <td align="right">{{ arGuia.vrRecaudo | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo" >COMENTARIO: </td>
            <td class="td-in-well" colspan="5">{{ arGuia.comentario }}</td>
        </tr>
    </table>
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('mto_guia_lista') }}">Volver</a>
{% endblock %}
