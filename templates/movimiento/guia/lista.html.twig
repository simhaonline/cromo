{% extends 'base.html.twig' %}
{% block content %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NUMERO</th>
            <th>FECHA</th>
            <th>CLIENTE</th>
            <th>ORIGEN</th>
            <th>DESTINO</th>
            <th>I</th>
            <th>D</th>
            <th>E</th>
            <th>S</th>
            <th>C</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arGuia in arGuias %}
            <tr>
                <td>{{ arGuia.codigoGuiaPk }}</td>
                <td>{{ arGuia.numero }}</td>
                <td>{{ arGuia.fechaIngreso | date('Y-m-d') }}</td>
                <td>{{ arGuia.clienteNombreCorto }}</td>
                <td>{{ arGuia.ciudadOrigen }}</td>
                <td>{{ arGuia.ciudadDestino }}</td>
                <td>{{ arGuia.estadoImpreso?'SI':'NO' }}</td>
                <td>{{ arGuia.estadoDespachado?'SI':'NO' }}</td>
                <td>{{ arGuia.estadoEntregado?'SI':'NO' }}</td>
                <td>{{ arGuia.estadoSoporte?'SI':'NO' }}</td>
                <td>{{ arGuia.estadoCumplido?'SI':'NO' }}</td>
                <td style="text-align: center"><a href="{{ path('mto_guia_detalle', { 'codigoGuia': arGuia.codigoGuiaPk }) }}"><img src="{{ asset('build/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
