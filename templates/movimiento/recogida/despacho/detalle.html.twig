{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    <br /><br />
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
        </tr>
        </thead>
        <tbody>
        {% for arRecogida in arRecogidas %}
            <tr>
                <td>{{ arRecogida.codigoRecogidaPk }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-toolbar" style="float: left">
        <div class="btn-group">
            <a  class="btn btn-default btn-sm" href="{{ path('mto_recogida_despacho_lista') }}">Volver</a>
        </div>
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('mto_recogida_despacho_detalle_adicionar_recogida', {'codigoDespachoRecogida': arDespachoRecogida.codigoDespachoRecogidaPk }) }}', 'DespachoRecogidaAdicionarRecogida', 600, 900)">Adicionar</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnRetirarRecogida, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
