{% extends 'base.html.twig' %}
{% block content %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>OP</th>
            <th>NUMERO</th>
            <th>VEH</th>
            <th>RUTA</th>
            <th>ORIGEN</th>
            <th>DESTINO</th>
            <th>UND</th>
            <th>PES</th>
            <th>VOL</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arDespacho in arDespachos %}
            <tr>
                <td>{{ arDespacho.codigoDespachoPk }}</td>
                <td>{{ arDespacho.codigoOperacionFk }}</td>
                <td>{{ arDespacho.numero }}</td>
                <td>{{ arDespacho.codigoVehiculoFk }}</td>
                <td>{{ arDespacho.codigoRutaFk }}</td>
                <td>{{ arDespacho.ciudadOrigen }}</td>
                <td>{{ arDespacho.ciudadDestino }}</td>
                <td class="numero">{{ arDespacho.unidades }}</td>
                <td class="numero">{{ arDespacho.pesoReal }}</td>
                <td class="numero">{{ arDespacho.pesoVolumen }}</td>
                <td style="text-align: center"><a href="{{ path('mto_transporte_despacho_detalle', { 'codigoDespacho': arDespacho.codigoDespachoPk }) }}"><img src="{{ asset('../assets/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
