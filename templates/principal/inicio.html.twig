    {% include 'modal/baseModal.html.twig' %}
    {{ form_start(form) }}
    <script>
        function actualizarModal(id) {
            $.ajax({
                url: "{{ path('blog_descripcion') }}",
                type: "GET",
                dataType: "JSON",
                data: {
                    id: id
                }, success: function (arrDatos) {
                    let arrPost = JSON.parse(arrDatos);
                    let modal = $(".modal-body");
                    modal.html("<h3 style='color: cornflowerblue;'>" + arrPost.titulo + "</h3><p>" + arrPost.descripcion + "</p>");
                }
            });
        }
    </script>
