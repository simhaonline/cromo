{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>OP</th>
            <th>HORA</th>
            <th>CLIENTE</th>
            <th>ANUNCIANTE</th>
            <th>DIRECCION</th>
            <th>CIUDAD</th>
            <th>TELEFONO</th>
        </tr>
        </thead>
        <tbody>
        {% for arRecogidaProgramada in arRecogidasProgramadas %}
            <tr>
                <td>{{ arRecogidaProgramada.codigoRecogidaProgramadaPk }}</td>
                <td>{{ arRecogidaProgramada.codigoOperacionFk }}</td>
                <td>{{ arRecogidaProgramada.hora | date('H:i') }}</td>
                <td>{{ arRecogidaProgramada.clienteNombreCorto }}</td>
                <td>{{ arRecogidaProgramada.anunciante }}</td>
                <td>{{ arRecogidaProgramada.direccion }}</td>
                <td>{{ arRecogidaProgramada.ciudad }}</td>
                <td>{{ arRecogidaProgramada.telefono }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRecogidasProgramadas.getTotalItemCount }}</span></div>
    </div>

    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRecogidasProgramadas) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('pro_recogida_recogida_nuevo', {'codigoRecogidaProgramada': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnGenerar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
