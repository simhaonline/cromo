{% extends 'base_recursoHumano.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr': {'class' :'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-2 control-label">Empleado:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.codigoEmpleadoFk) }}
                                {{ form_errors(form.codigoEmpleadoFk) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto" name="txtNombreCorto" type="text" class="form-control"
                                       value="{{ arCredito.empleadoRel.nombreCorto |default('') }}"
                                       readOnly="ReadOnly"/>
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado', { 'campoCodigo': 'credito_codigoEmpleadoFk', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_creditoTipoRel" class="control-label col-sm-2">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.creditoTipoRel) }}
                </div>
                <label for="credito_creditoPagoRel" class="control-label col-sm-2">Tipo pago:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.creditoPagoTipoRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_fechaInicio" class="control-label col-sm-2">Desde:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaInicio) }}
                </div>
                <label for="credito_numeroCuotas" class="control-label col-sm-2">Valor credito:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.vrCredito) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_fechaFinalizacion" class="control-label col-sm-2">Hasta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaFinalizacion) }}
                </div>
                <label for="credito_seguro" class="control-label col-sm-2">Numero cuotas:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numeroCuotas) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_fechaCredito" class="control-label col-sm-2">Fecha credito:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaCredito) }}
                </div>
                <label for="credito_fechaCredito" class="control-label col-sm-2">Valor cuota:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.vrCuota) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_fechaCredito" class="control-label col-sm-2"></label>
                <div class="col-sm-4">

                </div>
                <label for="credito_fechaCredito" class="control-label col-sm-2">Cuota actual:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numeroCuotaActual) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="col-sm-3 ">
                        {{ form_widget(form.validarCuotas) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.aplicarCuotaPrima) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.aplicarCuotaCesantia) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.inactivoPeriodo) }}
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_comentarios" class="control-label col-sm-2">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentario) }}
                </div>
            </div>
        </div>
    </div>
    <div></div>
    <div class="modal-footer">
        <div class="btn-group" style="float: left;">
            <a class="btn btn-sm btn-default" href="{{ path('recursohumano_movimiento_nomina_credito_lista') }}">Cancelar</a>
        </div>
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.guardar) }}
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br>
    <br>
{% endblock %}