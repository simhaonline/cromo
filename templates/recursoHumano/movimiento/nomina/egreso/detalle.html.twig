{% extends 'base_recursoHumano.html.twig' %}
{% block content %}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-sm btn-default"
               href="{{ path('recursohumano_movimiento_nomina_egreso_lista') }}">Volver</a>
        </div>
        <div class="btn-group">
            {% include 'estructura/botonera.html.twig' %}
        </div>
    </div>
    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arEgreso.numero }}</td>
            <td class="titulo">DESCRIPCIÃ“N:</td>
            <td class="td-in-well">{{ arEgreso.nombre }}</td>
        </tr>
        <tr>
            <td class="titulo">TIPO:</td>
            <td class="td-in-well">{{ arEgreso.egresoTipoRel.nombre | default('') }}</td>
            <td class="titulo">BANCO:</td>
            <td class="td-in-well">{{ arEgreso.cuentaRel.bancoRel.nombre | default('') }}</td>
        </tr>
        <tr>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arEgreso.fecha | date('Y-m-d') }}</td>
            <td class="titulo">REGISTROS:</td>
            <td class="td-in-well">{{ arEgreso.numeroRegistros }}</td>
        </tr>
        <tr>
            <td class="titulo">CUENTA:</td>
            <td class="td-in-well">{{ arEgreso.cuentaRel.nombre | default('') }}</td>
            <td class="titulo">TOTAL:</td>
            <td class="td-in-well">{{ arEgreso.vrTotal | number_format(0, '.', ',') }}</td>
        </tr>
        <tr>
            <td class="titulo">COMENTARIO:</td>
            <td class="td-in-well" colspan="4">{{ arEgreso.comentario }}</td>
        </tr>
    </table>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>PAGO</th>
            <th>TIPO</th>
            <th>IDENTIFICACION</th>
            <th>EMPLEADO</th>
            <th>BANCO</th>
            <th>CUENTA</th>
            <th>VR.PAGO</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arEgresoDetalle in arEgresoDetalles %}
            <tr>
                <td>{{ arEgresoDetalle.codigoEgresoDetallePk }}</td>
                <td>{{ arEgresoDetalle.codigoPagoFk }}</td>
                <td>{{ arEgresoDetalle.pagoTipo }}</td>
                <td>{{ arEgresoDetalle.numeroIdentificacion }}</td>
                <td>{{ arEgresoDetalle.nombreCorto }}</td>
                <td>{{ arEgresoDetalle.nombre }}</td>
                <td>{{ arEgresoDetalle.cuenta }}</td>
                <td>{{ arEgresoDetalle.vrPago | number_format(0,'.',',') }}</td>
                <td><input type="checkbox"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <br>
{% endblock %}