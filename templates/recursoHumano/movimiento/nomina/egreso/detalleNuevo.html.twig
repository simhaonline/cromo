{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>TIPO</th>
            <th>NUMERO</th>
            <th>GRUPO</th>
            <th>EMPLEADO</th>
            <th>BANCO</th>
            <th>DESDE</th>
            <th>HASTA</th>
            <th>NETO</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arPago in arPagos %}
            <tr>
                <td>{{ arPago.codigoPagoPk}}</td>
                <td>{{ arPago.pagoTipoRel.nombre | default('') }}</td>
                <td>{{ arPago.numero }}</td>
                <td>{{ arPago.empleadoRel.grupoRel.nombre | default('') }}</td>
                <td>{{ arPago.empleadoRel.nombreCorto }}</td>
                <td>{{ arPago.empleadoRel.bancoRel.nombre | default('') }}</td>
                <td>{{ arPago.fechaDesde | date('Y-m-d') }}</td>
                <td>{{ arPago.fechaHasta | date('Y-m-d') }}</td>
                <td class="numero">{{ arPago.vrNeto | number_format(0,',','.') }}</td>
                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPago.codigoPagoPk }}"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: right;">
        {{ form_widget(form.btnGuardar) }}
    </div>
    {{ form_end(form) }}
{% endblock %}