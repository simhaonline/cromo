{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.egresoTipoRel) }}
                </div>
                <label for="" class="control-label col-sm-2">Cuenta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cuentaRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombre) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Fecha transmisión:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaTrasmision) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Fecha aplicación:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaAplicacion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentario) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="btn-toolbar">
            <div class="btn-group" style="float: left;">
                <a href="{{ path('recursohumano_movimiento_nomina_egreso_lista') }}" class="btn btn-sm btn-default">Cancelar</a>
            </div>
            <div class="btn-group" style="float: right;">
                {{ form_widget(form.guardar) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}