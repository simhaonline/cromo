{% extends 'base_recursoHumano.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('recursohumano_movimiento_nomina_programacion_lista') }}">Volver</a>&nbsp;&nbsp;
        </div>
        <div class="btn-group">
            {% include 'estructura/botonera.html.twig' %}
        </div>
    </div>
    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">CODIGO:</td>
            <td class="td-in-well">{{ arProgramacion.codigoProgramacionPk }}</td>
            <td class="titulo">NOMBRE:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arProgramacion.nombre }}</td>
            <td class="titulo">GRUPO:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arProgramacion.codigoGrupoFk }}</td>
        </tr>
        <tr>
            <td class="titulo">DESDE:</td>
            <td class="td-in-well">{{ arProgramacion.fechaDesde | date('Y-m-d') }}</td>
            <td class="titulo">HASTA:</td>
            <td class="td-in-well">{{ arProgramacion.fechaHasta | date('Y-m-d') }}</td>
            <td class="titulo"></td>
            <td class="td-in-well" style="text-transform: uppercase;"></td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>DOC</th>
                            <th>NOMBRE</th>
                            <th>DESDE</th>
                            <th>HASTA</th>
                            <th>SALARIO</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arProgramacionDetalle in arProgramacionDetalles %}
                            <tr>
                                <td>{{ arProgramacionDetalle.codigoProgramacionDetallePk }}</td>
                                <td>{{ arProgramacionDetalle.empleadoRel.numeroIdentificacion }}</td>
                                <td>{{ arProgramacionDetalle.empleadoRel.nombreCorto }}</td>
                                <td>{{ arProgramacionDetalle.fechaDesde | date('Y-m-d') }}</td>
                                <td>{{ arProgramacionDetalle.fechaHasta | date('Y-m-d') }}</td>
                                <td>{{ arProgramacionDetalle.vrSalario }}</td>
                                <td></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="btn-toolbar" style="float: right;">
            {{ form_widget(form.btnCargarContratos) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}