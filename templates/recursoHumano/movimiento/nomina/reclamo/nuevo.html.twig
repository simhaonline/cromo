{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtNombreCorto" class="col-sm-2 control-label">Empleado:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.codigoEmpleadoFk) }}
                                {{ form_errors(form.codigoEmpleadoFk) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto" name="txtNombreCorto" type="text" class="form-control"
                                       value=""
                                       readOnly="ReadOnly"/>
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado', { 'campoCodigo': 'reclamo_codigoEmpleadoFk', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Concepto:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.reclamoConceptoRel) }}
                    {{ form_errors(form.reclamoConceptoRel) }}
                </div>
                <label for="" class="control-label col-sm-2">Responsable:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.responsable) }}
                    {{ form_errors(form.responsable) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Descripcion:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.descripcion) }}
                    {{ form_errors(form.descripcion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentario) }}
                    {{ form_errors(form.comentario) }}
                </div>
            </div>
        </div>
    </div>
    <div class="btn-toolbar">
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.guardar) }}
        </div>
        <div class="btn-group" style="float: left;">
            <a class="btn btn-sm btn-default" href="{{ path('recursohumano_movimiento_nomina_reclamo_lista') }}">Cancelar</a>
        </div>
    </div>
    {{ form_end(form) }}
    <div></div>
{% endblock %}