{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Codigo </label>
                <div class="col-sm-4">
                    {{ form_widget(form.codigoExamenTipoPk,{ 'attr' : {'class' : 'form-control'}}) }}
                    <div style="color:red;">{{ form_errors(form.codigoExamenTipoPk) }}</div>
                </div>
                <label class="col-sm-2 control-label">Nombre </label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombre,{ 'attr' : {'class' : 'form-control'}}) }}
                    <div style="color:red;">{{ form_errors(form.nombre) }}</div>
                </div>

            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-4 col-sm-offset-2" >
                    {{ form_widget(form.ingreso) }}
                    <div style="color:red;">{{ form_errors(form.ingreso) }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm"
           href="{{ path('recursohumano_administracion_contratacion_examentipo_lista') }}">Cancelar</a>
        {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}