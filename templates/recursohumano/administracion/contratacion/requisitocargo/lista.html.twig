{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <div class="table-responsive" style="padding:0px;">
        <table  class="table table-striped table-bordered table-condensed tabla-datos">
            <thead>
            <tr>
                <th>ID</th>
                <th>CARGO</th>
                <th>REQUISITO</th>
                <th>GENERAL</th>
                <th></th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
            </tr>
            </thead>
            <tbody>
            {% for arRequisitosConcepto in arRequisitosConceptos %}
                <tr>
                    <td>{{ arRequisitosConcepto.codigoRequisitoCargoPk  }}</td>
                    <td>{{ arRequisitosConcepto.nombreCargo }}</td>
                    <td>{{ arRequisitosConcepto.nombreRequisito }}</td>
                    <td>{{ arRequisitosConcepto.general ? 'SI':'NO' }}</td>
                    <td style="text-align: center;">
                        <a href="{{ path('recursohumano_administracion_contratacion_requisitocargo_nuevo',{'id' : arRequisitosConcepto.codigoRequisitoCargoPk}) }}">
                            <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                            </i>
                        </a>
                    </td>
                    <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRequisitosConcepto.codigoRequisitoCargoPk }}"/></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros
                <span class="badge">{{ arRequisitosConceptos.getTotalItemCount }}
            </span>
            </div>
        </div>
        <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
            {{ knp_pagination_render(arRequisitosConceptos) }}
        </div>
        <div class="btn-group" style="float: right; margin-right: 5px !important;">
            <a class="btn btn-sm btn-default" href="{{ path('recursohumano_administracion_contratacion_requisitocargo_nuevo',{'id':0}) }}">Nuevo</a>
        </div>
        <div class="btn-group" style="float: right; margin-right: 5px !important;">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group" style="float: right; margin-right: 5px !important;">
            {{ form_widget(form.btnEliminar) }}
        </div>
    </div>
    {{ form_end(form) }}
    {{ form_rest(form) }}
{% endblock %}





