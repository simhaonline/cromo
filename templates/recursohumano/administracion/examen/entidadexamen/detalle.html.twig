{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ notificar()|raw }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('recursohumano_administracion_examen_entidadexamen_lista') }}">Volver</a>
        </div>
    </div>
    <br/><br/>
    {% include 'recursohumano/administracion/examen/entidadexamen/informacion.html.twig' %}
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-condensed tabla-datos">
                        <thead>
                        <tr>
                            <th>CÓDIGO</th>
                            <th>TIPO EXÁMEN</th>
                            <th>PRECIO</th>
                            <th><input type="checkbox" name="ChkSeleccionarTodos"
                                       OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arEntidadExamenDetalle in arEntidadExamenDetalle %}
                            <tr>
                                <td>{{ arEntidadExamenDetalle.codigoExamenListaPrecioPk }}<input type="hidden"
                                                                                                 name="arrCodigo[]"
                                                                                                 value="{{ arEntidadExamenDetalle.codigoExamenListaPrecioPk }}">
                                </td>
                                <td>{{ arEntidadExamenDetalle.examenTipoRel.nombre }}</td>
                                <td style="text-align: center;"><input class="input-grid" type="text"
                                                                       name="arrPrecio[{{ arEntidadExamenDetalle.codigoExamenListaPrecioPk }}]"
                                                                       value="{{ arEntidadExamenDetalle.vrPrecio }} "
                                                                       style="text-align: right; width:60px"
                                                                       size="10"></td>
                                <td align="center"><input type="checkbox" name="ChkSeleccionar[]"
                                                          value="{{ arEntidadExamenDetalle.codigoExamenListaPrecioPk }}"/>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="btn-toolbar" style="float: right">
                                    <div class="btn-group">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('recursohumano_administracion_examen_entidadexamen_detalle_nuevo', {'codigoEntidadExamenPk': arEntidadExamenes.codigoEntidadExamenPk,'id': 0 }) }}', 'EntidadExamenAdicionarDetalle', 600, 900)">Nuevo</a>
                                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnActualizar) }}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminar) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
