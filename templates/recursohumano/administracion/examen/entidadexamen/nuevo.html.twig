                <div class="col-sm-4">
                    {{ form_widget(form.direccion) }}
                    {{ form_errors(form.direccion) }}
                </div>
                <label for="" class="control-label col-sm-2">Telefono:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.telefono) }}
                    {{ form_errors(form.telefono) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('recursohumano_administracion_examen_entidadexamen_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
