                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
                <label for="" class="control-label col-sm-2">Nit:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nit) }}
