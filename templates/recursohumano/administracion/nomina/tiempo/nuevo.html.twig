{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-4">
                    {{ form_widget(form.codigoTiempoPk,{ 'attr' : {'class' : 'form-control'}}) }}
                    <div style="color:red;">{{ form_errors(form.codigoTiempoPk) }}</div>
                </div>
                <label class="col-sm-2 control-label">Nombre</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombre, { 'attr': {'class' : 'form-control'} }) }}
                    <div style="color:red;">{{ form_errors(form.nombre) }}</div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Factor</label>
                <div class="col-sm-4">
                    {{ form_widget(form.factor,{ 'attr' : {'class' : 'form-control'}}) }}
                    <div style="color:red;">{{ form_errors(form.factor) }}</div>
                </div>
                <label class="col-sm-2 control-label">Factor horas dia</label>
                <div class="col-sm-4">
                    {{ form_widget(form.factorHorasDia, { 'attr': {'class' : 'form-control'} }) }}
                    <div style="color:red;">{{ form_errors(form.factorHorasDia) }}</div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Orden</label>
                <div class="col-sm-4">
                    {{ form_widget(form.orden,{ 'attr' : {'class' : 'form-control'}}) }}
                    <div style="color:red;">{{ form_errors(form.orden) }}</div>
                </div>
                <label class="col-sm-2 control-label">Abreviatura</label>
                <div class="col-sm-4">
                    {{ form_widget(form.abreviatura, { 'attr': {'class' : 'form-control'} }) }}
                    <div style="color:red;">{{ form_errors(form.abreviatura) }}</div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm"
           href="{{ path('recursohumano_administracion_nomina_tiempo_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
