{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">
            Parámetros iniciales
        </div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Fecha ultimo pago:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaUltimoPago) }}
                </div>
                <label class="col-sm-2 control-label">Fecha ultimo periodo primas:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaUltimoPagoPrimas) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Fecha ultimo periodo cesantías:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaUltimoPagoCesantias) }}
                </div>
                <label class="col-sm-2 control-label">Fecha ultimo periodo vacaciones:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaUltimoPagoVacaciones) }}
                </div>
            </div>
            <br/>
        </div>
    </div>
    <div class="modal-footer">
        {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock content %}