{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header role="heading" class="ui-sortable-handle">
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Filtro</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="form-group form-group-sm">
                        <label for="txtCodigoConductor" class="col-sm-2 control-label">Cliente:</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-lg-2">
                                    <div class="input-group">
                                        {{ form_widget(form.codigoEmpleadoFk) }}
                                    </div>
                                </div>
                                <div class="col-lg-10">
                                    <div class="input-group">
                                        <input id="form_txtNombreCorto" class="form-control" readonly>
                                        <span class="input-group-btn">
                                            <a class="btn btn-default btn-sm"
                                               href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado',
                                                   { 'campoCodigo': 'form_codigoEmpleadoFk', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class=" col-sm-2 control-label">Contrato tipo:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.contratoTipoRel) }}
                        </div>
                        <label class=" col-sm-2 control-label">Segmento:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.segmentoRel) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class=" col-sm-2 control-label">Fecha desde:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.fechaDesde) }}
                        </div>
                        <label class=" col-sm-2 control-label">Grupo:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.grupoRel) }}
                        </div>

                    </div>
                    <div class="form-group form-group-sm">
                        <label class=" col-sm-2 control-label">Fecha hasta:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.fechaHasta) }}
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
            <tr>
                <th>CÓDIGO</th>
                <th>TIPO</th>
                <th>FECHA</th>
                <th>IDENTIFICACIÓN</th>
                <th>EMPLEADO</th>
                <th>CARGO</th>
                <th>GRUPO PAGO</th>
                <th>HASTA</th>
                <th>COMENTARIO</th>
            </tr>
        </thead>
        <tbody>
            {% for arContrato in  arContratos %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arContrato.codigoContratoPk }}">{{ arContrato.codigoContratoPk }} </td>
                    <td>{{ arContrato.tipo  }}</td>
                    <td>{{ arContrato.fecha |date("Y/m/d")  }}</td>
                    <td>{{ arContrato.numeroIdentificacion  }}</td>
                    <td>{{ arContrato.nombreEmpleado  }}</td>
                    <td>{{ arContrato.cargo }}</td>
                    <td>{{ arContrato.centroCosto  }}</td>
                    <td>{{ arContrato.fechaHasta |date("Y/m/d")  }}</td>
                    <td>{{ arContrato.comentarioTerminacion  }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros
            <span class="badge">{{ arContratos.getTotalItemCount }}
            </span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arContratos) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    <br/><br/>
    {{ form_end(form) }}
{% endblock %}