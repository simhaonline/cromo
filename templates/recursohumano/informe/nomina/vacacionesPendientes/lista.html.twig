{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header>
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Filtro</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="form-group form-group-sm">
                        <label for="txtCodigoConductor" class="col-sm-1 control-label">Cliente:</label>
                        <div class="col-sm-11">
                            <div class="row">
                                <div class="col-lg-2">
                                    <div class="input-group">
                                        {{ form_widget(form.codigoClienteFk) }}
                                    </div>
                                </div>
                                <div class="col-lg-10">
                                    <div class="input-group">
                                        <input id="form_txtNombreCorto" class="form-control" readonly>
                                        <span class="input-group-btn">
                                            <a class="btn btn-default btn-sm"
                                               href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado',
                                                   { 'campoCodigo': 'form_codigoClienteFk', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="" class="col-sm-1 control-label">Desde:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="form_cboServicioRel" class="col-sm-1 control-label">Hasta:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <div class="col-sm-offset-2 col-sm-10">
                            {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos tabla-informacion">
        <thead>
        <tr>
            <th>CÓDIGO</th>
            <th>FECHA</th>
            <th>DESDE</th>
            <th>HASTA</th>
            <th>ULTIMO PAGO</th>
            <th>CÓDIGO EMPLEADO</th>
            <th>NOMBRE</th>
            <th>IDENTIFICACIÓN</th>
        </tr>
        </thead>
        <tbody>
        {% for  arContrato in arContratos %}
            <tr>
                <td>{{ arContrato.codigoContratoPk }}</td>
                <td>{{ arContrato.fecha | date('Y-m-d') }}</td>
                <td>{{ arContrato.fechaDesde | date('Y-m-d') }}</td>
                <td>{{ arContrato.fechaHasta | date('Y-m-d') }}</td>
                <td>{{ arContrato.fechaUltimoPagoVacaciones | date('Y-m-d') }}</td>
                <td>{{ arContrato.codigoEmpleadoFk }}</td>
                <td>{{ arContrato.empleado }}</td>
                <td>{{ arContrato.numeroIdentificacion }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros
            <span class="badge">{{ arContratos.getTotalItemCount }}
                    </span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arContratos) }}
    </div>
    <div class="btn-group btn-xs" style="float: left; width: 60px">
        {{ form_widget(form.limiteRegistros) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    {{ form_end(form) }}
    <br /><br /><br />
{% endblock %}