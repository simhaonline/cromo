{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_centroCostoRel" class="col-sm-2 control-label">Grupo pago:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_examenClaseRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.examenClaseRel, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.examenClaseRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_entidadExamen" class="col-sm-2 control-label">Entidad examen:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.entidadExamenRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_fecha" class="col-sm-2 control-label">Fecha examen:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fecha) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_identificacion" class="col-sm-2 control-label">Identificacion:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.identificacion, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.identificacion)}}
                </div>
                <label for="form_nombre" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombreCorto, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_cargoRel" class="col-sm-2 control-label">Cargo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cargoRel, {'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_codigoSexoFk" class="col-sm-2 control-label">Sexo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.codigoSexoFk, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaNacimiento" class="col-sm-2 control-label">Fecha nacimiento:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaNacimiento) }}
                </div>
                <label for="form_ciudadRel" class="col-sm-2 control-label">Ciudad nacimiento:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.ciudadRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_cobro" class="col-sm-2 control-label">Cobro:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cobro, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <div class="col-sm-4">{{ form_row(form.controlPago) }}</div>
                </div>
            </div>
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentario, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('recursohumano_movimiento_examen_examen_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
