{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr': {'class' :'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">
            Información general
        </div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtIdentificacion" class="col-sm-2 control-label">Empleado:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                <input id="txtCodigoEmpleado"  name="txtCodigoEmpleado"  type="text" class="form-control" value="{{ arDotacion.codigoEmpleadoFk |default('') }}"/>
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arDotacion.empleadoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado', { 'campoCodigo': 'txtCodigoEmpleado', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_numeroIdentificacion" class="col-sm-2 control-label">Fecha entrega:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaEntrega) }}
                    {{ form_errors(form.fechaEntrega) }}
                </div>
                <label for="form_numeroIdentificacion" class="col-sm-2 control-label">Tipo dotación:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.tipoDotacion) }}
                    {{ form_errors(form.tipoDotacion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_numeroIdentificacion" class="col-sm-2 control-label">Codigo interno referencia</label>
                <div class="col-sm-4">
                    {{ form_widget(form.codigoInternoReferencia) }}
                    {{ form_errors(form.codigoInternoReferencia) }}
                </div>
                <label for="form_numeroIdentificacion" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    {{ form_widget(form.afectaInventario) }}
                    {{ form_errors(form.afectaInventario) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_numeroIdentificacion" class="col-sm-2 control-label">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.comentarios) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm"
               href="{{ path('recursohumano_movimiento_dotacion_dotacion_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br>
    <br>
{% endblock %}