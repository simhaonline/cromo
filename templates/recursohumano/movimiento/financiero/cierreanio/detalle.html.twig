{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('recursohumano_movimiento_financiero_cierre_lista') }}">Volver</a>&nbsp;&nbsp;
        </div>
        <div class="btn-group">
            {% include 'estructura/botonera.html.twig' %}
        </div>
    </div>
    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered tabla-informacion">
        <tr>
            <td class="titulo">CODIGO:</td>
            <td class="td-in-well">{{ arCierre.codigoCierrePk }}</td>
            <td class="titulo">AÑO:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCierre.anio }}</td>
            <td class="titulo">MES:</td>
            <td class="td-in-well numero" style="text-transform: uppercase;">{{ arCierre.mes }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover tabla-datos">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>AÑO</th>
                            <th>MES</th>
                            <th>COD</th>
                            <th>DOC</th>
                            <th>EMPLEADO</th>
                            <th style="text-align: right">NOMINA</th>
                            <th style="text-align: right">APORTE</th>
                            <th style="text-align: right">PROVISION</th>
                            <th style="text-align: right">TOTAL</th>
                        </tr>
                        </thead>
                        <!--cromo-->
                        <tbody>
                        {% for arCosto in arCostos %}
                            <tr>
                                <td>{{ arCosto.codigoCostoPk }}</td>
                                <td>{{ arCosto.anio }}</td>
                                <td>{{ arCosto.mes }}</td>
                                <td>{{ arCosto.codigoEmpleadoFk }}</td>
                                <td>{{ arCosto.empleadoNumeroIdentificacion }}</td>
                                <td>{{ arCosto.empleadoNombreCorto }}</td>
                                <td style="text-align: right">{{ arCosto.vrNomina | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arCosto.vrAporte | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arCosto.vrProvision | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arCosto.vrTotal | number_format(0, '.', ',') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="btn-group" style="float: left">
                        <div class="btn-group" style="float: left">
                            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCostos.getTotalItemCount }}</span></div>
                            {{ knp_pagination_render(arCostos) }}
                        </div>
                    </div>
                    <div class="btn-toolbar" style="float: right">
                        <div class="btn-group">

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
    {{ form_end(form) }}
{% endblock %}