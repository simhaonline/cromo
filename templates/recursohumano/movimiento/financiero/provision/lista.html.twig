{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header role="heading" class="ui-sortable-handle">
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Filtro</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="form-group form-group-sm">
                        <label  class="col-sm-2 control-label">Año</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.txtAnio) }}
                        </div>
                        <label  class="col-sm-2 control-label">Mes</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.txtMes) }}
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>AÑO</th>
            <th>MES</th>
            <th>SALUD</th>
            <th>PENSION</th>
            <th>CAJA</th>
            <th>RIESGOS</th>
            <th>AUT</th>
            <th>APR</th>
            <th>ANU</th>
            <th></th>
            <th></th>
            <th class="text-center" title="seleccionar todo"><input type="checkbox" name="ChkSeleccionarTodos" onclick="ChequearTodosTabla(this, 'ChkSeleccionar[]')"> </th>
        </tr>
        </thead>
        <!--cromo-->
        <tbody>
        {% for arProvision in arProvisiones %}
            <tr>
                <td>{{ arProvision.codigoProvisionPeriodoPk }}</td>
                <td>{{ arProvision.anio }}</td>
                <td>{{ arProvision.mes }}</td>
                <td class="numero">{{ arProvision.vrSalud | number_format(0, '.', ',')}}</td>
                <td class="numero">{{ arProvision.vrPension | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arProvision.vrCaja | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arProvision.vrRiesgos | number_format(0, '.', ',') }}</td>
                <td>{{ arProvision.estadoAutorizado ? 'SI':'NO' }}</td>
                <td>{{ arProvision.estadoAprobado ? 'SI':'NO' }}</td>
                <td>{{ arProvision.estadoAnulado ? 'SI':'NO' }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('recursohumano_movimiento_financiero_provision_nuevo',{'id': arProvision.codigoProvisionPeriodoPk }) }}"><i
                                class="fa fa-edit" style="color: black;font-size: large;"></i></a>
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('recursohumano_movimiento_financiero_provision_detalle',{'id' : arProvision.codigoProvisionPeriodoPk}) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td class="text-center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arProvision.codigoProvisionPeriodoPk  }}"/></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros
            <span class="badge">{{ arProvisiones.getTotalItemCount }}
            </span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arProvisiones) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnEliminar) }}
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href=" {{ path('recursohumano_movimiento_financiero_provision_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    <br/><br/>
    {{ form_end(form) }}
{% endblock %}