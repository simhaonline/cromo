{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr': {'class' :'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-2 control-label">Empleado:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.codigoEmpleadoFk) }}
                                {{ form_errors(form.codigoEmpleadoFk) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto" name="txtNombreCorto" type="text" class="form-control"
                                       value="{{ arAdicional.empleadoRel.nombreCorto |default('') }}"
                                       readOnly="ReadOnly"/>
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado', { 'campoCodigo': 'adicional_codigoEmpleadoFk', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_creditoTipoRel" class="control-label col-sm-2">Concepto:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.conceptoRel) }}
                </div>
                <label for="credito_creditoPagoRel" class="control-label col-sm-2">Valor:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.vrValor) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="control-label col-sm-2">Detalle:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.detalle) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-4">
                    {{ form_widget(form.aplicaDiaLaborado) }}
                    {{ form_widget(form.aplicaNomina) }}
                    {{ form_widget(form.aplicaPrima) }}
                    {{ form_widget(form.aplicaCesantia) }}
                    {{ form_widget(form.estadoInactivoPeriodo) }}
                    {{ form_widget(form.estadoInactivo) }}
                </div>
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-4">

                </div>
            </div>
        </div>
    </div>
    <div></div>
    <div class="modal-footer">
        <div class="btn-group" style="float: left;">
            <a class="btn btn-sm btn-default" href="{{ path('recursohumano_movimiento_nomina_adicionalperiodo_lista') }}">Cancelar</a>
        </div>
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.guardar) }}
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br>
    <br>
{% endblock %}