{% extends 'base.html.twig' %}

{% block content %}
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_txtNumeroIdentificacion" class="col-sm-2 control-label">Empleado:</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
{#                                    <input id="form_txtNumeroIdentificacion" name="form_txtNumeroIdentificacion"#}
{#                                           type="text" class="form-control"#}
{#                                           value="{{ arLicencia.empleadoRel.numeroIdentificacion |default('') }}"/>#}
                                    {{ form_widget(form.codigoEmpleadoFk) }}

                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">
                                    <input id="form_txtNombreCorto" name="form_txtNombreCorto" type="text"
                                           class="form-control"
                                           value="{{ arLicencia.empleadoRel.nombreCorto |default('') }}"
                                           readOnly="ReadOnly"/>
                                    <span class="input-group-btn">
                                            <a class="btn btn-default btn-sm"
                                               href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado',
                                                   { 'campoCodigo': 'licencia_codigoEmpleadoFk', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_licenciaTipoRel" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.licenciaTipoRel, { 'attr': {'class': 'form-control', 'visible': 'false','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaDesde) }}
                    </div>
                    <label for="form_fechaDesde" class="col-sm-2 control-label">IBC propuesto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrIbcPropuesto) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaHasta) }}
                    </div>
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Valor propuesto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrPropuesto) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Fecha aplicacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaAplicacion) }}
                        {{ form_errors(form.fechaAplicacion) }}
                    </div>
                    <label for="form_afectaTransporte" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.aplicarAdicional) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_afectaTransporte" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estadoTranscripcion) }}
                    </div>
                    <label for="form_estadoCobrar" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estadoProrroga) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_afectaTransporte" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.afectaTransporte) }}
                    </div>
                    <label for="form_estadoCobrar" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estadoCobrar) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estadoCobrarCliente) }}
                    </div>
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.pagarEmpleado) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
        </div>
            <div class="modal-footer">
                    <a class="btn btn-default btn-sm"
                       href="{{ path('recursohumano_movimiento_nomina_licencia_lista') }}">Cancelar</a>
                    {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                </div>
                {{ form_end(form) }}
                <br/><br/><br/><br/>
    </section>
{% endblock %}