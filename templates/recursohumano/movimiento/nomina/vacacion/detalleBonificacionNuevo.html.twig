{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Bonificacion nuevo</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="pagoConceptoRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.conceptoRel, { 'attr': {'class': 'form-control to-select-2'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="TxtValor" class="col-sm-2 control-label">Valor:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.txtValor, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_widget(form.btnGuardar,{'attr':{'style':'float: right;'}}) }}
    {{ form_end(form) }}
{% endblock %}
