{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_fechaDesdeDisfrute" class="col-sm-2 control-label">Fecha desde disfrute:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaDesdeDisfrute) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaHastaDisfrute" class="col-sm-2 control-label">Fecha hasta disfrute:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaHastaDisfrute) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaInicioLabor" class="col-sm-2 control-label">Fecha inicio labor:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaInicioLabor) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_dias" class="col-sm-2 control-label">Dias:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.dias) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
