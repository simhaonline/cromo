{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr': {'class' :'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">

            <div class=" form-group form-group-sm">
                <label for="form_txtCodigoCliente" class="col-sm-offset-1 col-sm-1 control-label">Empleado:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class=" col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.codigoEmpleadoFk) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="form_txtNombreCorto" class="form-control" readonly>
                                <span class="input-group-btn">
                                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado', { 'campoCodigo': 'acreditacion_codigoEmpleadoFk', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                        </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.codigoAcreditacionTipoFk) }}
                    <div style="color:red;">{{ form_errors(form.codigoAcreditacionTipoFk) }}</div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Número registro:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.numeroRegistro) }}
                    <div style="color:red;">{{ form_errors(form.numeroRegistro) }}</div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Academia:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.codigoAcademiaFk) }}
                    <div style="color:red;">{{ form_errors(form.codigoAcademiaFk) }}</div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="col-sm-2 control-label">Fecha vencimiento:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaVencimiento) }}
                    <div style="color:red;">{{ form_errors(form.fechaVencimiento) }}</div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_comentarios" class="control-label col-sm-2">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios) }}
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Información rechazado</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2"></label>
                <div class="col-sm-4">
                    {{ form_widget(form.estadoRechazado) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-2">Motivo rechazo:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.motivoRechazo) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" style="float: left;"
           href="{{ path('recursohumano_movimiento_recurso_acreditacion_lista') }}">Volver</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
{% endblock %}