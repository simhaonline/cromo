{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr': {'class' :'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class=" form-group form-group-sm">
                <label for="form_txtCodigoCliente" class="col-sm-offset-1 col-sm-1 control-label">Empleado:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class=" col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.codigoEmpleadoFk) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="form_txtNombreCorto" class="form-control" readonly>
                                <span class="input-group-btn">
                                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('recursohumano_buscar_empleado', { 'campoCodigo': 'disciplinario_codigoEmpleadoFk', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_disciplinarioTipoRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.disciplinarioTipoRel) }}
                    {{ form_errors(form.disciplinarioTipoRel) }}
                </div>
                <label class="col-sm-2 control-label">Motivo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.disciplinarioMotivoRel) }}
                    {{ form_errors(form.disciplinarioMotivoRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_causal" class="col-sm-2 control-label">Causal o motivo:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.asunto, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
                    {{ form_errors(form.asunto) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaIncidente" class="col-sm-2 control-label">Fecha de incidente:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaIncidente) }}
                    {{ form_errors(form.fechaIncidente) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label  class="col-sm-2 control-label">Fecha notificacion:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaNotificacion) }}
                    {{ form_errors(form.fechaNotificacion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaAplicaProceso" class="col-sm-2 control-label">Fecha desde(sancion o terminacion):</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaDesdeSancion) }}
                    {{ form_errors(form.fechaDesdeSancion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaAplicaHastaProceso" class="col-sm-2 control-label">Fecha hasta(sancion):</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaHastaSancion) }}
                    {{ form_errors(form.fechaHastaSancion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_diasSuspension" class="col-sm-2 control-label">Días de sanción:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.diasSuspencion, { 'attr': {'class': 'form-control', 'placeholder': 'numero de dias de la sancion Ejemplo: 2'} }) }}
                    {{ form_errors(form.diasSuspencion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaIngresoTrabajo" class="col-sm-2 control-label">Fecha reinicia labores:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaIngresoTrabajo) }}
                    {{ form_errors(form.fechaIngresoTrabajo) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_reentrenamiento" class="col-sm-2 control-label">Reentrenamiento:</label>
                <div class="col-sm-1">
                    {{ form_widget(form.reentrenamiento, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.reentrenamiento) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Genera suspension:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.estadoSuspendido) }}
                    {{ form_errors(form.estadoSuspendido) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Procede:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.estadoProcede) }}
                    {{ form_errors(form.estadoProcede) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_comentarios" class="col-sm-2 control-label">Falta:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.disciplinariosFaltaRel) }}
                    {{ form_errors(form.disciplinariosFaltaRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.comentarios) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" style="float: left;"
           href="{{ path('recursohumano_movimiento_recurso_disciplinario_lista') }}">Volver</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
{% endblock %}