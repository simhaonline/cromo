{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header role="heading" class="ui-sortable-handle">
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Filtro</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="form-group form-group-sm">
                        <label  class="col-sm-2 control-label">Año</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.txtAnio) }}
                        </div>
                        <label  class="col-sm-2 control-label">Mes</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.txtMes) }}
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>AÑO</th>
            <th>MES</th>
            <th>SUCURSAL</th>
            <th></th>
            <th></th>
            <th class="text-center" title="seleccionar todas los grupos"><input type="checkbox" name="ChkSeleccionarTodos" onclick="ChequearTodosTabla(this, 'ChkSeleccionar[]')"> </th>
        </tr>
        </thead>
        <!--cromo-->
        <tbody>
        {% for arAporte in arAportes %}
            <tr>
                <td>{{ arAporte.codigoAportePk }}</td>
                <td>{{ arAporte.anio }}</td>
                <td>{{ arAporte.mes }}</td>
                <td>{{ arAporte.sucursalNombre }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('recursohumano_movimiento_seguridadsocial_aporte_nuevo',{'id': arAporte.codigoAportePk }) }}"><i
                                class="fa fa-edit" style="color: black;font-size: large;"></i></a>
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('recursohumano_movimiento_seguridadsocial_aporte_detalle',{'id' : arAporte.codigoAportePk}) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td class="text-center">
                    <input type="checkbox" name="ChkSeleccionar[]" value="{{ arAporte.codigoAportePk  }}"/>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros
            <span class="badge">{{ arAportes.getTotalItemCount }}
            </span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arAportes) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnEliminar) }}
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href=" {{ path('recursohumano_movimiento_seguridadsocial_aporte_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    <br/><br/>
    {{ form_end(form) }}
{% endblock %}