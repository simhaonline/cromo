                </div>
                <label for="form_bariio" class="col-sm-2 control-label">Barrio:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.barrio, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.barrio) }}
