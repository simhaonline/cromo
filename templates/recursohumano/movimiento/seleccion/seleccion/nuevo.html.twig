    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('administracion_lista',{'modulo':'recursoHumano','entidad':'solicitud'}) }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
