                    {{ form_widget(form.seleccionTipoRel, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.seleccionTipoRel) }}
                </div>
                <label for="form_solicitudRel" class="col-sm-2 control-label">Solicitud:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.solicitudRel, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.solicitudRel) }}
