<div class="col-lg-offset-1 col-lg-10" style=" align-items: center; display: flex; margin-bottom: 1%">
    <div class="col-md-6 col-lg-offset-2">
        <div class="input-group" >
            {#<input id="form_buscarAmigos" class="form-control">#}
            {{ form_widget(formBusqueda.busqueda) }}
            <span class="input-group-btn">
            {{ form_widget(formBusqueda.btnBuscar) }}
        </span>
        </div>
    </div>
    <div class="col-md-2">
        <a  onclick="notificacionAmigos()" style="cursor: pointer; display: flex"><i class="fas fa-user-friends" style="font-size: 20px"></i><div><b class="badge" style="font-size: 11px">2</b></div></a>
        <div id="notificacion_amigo" class="ajax-dropdown" style="top: 2em;left: -11em; height: auto">
            {% if misSolicitudes |length >0 %}
                {% for misSolicitudes in misSolicitudes %}
                    <div class="user" style="width: 100%;display: flex; border: 0px">
                        <div class="amigoDescripcion">
                            {% if misSolicitudes.foto is defined %}
                                <img  src="{{ misSolicitudes.foto }}" style="width: 60px; height: 60px" class="img-rounded" alt="demo user">
                            {% else %}
                                <img  src="{{ asset('img/avatars/sunny.png') }}" style="width: 60px; height: 60px" class="img-rounded" alt="demo user">
                            {% endif %}
                            <h1>{{ misSolicitudes.nombre }}</h1>
                        </div>
                        <div class="botonAmigos">
                            {#<div class="dropdown">#}
                                <li class="btn btn-default"><a href="#"><i class="fa fa-user-plus"></i> Aceptar</a></li>
                                {#<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">#}
                                    {#...#}
                                {#</button>#}
                                {#<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1" style="min-width: 100px">#}
                                    {#<li><a href="#"><i class="fa fa-user-plus"></i> Aceptar</a></li>#}
                                {#</ul>#}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>

