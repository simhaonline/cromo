{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="" class="col-sm-2 control-label">Banco:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.banco, { 'attr': {'class': 'form-control to-select-2'} }) }}
                </div>
                <label for="form_cboOperacionRel" class="col-sm-2 control-label">Secuencia:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.secuencia, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="col-sm-2 control-label">Aplicación:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaAplicacion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="col-sm-2 control-label">Transmision:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaTrasmision) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnGenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
