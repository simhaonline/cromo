{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Número</label>
                <div class="col-sm-10">
                    {{ form_widget(form.numero,{ 'attr' : {'class' : 'form-control'}}) }}
                    <div style="color:red;">{{ form_errors(form.numero) }}</div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Fecha</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fecha,{ 'attr' : {'class' : 'form-control'}}) }}
                    <div style="color:red;">{{ form_errors(form.numero) }}</div>
                </div>
                <label class="col-sm-2 control-label">tipo</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cuentaTipoRel) }}
                    <div style="color:red;">{{ form_errors(form.cuentaTipoRel) }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm"
           href="{{ path('tesoreria_movimiento_cuenta_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
