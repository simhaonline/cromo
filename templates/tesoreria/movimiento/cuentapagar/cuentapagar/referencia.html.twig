{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered tabla-informacion">
                <tr>
                    <td class="titulo">CODIGO:</td>
                    <td class="td-in-well">{{ arCuentaPagar.codigoCuentaPagarPk }}</td>
                    <td class="titulo">NUMERO DOCUMENTO:</td>
                    <td class="td-in-well" style="text-transform: uppercase;">{{ arCuentaPagar.numeroDocumento }}</td>
                    <td class="titulo">ABONO:</td>
                    <td align="right">{{ arCuentaPagar.vrAbono | number_format(0, '.', ',') }}</td>
                </tr>
            </table>
        </div>
    </div>

    <h1>Movimiento</h1>
    <table class='table table-striped table-bordered table-hover tabla-datos'>
        <thead>
        <tr>
            <th>ID</th>
            <th>COD</th>
            <th>NUMERO</th>
            <th>VALOR</th>
        </tr>
        </thead>
        <tbody>
        {% for arMovimientoDetalle in arMovimientoDetalles %}
            <tr>
                <td>{{ arMovimientoDetalle.codigoMovimientoDetallePk }}</td>
                <td>{{ arMovimientoDetalle.codigoMovimientoFk }}</td>
                <td>{{ arMovimientoDetalle.numero }}</td>
                <td class="numero">{{ arMovimientoDetalle.vrPago | number_format(0, '.', ',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}