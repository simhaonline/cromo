{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ notificar()|raw }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('tesoreria_movimiento_egreso_egreso_lista') }}">Volver</a>&nbsp;&nbsp;
        </div>
    </div>
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {% include 'estructura/botonera.html.twig' %}
        </div>
        {{ form_widget(form.btnArchivoPlanoBbva) }}
    </div>
    <div style="float:right">
        {% if arEgreso.estadoAutorizado == true %}<span class="label label-default">Autorizado</span>{% endif %}
        {% if arEgreso.estadoAprobado == true %}<span class="label label-success">Aprobado</span>{% endif %}
        {% if arEgreso.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}
        {% if arEgreso.estadoImpreso == true %}<span class="label label-success">Impreso</span>{% endif %}
    </div>
    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered tabla-informacion">
        <tr>
            <td class="titulo">CODIGO:</td>
            <td class="td-in-well">{{ arEgreso.codigoEgresoPk }}</td>
            <td class="titulo">TERCERO:</td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arEgreso.terceroRel.nombreCorto }}</td>
            <td class="titulo">PAGO:</td>
            <td class="td-in-well"
                style="text-align: right;">{{ arEgreso.vrPagoTotal |number_format(0, '.', ',') }}</td>

        </tr>
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arEgreso.numero }}</td>
            <td class="titulo">USUARIO:</td>
            <td class="td-in-well" style="text-transform: uppercase;"></td>
            <td class="titulo">TOTAL:</td>
            <td class="td-in-well"
                style="text-align: right;">{{ arEgreso.vrPago |number_format(0, '.', ',') }}</td>

        </tr>
        <tr>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arEgreso.fecha | date('Y-m-d') }}</td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"
                style="text-align: right;"></td>
        </tr>
        <tr>
            <td class="titulo">COMENTARIO:</td>
            <td class="td-in-well" colspan="6">{{ arEgreso.comentarios }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover tabla-datos">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>NUMERO</th>
                            <th>TERCERO</th>
                            <th>IDENTIFICAICON</th>
                            <th>SALDO</th>
                            <th style="width: 12%;">PAGO</th>
                            <th><input type="checkbox" name="ChkSeleccionarTodosDetalle"
                                       OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arEgresoDetalle in arEgresoDetalles %}
                            <tr>
                                <td>{{ arEgresoDetalle.codigoEgresoDetallePk }}</td>
                                <td>{{ arEgresoDetalle.numero }}</td>
                                <td>{{ arEgresoDetalle.nombreCorto }}</td>
                                <td>{{ arEgresoDetalle.numeroIdentificacion }}</td>
                                <td style="text-align: right">{{ arEgresoDetalle.vrSaldo |number_format(0,'.',',') }}</td>
                                {% if arEgreso.estadoAutorizado == false %}
                                    <td style="text-align: center">
                                        <input class="input-valor" type="number" placeholder="% DESCUENTO"
                                               name="TxtVrPago{{ arEgresoDetalle.codigoEgresoDetallePk }}"
                                               value="{{ arEgresoDetalle.vrPagoAfectar }}"
                                               style="text-align: right; width:90px" size="10"/>
                                    </td>
                                {% else %}
                                    <td style="text-align: right">
                                        {{ arEgresoDetalle.vrPago | number_format(0, '.', ',') }}
                                    </td>
                                {% endif %}
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]"
                                                                       value="{{ arEgresoDetalle.codigoEgresoDetallePk }}"/>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {#<div class="separador-1"></div>#}
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {% if arEgreso.estadoAutorizado == true %}
                            <input type="button" class="btn btn-default btn-sm" href="#" disabled="disabled"
                                   value="Nuevo"/>
                        {% else %}
                            <a class="btn btn-default btn-sm"
                               href="javascript:abrirVentana3('{{ path('tesoreria_movimiento_egreso_egreso_detalle_nuevo', {'id' : arEgreso.codigoEgresoPk }) }}', 'egreso detalle', 600, 900)">Nuevo</a>
                        {% endif %}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnActualizar) }}
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminar) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arEgresoDetalles.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs">
        {{ knp_pagination_render(arEgresoDetalles) }}
    </div>
    {{ form_end(form) }}
{% endblock %}

