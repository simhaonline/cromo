{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header role="heading" class="ui-sortable-handle">
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Filtro</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="form-group form-group-sm">
                        <label for="txtCodigoConductor" class="col-sm-1 control-label">Tercero:</label>
                        <div class="col-sm-11">
                            <div class="row">
                                <div class="col-lg-2">
                                    <div class="input-group">
                                        {{ form_widget(form.txtCodigoTercero) }}
                                    </div>
                                </div>
                                <div class="col-lg-10">
                                    <div class="input-group">
                                        {{ form_widget(form.txtNombreCorto) }}
                                        <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('tesoreria_buscar_tercero', { 'campoCodigo': 'form_txtCodigoTercero', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class=" col-sm-1 control-label">Codigo:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoEgresoPk) }}
                        </div>
                        <label class=" col-sm-1 control-label">Tipo:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoEgresoTipoFk) }}
                        </div>
                        <label class="col-sm-1 col-sm-offset-3 control-label">Autorizado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoAutorizado) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-sm-1 control-label">Desde:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.fechaDesde) }}
                        </div>
                        <label class="col-sm-1 control-label col-sm-offset-6">Aprobado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoAprobado, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-sm-1 control-label">Hasta:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.fechaHasta) }}
                        </div>
                        <label class="col-sm-1 control-label col-sm-offset-6">Anulado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoAnulado, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>FECHA</th>
            <th title="Fecha de pago">FECHA P</th>
            <th>TIPO</th>
            <th>TERCERO</th>
            <th title="Estado autorizado">AUT</th>
            <th title="Estado aprobado">APR</th>
            <th title="Estado anulado">ANU</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arEgreso in arEgresos %}
            <tr>
                <td>{{ arEgreso.codigoEgresoPk }}</td>
                <td>{{ arEgreso.fecha | date('Y-m-d') }}</td>
                <td>{{ arEgreso.fechaPago | date('Y-m-d') }}</td>
                <td>{{ arEgreso.tipo }}</td>
                <td>{{ arEgreso.tercero }}</td>
                <td>{{ arEgreso.estadoAutorizado ? 'SI':'NO' }}</td>
                <td>{{ arEgreso.estadoAprobado ? 'SI':'NO' }}</td>
                <td>{{ arEgreso.estadoAnulado ? 'SI':'NO' }}</td>
                {% if arEgreso.estadoAutorizado %}
                    <td></td>
                {% else %}
                    <td style="text-align: center;">
                        <a href="{{ path('tesoreria_movimiento_egreso_egreso_nuevo',{'id': arEgreso.codigoEgresoPk }) }}"><i
                                    class="fa fa-edit" style="color: black;font-size: large;"></i></a>
                    </td>
                {% endif %}
                <td style="text-align: center;">
                    <a href="{{ path('tesoreria_movimiento_egreso_egreso_detalle',{'id' : arEgreso.codigoEgresoPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros
            <span class="badge">{{ arEgresos.getTotalItemCount }}
            </span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arEgresos) }}
    </div>
    <div class="btn-group btn-xs" style="float: left; width: 60px">
        {{ form_widget(form.limiteRegistros) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        {{ form_widget(form.btnEliminar) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        <a class="btn btn-default btn-sm"
           href="{{ path('tesoreria_movimiento_egreso_egreso_nuevo', {'id': 0}) }}">Nuevo</a>
    </div>
    <br/><br/>
    {{ form_end(form) }}
{% endblock %}