{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Cliente:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtCliente, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-1 control-label">Identificacion:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtNit, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>NUMERO IDENTIFICACION</th>
            <th>TELEFONO</th>
            <th>CELULAR</th>
            <th>DIRECCION</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arCliente in arCliente %}
            <tr>
                <td>{{ arCliente.codigoClientePk }}</td>
                <td>{{ arCliente.nombreCorto }}</td>
                <td>{{ arCliente.numeroIdentificacion }}</td>
                <td>{{ arCliente.telefono }}</td>
                <td>{{ arCliente.movil }}</td>
                <td>{{ arCliente.direccion }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('transporte_administracion_comercial_cliente_nuevo',{'id' : arCliente.codigoClientePk}) }}">
                        <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('transporte_administracion_comercial_cliente_detalle',{'id' : arCliente.codigoClientePk}) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCliente.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arCliente) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('transporte_administracion_comercial_cliente_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

