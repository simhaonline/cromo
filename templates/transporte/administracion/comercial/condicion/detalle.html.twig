{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('transporte_administracion_comercial_condicion_lista') }}">Volver</a>
        </div>
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered tabla-datos">
        <tr>
            <td class="titulo"><b>CODIGO CONDICION:</b></td>
            <td class="td-in-well">{{ arCondicion.codigoCondicionPk }}</td>
            <td class="titulo"><b>NOMBRE:</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCondicion.nombre }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>PRECIO:</b></td>
            <td class="td-in-well">{{ arCondicion.precioRel.nombre }}</td>
            <td class="titulo"><b>DIGITO</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCondicion.porcentajeManejo }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>MANEJO MINIMO UNIDAD:</b></td>
            <td class="td-in-well">{{ arCondicion.manejoMinimoUnidad }}</td>
            <td class="titulo"><b>MANEJO MINIMO DESPACHO:</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCondicion.manejoMinimoDespacho }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>PRECIO PESO:</b></td>
            <td class="td-in-well numero">{{ arCondicion.precioPeso }}</td>
            <td class="titulo"><b>PRECIO UNIDAD:</b></td>
            <td class="td-in-well numero">{{ arCondicion.precioUnidad }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>PRECIO ADICIONAL:</b></td>
            <td class="td-in-well numero">{{ arCondicion.precioAdicional }}</td>
            <td class="titulo"><b>PRECIO GENERAL:</b></td>
            <td class="td-in-well numero">{{ arCondicion.precioGeneral }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>PERMITE RECAUDO:</b></td>
            <td class="td-in-well">{{ arCondicion.permiteRecaudo ? 'SI' : 'NO' }}</td>
            <td class="titulo"><b>REDONDEAR FLETE:</b></td>
            <td class="td-in-well">{{ arCondicion.redondearFlete ? 'SI' : 'NO'}}</td>
        </tr>
        <tr>
            <td class="titulo"><b>DESCUENTO PESO:</b></td>
            <td class="td-in-well numero">{{ arCondicion.descuentoPeso }}</td>
            <td class="titulo"><b>DESCUENTO UNIDAD:</b></td>
            <td class="td-in-well numero">{{ arCondicion.descuentoUnidad }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>PESO MINIMO:</b></td>
            <td class="td-in-well">{{ arCondicion.pesoMinimo }}</td>
            <td class="titulo"><b>LIMITAR DESCUENTO REEXPEDICION:</b></td>
            <td class="td-in-well">{{ arCondicion.limitarDescuentoReexpedicion ? 'SI' : 'NO' }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#descuento" data-toggle="tab">Zonas</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="descuento">
            <div id="descuento" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover tabla-datos">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>ORIGEN</th>
                            <th>ZONA</th>
                            <th>DESCUENTO</th>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arCondicionZona in arCondicionesZona %}
                            <tr>
                                <td>{{ arCondicionZona.codigoCondicionZonaPk }}</td>
                                <td>{{ arCondicionZona.ciudadOrigenNombre }}</td>
                                <td>{{ arCondicionZona.zonaNombre }}</td>
                                <td>{{ arCondicionZona.descuentoPeso }}</td>
                                <td style="text-align: center;">
                                    <a href="javascript:abrirVentana3('{{ path('transporte_administracion_comercial_condicion_detalle_nuevo', {'codigoCondicion': arCondicion.codigoCondicionPk, 'id': arCondicionZona.codigoCondicionZonaPk }) }}', 'condiciones', 600, 900)"><i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;"></i></a>
                                </td>
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCondicionZona.codigoCondicionZonaPk }}"/>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm"
                           href="javascript:abrirVentana3('{{ path('transporte_administracion_comercial_condicion_detalle_nuevo', {'codigoCondicion': arCondicion.codigoCondicionPk, 'id': '0' }) }}', 'condiciones', 600, 900)">Nuevo</a>
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminarDetalle, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}