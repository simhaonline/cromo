{% extends 'base_transporte.html.twig' %}
{% block content %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>% MANEJO</th>
            <th>MANEJO MINIMO UNIDAD</th>
            <th>MANEJO MINIMO DESPACHO</th>
            <th>PRECIO PESO</th>
            <th>PRECIO UNIDAD</th>
            <th>PRECIO ADICIONAL</th>
            <th>DESCUENTO PESO</th>
            <th>DESCUENTO UNIDAD</th>
            <th>PERMITE RECAUDO</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arCondicion in arCondiciones %}
            <tr>
                <td>{{ arCondicion.codigoCondicionPk }}</td>
                <td>{{ arCondicion.nombre }}</td>
                <td style="text-align: center;">{{ arCondicion.porcentajeManejo }}</td>
                <td style="text-align: center;">{{ arCondicion.manejoMinimoUnidad }}</td>
                <td style="text-align: center;">{{ arCondicion.manejoMinimoDespacho }}</td>
                {{ validarTipo(arCondicion.precioPeso) }}
                {{ validarTipo(arCondicion.precioUnidad) }}
                {{ validarTipo(arCondicion.precioAdicional) }}
                <td style="text-align: right;">{{ arCondicion.descuentoPeso }}</td>
                <td style="text-align: right;">{{ arCondicion.descuentoUnidad }}</td>
                {{ validarTipo(arCondicion.permiteRecaudo) }}
                <td style="text-align: center;">
                    <a href="{{ path('transporte_administracion_comercial_condicion_nuevo',{'id' : arCondicion.codigoCondicionPk}) }}">
                        <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center"><a href="{{ path('transporte_administracion_comercial_condicion_detalle', { 'id': arCondicion.codigoCondicionPk }) }}"><img src="{{ asset('../public/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCondiciones.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arCondiciones) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('transporte_administracion_comercial_condicion_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
{% endblock %}