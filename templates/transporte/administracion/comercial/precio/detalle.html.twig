{% extends 'base_transporte.html.twig' %}
{% block content %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="row">
        <!-- /.col-lg-12 -->
    </div>
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo"><b>CODIGO:</b></td>
            <td class="td-in-well">{{ arPrecio.codigoPrecioPk }}</td>
            <td class="titulo"><b>NOMBRE</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arPrecio.nombre }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>FECHA VENCE:</b></td>
            <td class="td-in-well">{{ arPrecio.fechaVence | date ('Y-m-d') }}</td>
            <td class="titulo"><b></b></td>
            <td></td>
        </tr>
        <tr>
            <td class="titulo"><b>COMENTARIOS:</b></td>
            <td class="td-in-well" colspan="7">{{ arPrecio.comentario }}</td>
        </tr>
    </table>
    <a name="marcador"></a>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#contrato" data-toggle="tab">Detalle</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="guias">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th><p data-toggle="tooltip" data-placement="top" title="PORCENTAJE MANEJO">ID</p></th>
                            <th><p data-toggle="tooltip" data-placement="top" title="MANEJO UNIDAD MINIMO">VR PESO</p></th>
                            <th><p data-toggle="tooltip" data-placement="top" title="MANEJO DESPACHO MINIMO">VR UND</p>
                            <th><p data-toggle="tooltip" data-placement="top" title="MANEJO DESPACHO MINIMO">PESO TOPE</p>
                            <th><p data-toggle="tooltip" data-placement="top" title="MANEJO DESPACHO MINIMO">VR PESO TOPE</p>
                            <th><p data-toggle="tooltip" data-placement="top" title="MANEJO DESPACHO MINIMO">VR PESO TOPE ADIC</p>
                            <th><p data-toggle="tooltip" data-placement="top" title="MANEJO DESPACHO MINIMO">MINIMO</p>
                            <th></th>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arPrecioDetalle in arPrecioDetalles %}
                            <tr>
                                <td>{{ arPrecioDetalle.codigoPrecioDetallePk }}</td>
                                <td>{{ arPrecioDetalle.vrPeso }}</td>
                                <td>{{ arPrecioDetalle.vrUnidad }}</td>
                                <td>{{ arPrecioDetalle.pesoTope }}</td>
                                <td>{{ arPrecioDetalle.vrPesoTope }}</td>
                                <td>{{ arPrecioDetalle.vrPesoTopeAdicional }}</td>
                                <td>{{ arPrecioDetalle.minimo }}</td>
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]"
                                value="{{ arPrecioDetalle.codigoPrecioDetallePk }}"/></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm"
                        href="javascript:abrirVentana3('{{ path('transporte_administracion_comercial_precio_detalle_nuevo', {'id': arPrecio.codigoPrecioPk }) }}', 'precioDetalles', 600, 900)">Nuevo</a>
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnEliminarDetalle, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <a class="btn btn-default btn-sm" href="{{ path('transporte_administracion_comercial_precio_lista') }}">Volver</a>
{% endblock %}
