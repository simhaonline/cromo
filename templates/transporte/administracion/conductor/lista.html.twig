{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-1 control-label">Nombre:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.txtNombre, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label"></label>
                <div class="col-sm-5">

                </div>
            </div>

            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>IDENTIFICACION</th>
            <th>NOMBRE</th>
            <th>TELEFONO</th>
            <th>CELULAR</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arConductor in arConductor %}
            <tr>
                <td>{{ arConductor.codigoConductorPk }}</td>
                <td style="text-align: center">{{ arConductor.numeroIdentificacion }}</td>
                <td>{{ arConductor.nombreCorto }}</td>
                <td>{{ arConductor.telefono }}</td>
                <td>{{ arConductor.movil }}</td>
                <td style="text-align: center;">
                        <a href="{{ path('transporte_administracion_transporte_conductor_nuevo',{'id' : arConductor.codigoConductorPk}) }}">
                            <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                            </i>
                        </a>
                </td>
                <td style="text-align: center"><a href="{{ path('admin_detalle',{'modulo':'transporte','entidad':'conductor','id': arConductor.codigoConductorPk }) }}"><i class="fa fa-share-square-o" style="font-size: large;color: black;">
                </i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arConductor.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arConductor) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('transporte_administracion_transporte_conductor_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

