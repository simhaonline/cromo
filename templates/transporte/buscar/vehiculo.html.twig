{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    <script language="javascript">
        function selTercero(codigo, campoCodigo)
        {
            opener.document.getElementById(campoCodigo).value = codigo;
            opener.document.getElementById(campoCodigo).focus();
            self.close();
        }
    </script>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">

            <div class="form-group form-group-sm">
                <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.TxtPlaca , { 'attr': {'class': 'form-control','autofocus':true, 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>{{ knp_pagination_sortable(arVehiculos, 'CÃ“DIGO', 'e.codigoVehiculoPk') }}</th>
            <th></th>
        </tr>
        {% for arVehiculos in arVehiculos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arVehiculos.codigoVehiculoPk }}">{{ arVehiculos.codigoVehiculoPk }} </td>
                <td style="text-align: center"><a href="javascript:selTercero('{{ arVehiculos.codigoVehiculoPk }}','{{ campoCodigo }}')" ><img src="{{ asset('../public/img/bootstrap/glyphicons_198_ok.png') }}" width=20 height=20></a></td>
            </tr>
        {% endfor %}
    </table>


    <!-- Botones Menu Items -->
    <div class="btn-toolbar">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arVehiculos.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arVehiculos) }}
        </div>
    </div>
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
