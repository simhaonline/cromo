{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-2 control-label">Anio:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtAnio) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">

                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-2 control-label">Mes:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtMes) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>AÃ‘O</th>
            <th>MES</th>
            <th>CLIENTE</th>
            <th>DESTINO</th>
            <th>COSTO</th>
            <th>C_PES</th>
            <th>C_VOL</th>
            <th>C_UNI</th>
            <th>PRECIO</th>
            <th>RENT</th>
            <th>%RENT</th>
        </tr>
        </thead>
        <tbody>
        {% for arCosto in arCostos %}
            <tr>
                <td>{{ arCosto.codigoCostoPk }}</td>
                <td>{{ arCosto.anio }}</td>
                <td>{{ arCosto.mes }}</td>
                <td>{{ arCosto.nombreCliente }}</td>
                <td>{{ arCosto.destino }}</td>
                <td class="numero">{{ arCosto.vrCosto | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arCosto.vrCostoPeso | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arCosto.vrCostoVolumen | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arCosto.vrCostoUnidad | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arCosto.vrPrecio | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arCosto.vrRentabilidad | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arCosto.porcentajeRentabilidad | number_format(0, '.', ',') }}</td>
            </tr>
        {% endfor %}

    </table>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

