{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header role="heading" class="ui-sortable-handle">
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Filtro</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="panel-body">
                        <div class="form-group form-group-sm">
                            <label for="txtCodigoCliente" class="col-sm-1 control-label">Cliente:</label>
                            <div class="col-sm-11">
                                <div class="row">
                                    <div class="col-lg-2">
                                        <div class="input-group">
                                            {{ form_widget(form.txtCodigoCliente) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-10">
                                        <div class="input-group">
                                            {{ form_widget(form.txtNombreCorto) }}
                                            <span class="input-group-btn">
                                            <a class="btn btn-default btn-sm"
                                               href="javascript:abrirVentana3('{{ path('transporte_bus_cliente', { 'campoCodigo': 'form_txtCodigoCliente', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                        </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        {{ form_widget(form.btnFiltrar) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos tabla-informacion">
        <thead>
        <tr>
            <th>ID</th>
            <th>FECHA</th>
            <th>HORA</th>
            <th>CLIENTE</th>
            <th>ANUNCIANTE</th>
            <th>DIRECCION</th>
            <th>CIUDAD</th>
            <th>TELEFONO</th>
            <th>UND</th>
            <th>PES</th>
            <th>VOL</th>
        </tr>
        </thead>
        <tbody>
        {% for arRecogida in arRecogidas %}
            <tr>
                <td>{{ arRecogida.codigoRecogidaPk }}</td>
                <td>{{ arRecogida.fecha | date('Y-m-d') }}</td>
                <td>{{ arRecogida.fecha | date('H:i') }}</td>
                <td>{{ arRecogida.clienteNombreCorto }}</td>
                <td>{{ arRecogida.anunciante }}</td>
                <td>{{ arRecogida.direccion }}</td>
                <td>{{ arRecogida.ciudad }}</td>
                <td>{{ arRecogida.telefono }}</td>
                <td style="text-align: right">{{ arRecogida.unidades }}</td>
                <td style="text-align: right">{{ arRecogida.pesoReal }}</td>
                <td style="text-align: right">{{ arRecogida.pesoVolumen }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRecogidas.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRecogidas) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
    </div>
    <br/><br/><br/>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

