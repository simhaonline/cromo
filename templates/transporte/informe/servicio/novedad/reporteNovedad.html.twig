{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-1 control-label">Cliente:</label>
                <div class="col-sm-11">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.txtCodigoCliente) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                {{ form_widget(form.txtNombreCorto) }}
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('transporte_bus_cliente', { 'campoCodigo': 'form_txtCodigoCliente', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaDesde) }}
                </div>
                <label class="col-sm-1 control-label">Atendido:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.chkEstadoAtendido) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaHasta) }}
                </div>
                <label class="col-sm-1 control-label">Solucionado:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.chkEstadoSolucionado) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>GUIA</th>
            <th>DOC CLIENTE</th>
            <th>CLIENTE</th>
            <th>REMITENTE</th>
            <th>DESTINO</th>
            <th>UND</th>
            <th>PES</th>
            <th>TIPO</th>
            <th>DESCRIPCION</th>
            <th>EMPAQUE</th>
            <th>REGISTRO</th>
            <th>GUIA INGRESO</th>
            <th>ATE</th>
            <th>SOL</th>
        </tr>
        </thead>
        <tbody>
        {% for arNovedad in arNovedades %}
            <tr>
                <td>{{ arNovedad.codigoNovedadPk }}</td>
                <td>{{ arNovedad.guia }}</td>
                <td>{{ arNovedad.documentoCliente }}</td>
                <td>{{ arNovedad.cliente }}</td>
                <td>{{ arNovedad.remitente }}</td>
                <td>{{ arNovedad.ciudadDestino }}</td>
                <td>{{ arNovedad.unidades }}</td>
                <td>{{ arNovedad.pesoVolumen }}</td>
                <td>{{ arNovedad.nombreTipo }}</td>
                <td>{{ arNovedad.descripcion }}</td>
                <td>{{ arNovedad.empaqueReferencia }}</td>
                <td>{{ arNovedad.fechaRegistro |date('Y-m-d H:i') }}</td>
                <td>{{ arNovedad.fechaIngreso |date('Y-m-d H:i') }}</td>
                <td>{% if arNovedad.estadoAtendido == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arNovedad.estadoSolucion == 1 %} SI {% else %} NO {% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arNovedades.getTotalItemCount }}</span></div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arNovedades) }}
    </div>
    <div class="btn-group">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

