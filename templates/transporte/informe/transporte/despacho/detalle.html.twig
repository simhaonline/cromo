{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-1 control-label">Cliente:</label>
                <div class="col-sm-11">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.txtCodigoCliente) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                {{ form_widget(form.txtNombreCorto) }}
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('transporte_bus_cliente', { 'campoCodigo': 'form_txtCodigoCliente', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Despacho:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtCodigoDespacho) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>CLIENTE</th>
            <th>IDENTIFICACION</th>
            <th>DESPACHO</th>
            <th>UNIDADES</th>
            <th>PESO REAL</th>
            <th>PESO VOLUMEN</th>
            <th>DECLARA</th>
            <th>FLETE</th>
        </tr>
        </thead>
        <tbody>
        {% for arDespachoDetalles in arDespachoDetalles %}
            <tr>
                <td>{{ arDespachoDetalles.codigoDespachoDetallePk }}</td>
                <td>{{ arDespachoDetalles.nombreCorto }}</td>
                <td>{{ arDespachoDetalles.numeroIdentificacion }}</td>
                <td>{{ arDespachoDetalles.codigoDespachoPk }}</td>
                <td style="text-align: right">{{ arDespachoDetalles.unidades }}</td>
                <td style="text-align: right">{{ arDespachoDetalles.pesoReal }}</td>
                <td style="text-align: right">{{ arDespachoDetalles.pesoVolumen }}</td>
                <td class="numero">{{ arDespachoDetalles.vrDeclara | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arDespachoDetalles.vrFlete | number_format(0, '.', ',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arDespachoDetalles.getTotalItemCount }}</span></div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arDespachoDetalles) }}
    </div>
    <div class="btn-group">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

