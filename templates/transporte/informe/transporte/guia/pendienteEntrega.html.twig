{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Guia:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtGuia, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Conductor:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtConductor, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Documento cliente:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtDocumentoCliente, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Novedad:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.chkEstadoNovedad) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaDesdeEntrega) }}
                </div>
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaHastaEntrega) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>OI</th>
            <th>OC</th>
            <th>DOC CLIENTE</th>
            <th>FECHA</th>
            <th>CLIENTE</th>
            <th>DESTINO</th>
            <th>MANIFIESTO</th>
            <th>CELULAR</th>
            <th>CONDUCTOR</th>
            <th>FLETE</th>
            <th>UND</th>
            <th>PES</th>
            <th>VOL</th>
            <th>NOV</th>
        </tr>
        </thead>
        <tbody>
        {% for arGuia in arGuias %}
            <tr>
                <td>{{ arGuia.codigoGuiaPk }}</td>
                <td>{{ arGuia.codigoOperacionIngresoFk }}</td>
                <td>{{ arGuia.codigoOperacionCargoFk }}</td>
                <td>{{ arGuia.documentoCliente }}</td>
                <td>{{ arGuia.fechaIngreso | date('Y-m-d') }}</td>
                <td>{{ arGuia.clienteNombreCorto }}</td>
                <td>{{ arGuia.ciudadDestino }}</td>
                <td>{{ arGuia.manifiesto }}</td>
                <td>{{ arGuia.movil }}</td>
                <td>{{ arGuia.nombreCorto }}</td>
                <td class="numero">{{ arGuia.vrFlete }}</td>
                <td class="numero">{{ arGuia.unidades }}</td>
                <td class="numero">{{ arGuia.pesoReal }}</td>
                <td class="numero">{{ arGuia.pesoVolumen }}</td>
                {{ validarTipo(arGuia.estadoNovedad) }}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arGuias.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arGuias) }}
    </div>
    <div class="btn-group">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

