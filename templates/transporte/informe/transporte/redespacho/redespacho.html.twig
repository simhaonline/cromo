{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaDesde) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaHasta) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>FECHA</th>
            <th>GUIA</th>
            <th>NUMERO</th>
            <th>DESPACHO</th>
            <th>NUMERO</th>
            <th>DESTINATARIO</th>
            <th>DESTINO</th>
            <th>MOTIVO</th>
        </tr>
        </thead>
        <tbody>
        {% for arRedespacho in arRedespachos %}
            <tr>
                <td>{{ arRedespacho.codigoRedespachoPk }}</td>
                <td>{{ arRedespacho.fecha | date('Y-m-d') }}</td>
                <td>{{ arRedespacho.codigoGuiaFk }}</td>
                <td>{{ arRedespacho.numeroGuia }}</td>
                <td>{{ arRedespacho.codigoDespachoFk }}</td>
                <td>{{ arRedespacho.numeroDespacho }}</td>
                <td>{{ arRedespacho.nombreDestinatario }}</td>
                <td>{{ arRedespacho.destinoNombre }}</td>
                <td>{{ arRedespacho.motivoNombre }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arRedespachos.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRedespachos) }}
    </div>
    <div class="btn-group" style="float: right">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
    </div>
    <br/><br/><br/>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}


