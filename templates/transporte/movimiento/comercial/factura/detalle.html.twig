{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    <div style="float:right">
        {% if 1 == 1 %}<span class="label label-default">Generado</span>{% endif %}
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arFactura.codigoFacturaPk }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arFactura.fecha |date("Y/m/d") }}</td>
            <td class="titulo" >FLETE:</td>
            <td align="right">{{ arFactura.vrFlete | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo">GUIAS:</td>
            <td class="td-in-well">{{ arFactura.guias }}</td>
            <td class="titulo" >MANEJO:</td>
            <td align="right">{{ arFactura.vrManejo | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >SUBTOTAL:</td>
            <td align="right">{{ arFactura.vrSubtotal | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >TOTAL:</td>
            <td align="right">{{ arFactura.vrTotal | number_format(0, '.', ',')}}</td>
        </tr>

        <tr>
            <td class="titulo" >COMENTARIO: </td>
            <td class="td-in-well" colspan="5">{{ arFactura.comentario }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#guias" data-toggle="tab">Guias</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="guias">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>OI</th>
                            <th>OC</th>
                            <th>NUMERO</th>
                            <th>CLIENTE</th>
                            <th>DESTINO</th>
                            <th>UND</th>
                            <th>PES</th>
                            <th>VOL</th>
                            <th>FLETE</th>
                            <th>MANEJO</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arGuia in arGuias %}
                            <tr>
                                <td>{{ arGuia.codigoGuiaPk }}</td>
                                <td>{{ arGuia.codigoOperacionIngresoFk }}</td>
                                <td>{{ arGuia.codigoOperacionCargoFk }}</td>
                                <td>{{ arGuia.numero }}</td>
                                <td>{{ arGuia.clienteNombreCorto }}</td>
                                <td>{{ arGuia.ciudadDestino }}</td>
                                <td style="text-align: right">{{ arGuia.unidades }}</td>
                                <td style="text-align: right">{{ arGuia.pesoReal }}</td>
                                <td style="text-align: right">{{ arGuia.pesoVolumen }}</td>
                                <td style="text-align: right">{{ arGuia.vrFlete }}</td>
                                <td style="text-align: right">{{ arGuia.vrManejo }}</td>
                                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arGuia.codigoGuiaPk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('tte_mto_comercial_factura_detalle_adicionar_guia', {'codigoFactura': arFactura.codigoFacturaPk }) }}', 'FacturaAdicionarGuia', 600, 900)">Adicionar</a>
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnRetirarGuia, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('tte_mto_comercial_factura_lista') }}">Volver</a>
{% endblock %}
