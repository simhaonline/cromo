{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Agregar costo</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-1">Concepto:</label>
                <div class="col-sm-11">
                    {{ form_widget(form.facturaConceptoRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-1">Cantidad:</label>
                <div class="col-sm-11">
                    {{ form_widget(form.cantidad) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="" class="control-label col-sm-1">Valor:</label>
                <div class="col-sm-11">
                    {{ form_widget(form.vrValor) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {{ form_widget(form.guardar) }}
    </div>
    {{ form_end(form) }}
{% endblock %}