{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>TIPO</th>
            <th>GUIA</th>
            <th>FECHA</th>
            <th>SERV</th>
            <th>OI</th>
            <th>OC</th>
            <th>NUMERO</th>
            <th>DOCUMENTO</th>
            <th>DESTINO</th>
            <th>UND</th>
            <th>PES</th>
            <th>PES FAC</th>
            <th>VOL</th>
            <th>DECLARADO</th>
            <th>FLETE</th>
            <th>MANEJO</th>
            <th title="Despachada">D</th>
            <th title="Entregada">E</th>
            <th title="Soporte de entrega">S</th>
            <th title="Cumplido entregado al cliente">C</th>
            <th title="Con novedad">N</th>
            <th><input type="checkbox" name="ChkSeleccionarTodosDetalle"
                       OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
        </tr>
        </thead>
        <tbody>
        {% for arGuia in arGuias %}
            <tr>
                <td>{{ arGuia.codigoGuiaTipoFk }}</td>
                <td>{{ arGuia.codigoGuiaPk }}</td>
                <td>{{ arGuia.fechaIngreso | date('Y-m-d') }}</td>
                <td>{{ arGuia.codigoServicioFk }}</td>
                <td>{{ arGuia.codigoOperacionIngresoFk }}</td>
                <td>{{ arGuia.codigoOperacionCargoFk }}</td>
                <td>{{ arGuia.numero }}</td>
                <td>{{ arGuia.documentoCliente }}</td>
                <td>{{ arGuia.ciudadDestino }}</td>
                <td style="text-align: right">{{ arGuia.unidades }}</td>
                <td style="text-align: right">{{ arGuia.pesoReal }}</td>
                <td style="text-align: right">{{ arGuia.pesoVolumen }}</td>
                <td style="text-align: right">{{ arGuia.pesoFacturado }}</td>
                <td style="text-align: right">{{ arGuia.vrDeclara | number_format() }}</td>
                <td style="text-align: right">{{ arGuia.vrFlete | number_format() }}</td>
                <td style="text-align: right">{{ arGuia.vrManejo | number_format() }}</td>
                <td>{{ arGuia.estadoDespachado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoEntregado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoSoporte? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoCumplido? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoNovedad? "SI":"NO" }}</td>
                <td  style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arGuia.codigoGuiaPk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-toolbar" style="float: right">
        {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm', 'style':'float:right'} }) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
