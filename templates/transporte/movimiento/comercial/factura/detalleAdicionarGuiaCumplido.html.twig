{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <br>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>FECHA</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arCumplido in arCumplidos %}
            <tr>
                <td>{{ arCumplido.codigoCumplidoPk }}</td>
                <td>{{ arCumplido.fecha | date('Y-m-d') }}</td>
                <td  style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCumplido.codigoCumplidoPk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-toolbar" style="float: right">
        {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    <br/><br/>
    {{ form_end(form) }}
{% endblock %}
