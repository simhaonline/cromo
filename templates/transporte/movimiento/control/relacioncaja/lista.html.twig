{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaDesde) }}
                </div>
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-5">

                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaHasta) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-5">
                    {{ form_widget(form.filtrarFecha) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>FECHA</th>
            <th>CANTIDAD</th>
            <th>FLETE</th>
            <th>MANEJO</th>
            <th>TOTAL</th>
            <th>AUT</th>
            <th>APR</th>
            <th>ANU</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arRelacionCaja in arRelacionesCaja %}
            <tr>
                <td>{{ arRelacionCaja.codigoRelacionCajaPk }}</td>
                <td>{{ arRelacionCaja.fecha | date('Y-m-d') }}</td>
                <td class="numero">{{ arRelacionCaja.cantidad }}</td>
                <td class="numero">{{ arRelacionCaja.vrFlete | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arRelacionCaja.vrManejo | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arRelacionCaja.vrTotal | number_format(0, '.', ',') }}</td>
                <td class="estado">{{ arRelacionCaja.estadoAutorizado?'SI':'NO' }}</td>
                <td class="estado">{{ arRelacionCaja.estadoAprobado?'SI':'NO' }}</td>
                <td class="estado">{{ arRelacionCaja.estadoAnulado?'SI':'NO' }}</td>
                <td style="text-align: center">
                    <a href="{{ path('transporte_movimiento_control_relacioncaja_detalle', { 'codigoRelacionCaja': arRelacionCaja.codigoRelacionCajaPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRelacionCaja.codigoRelacionCajaPk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRelacionesCaja.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRelacionesCaja) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.btnEliminar) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('transporte_movimiento_control_relacioncaja_nuevo', {'codigoRelacionCaja': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
