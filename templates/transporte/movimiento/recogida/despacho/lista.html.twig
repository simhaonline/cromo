{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_txtVehiculo" class="col-sm-1 control-label">Vehiculo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtVehiculo) }}
                </div>
                <label for="form_choEstadoAutorizado" class="col-sm-2 control-label">Autorizado:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.choEstadoAutorizado) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_txtCodigoDespachoRecogida" class="col-sm-1 control-label">Codigo:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtCodigoDespachoRecogida) }}
                </div>
                <label for="" class="col-sm-offset-3 col-sm-1 control-label">Aprobado:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.choEstadoAprobado) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_txtNumeroDespachoRecogida" class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtNumeroDespachoRecogida) }}
                </div>
                <label for="form_cboOperacion" class="col-sm-offset-3 col-sm-1 control-label">Operacion:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cboOperacion) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaDesde) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaHasta" class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaHasta) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_filtrarFecha" class="col-sm-1 control-label"></label>
                <div class="col-sm-5">
                    {{ form_widget(form.filtrarFecha) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>NUMERO</th>
            <th>FECHA</th>
            <th>OP</th>
            <th>VEH</th>
            <th>CONDUCTOR</th>
            <th>RUTA</th>
            <th>CAN</th>
            <th>UND</th>
            <th>PES</th>
            <th>VOL</th>
            <th>PAGO</th>
            <th title="AUTORIZADO">AUT</th>
            <th title="APROBADO">APR</th>
            <th title="ANULADO">ANU</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arDespachoRecogida in arDespachosRecogida %}
            <tr>
                <td>{{ arDespachoRecogida.codigoDespachoRecogidaPk }}</td>
                <td>{{ arDespachoRecogida.numero }}</td>
                <td>{{ arDespachoRecogida.fecha | date('Y-m-d') }}</td>
                <td>{{ arDespachoRecogida.codigoOperacionFk }}</td>
                <td>{{ arDespachoRecogida.codigoVehiculoFk }}</td>
                <td>{{ arDespachoRecogida.conductorNombreCorto }}</td>
                <td>{{ arDespachoRecogida.codigoRutaRecogidaFk }}</td>
                <td style="text-align: right">{{ arDespachoRecogida.cantidad }}</td>
                <td style="text-align: right">{{ arDespachoRecogida.unidades }}</td>
                <td style="text-align: right">{{ arDespachoRecogida.pesoReal }}</td>
                <td style="text-align: right">{{ arDespachoRecogida.pesoVolumen }}</td>
                <td style="text-align: right">{{ arDespachoRecogida.vrFletePago }}</td>
                <td class="estado">{{ arDespachoRecogida.estadoAutorizado?'SI':'NO' }}</td>
                <td class="estado">{{ arDespachoRecogida.estadoAprobado?'SI':'NO' }}</td>
                <td class="estado">{{ arDespachoRecogida.estadoAnulado?'SI':'NO' }}</td>
                {% if arDespachoRecogida.estadoAutorizado == false %}
                <td style="text-align: center;"><a href="{{ path('transporte_movimiento_recogida_despacho_nuevo', { 'id': arDespachoRecogida.codigoDespachoRecogidaPk }) }}"><i class="fa fa-edit" style="font-size: large;color: black;"></i></a>
                    {% else %}
                        <td></td>
                        {% endif %}
                </td>
                <td style="text-align: center">
                    <a href="{{ path('transporte_movimiento_recogida_despacho_detalle', { 'id': arDespachoRecogida.codigoDespachoRecogidaPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center;">
                    <input type="checkbox" name="ChkSeleccionados[]" value="{{ arDespachoRecogida.codigoDespachoRecogidaPk }}">
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arDespachosRecogida.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arDespachosRecogida) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('transporte_movimiento_recogida_despacho_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnEliminar) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
