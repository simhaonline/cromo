{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    <div style="float:right">
        {% if arRecogida.estadoProgramado == 1 %}<span class="label label-default">Programado</span>{% endif %}
        {% if arRecogida.estadoRecogido == 1 %}<span class="label label-default">Recogida</span>{% endif %}
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arRecogida.codigoRecogidaPk }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arRecogida.fecha |date("Y/m/d") }}</td>
            <td class="titulo" >UNIDADES:</td>
            <td align="right">{{ arRecogida.unidades }}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo">HORA:</td>
            <td class="td-in-well">{{ arRecogida.fecha |date("H:i") }}</td>
            <td class="titulo">PESO:</td>
            <td align="right">{{ arRecogida.pesoReal }}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo">VOLUMEN:</td>
            <td align="right">{{ arRecogida.pesoVolumen }}</td>
        </tr>
        <tr>
            <td class="titulo" >COMENTARIO: </td>
            <td class="td-in-well" colspan="5">{{ arRecogida.comentario }}</td>
        </tr>
    </table>
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('transporte_mto_recogida_recogida_lista') }}">Volver</a>
{% endblock %}
