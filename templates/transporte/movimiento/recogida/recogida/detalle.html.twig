{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float: left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('transporte_movimiento_recogida_recogida_lista') }}">Volver</a> &nbsp;&nbsp;
        </div>
    </div>
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnDesautorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnAprobar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnAnular,  { 'attr': {'class': 'btn btn-default btn-sm', 'onclick': 'return confirm("Esta seguro de anular el registro?")'} }) }}
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    {% if arRecogida.codigoDespachoRecogidaFk is null %}
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="javascript:abrirVentana3('{{ path('transporte_movimiento_recogida_reprogramar_nuevo',{'id' : arRecogida.codigoRecogidaPk }) }}','ReprogramarRecogida', 300, 500)">Reprogramar</a>
        </div>
    {% endif %}
    </div>
    <div style="float:right">
        {% if arRecogida.estadoAutorizado == true %}<span class="label label-default">Autorizado</span>{% endif %}
        {% if arRecogida.estadoAprobado == true %}<span class="label label-success">Aprobado</span>{% endif %}
        {% if arRecogida.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}
        {% if arRecogida.estadoProgramado == 1 %}<span class="label label-default">Programado</span>{% endif %}
        {% if arRecogida.estadoRecogido == 1 %}<span class="label label-default">Recogida</span>{% endif %}
    </div>
    <br/><br/>
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arRecogida.codigoRecogidaPk }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arRecogida.fecha |date("Y/m/d") }}</td>
            <td class="titulo">UNIDADES:</td>
            <td align="right">{{ arRecogida.unidades }}</td>
        </tr>
        <tr>
            <td class="titulo">CLIENTE:</td>
            <td class="td-in-well">{{ arRecogida.clienteRel.nombreCorto }}</td>
            <td class="titulo">HORA:</td>
            <td class="td-in-well">{{ arRecogida.fecha |date("H:i") }}</td>
            <td class="titulo">PESO:</td>
            <td align="right">{{ arRecogida.pesoReal }}</td>
        </tr>
        <tr>
            <td class="titulo">DIRECCION:</td>
            <td class="td-in-well">{{ arRecogida.clienteRel.direccion }}</td>
            <td class="titulo">CIUDAD:</td>
            <td class="td-in-well">{{ arRecogida.ciudadRel.nombre }}</td>
            <td class="titulo">VOLUMEN:</td>
            <td align="right">{{ arRecogida.pesoVolumen }}</td>
        </tr>
        <tr>
            <td class="titulo">TELEFONO:</td>
            <td class="td-in-well">{{ arRecogida.telefono }}</td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td align="right"></td>
        </tr>
        <tr>
            <td class="titulo">COMENTARIO:</td>
            <td class="td-in-well" colspan="5">{{ arRecogida.comentario }}</td>
        </tr>
    </table>
    {{ form_end(form) }}
{% endblock %}
