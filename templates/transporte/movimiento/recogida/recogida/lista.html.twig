{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
        <header role="heading" class="ui-sortable-handle">
            <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
            <h2>Filtro</h2>
        </header>
        <div>
            <div class="widget-body">
                <div class="form-group form-group-sm">
                    <label for="txtCodigoConductor" class="col-sm-1 control-label">Cliente:</label>
                    <div class="col-sm-11">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    {{ form_widget(form.codigoClienteFk) }}
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">
                                    <input id="form_txtNombreCorto" class="form-control" readonly>
                                    <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('transporte_bus_cliente', { 'campoCodigo': 'form_codigoClienteFk', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Codigo:</label>
                    <div class="col-sm-5">
                        {{ form_widget(form.codigoRecogidaPk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Autorizado:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.estadoAutorizado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Aprobado:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.estadoAprobado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Desde:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.fechaDesde) }}
                    </div>
                    <label class="col-sm-1 col-sm-offset-3 control-label">Anulado:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.estadoAnulado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Programado:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.estadoProgramado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Hasta:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.fechaHasta) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.btnFiltro, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos tabla-informacion">
        <thead>
        <tr>
            <th title="Codigo de recogida">ID</th>
            <th  title="Operacion">OP</th>
            <th  title="Fecha registro">REG</th>
            <th  title="Fecha">FECHA</th>
            <th  title="Hora">HORA</th>
            <th  title="Ruta">RUTA</th>
            <th  title="Nombre del cliente" >CLIENTE</th>
            <th  title="Anunciante">ANUNCIANTE</th>
            <th  title="Direccion">DIRECCION</th>
            <th  title="Ciudad">CIUDAD</th>
            <th  title="Telefono">TELEFONO</th>
            <th  title="unidades">UND</th>
            <th  title="Peso real">PES</th>
            <th  title="Peso volumen">VOL</th>
            <th  title="Autorizado">AUT</th>
            <th  title="Aprobado">APR</th>
            <th  title="Anulado">ANU</th>
            <th  title="Programado">PRO</th>
            <th  title="Recogido">REC</th>
            <th  title="Descargado">DES</th>
            <th  title="Comentario">COMENTARIO</th>
            <th></th>
            <th></th>
            <th class="text-center" title="seleccionar todos"><input type="checkbox" name="ChkSeleccionarTodos" onclick="ChequearTodosTabla(this, 'ChkSeleccionar[]')"> </th>

        </tr>
        </thead>
        <tbody>
        {% for arRecogida in arRecogidas %}
            <tr>
                <td>{{ arRecogida.codigoRecogidaPk }}</td>
                <td>{{ arRecogida.codigoOperacionFk }}</td>
                <td>{{ arRecogida.fechaRegistro | date("Y-m-d") }}</td>
                <td>{{ arRecogida.fecha | date("Y-m-d") }}</td>
                <td>{{ arRecogida.fecha | date("H:i:s") }}</td>
                <td>{{ arRecogida.rutaRecogida }}</td>
                <td>{{ arRecogida.clienteNombre }}</td>
                <td>{{ arRecogida.anunciante }}</td>
                <td>{{ arRecogida.direccion }}</td>
                <td>{{ arRecogida.ciudad}}</td>
                <td>{{ arRecogida.telefono }}</td>
                <td>{{ arRecogida.unidades }}</td>
                <td>{{ arRecogida.pesoReal }}</td>
                <td>{{ arRecogida.pesoVolumen }}</td>
                <td>{{ arRecogida.estadoAutorizado? "SI":"NO" }}</td>
                <td>{{ arRecogida.estadoAprobado? "SI":"NO" }}</td>
                <td>{{ arRecogida.estadoAnulado? "SI":"NO" }}</td>
                <td>{{ arRecogida.estadoProgramado? "SI":"NO" }}</td>
                <td>{{ arRecogida.estadoRecogido? "SI":"NO" }}</td>
                <td>{{ arRecogida.estadoDescargado? "SI":"NO" }}</td>
                <td>{{ arRecogida.comentario }}</td>
                <td class="text-center">
                    <a href="{{ path('transporte_movimiento_transporte_despacho_nuevo',{'id': arRecogida.codigoRecogidaPk }) }}"><i
                                class="fa fa-edit" style="color: black;font-size: large;"></i></a>
                </td>
                <td class="text-center">
                    <a href="{{ path('transporte_movimiento_recogida_recogida_detalle',{'id' :arRecogida.codigoRecogidaPk}) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td class="text-center">
                    <input type="checkbox" name="ChkSeleccionar[]" value="{{ arRecogida.codigoRecogidaPk  }}"/>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">
            <span class="badge">{{ arRecogidas.getTotalItemCount }}</span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arRecogidas) }}
    </div>
    <div class="btn-group btn-xs" style="float: left; width: 60px">
        {{ form_widget(form.limiteRegistros) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        {{ form_widget(form.btnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
    </div>
    <div class="btn-group" style="float: right; margin-right: 5px !important;">
        <a class="btn btn-default btn-sm"
           href="{{ path('transporte_movimiento_transporte_despacho_nuevo', {'id': 0}) }}">Nuevo</a>
    </div>
    {{ form_end(form) }}
    <br/><br/><br/>
{% endblock %}