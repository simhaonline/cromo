{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header role="heading" class="ui-sortable-handle">
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Informaci√≥n general</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="form-group form-group-sm">
                        <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-lg-2">
                                    <div class="input-group">
                                        <input id="txtCodigoCliente" name="txtCodigoCliente" type="text"
                                               class="form-control"
                                               value="{{ arRecogida.codigoClienteFk |default('') }}"/>
                                    </div>
                                </div>
                                <div class="col-lg-10">
                                    <div class="input-group">
                                        <input id="txtNombreCorto" name="txtNombreCorto" type="text"
                                               class="form-control"
                                               value="{{ arRecogida.clienteRel.nombreCorto |default('') }}"
                                               readOnly="ReadOnly"/>
                                        <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm"
                                           href="javascript:abrirVentana3('{{ path('transporte_bus_cliente', { 'campoCodigo': 'txtCodigoCliente', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="form_sectorRel" class="col-sm-2 control-label">Ciudad:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.ciudadRel, { 'attr': {'class': 'form-control to-select-2'}}) }}
                        </div>
                        <label for="form_sectorRel" class="col-sm-2 control-label">Fecha:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.fecha) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <div class="col-sm-6 col-sm-offset-1">
                            <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Unidades:</label>
                            <div class="col-sm-2" style="padding-left: 5px;">
                                {{ form_widget(form.unidades, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label for="form_sectorRel" class="col-sm-1 control-label">Peso:</label>
                            <div class="col-sm-2">
                                {{ form_widget(form.pesoReal, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label for="form_sectorRel" class="col-sm-1 control-label">Volumen:</label>
                            <div class="col-sm-2" style="padding-right: 5px;">
                                {{ form_widget(form.pesoVolumen, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="form_conductoRel" class="col-sm-2 control-label">Conductor:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.conductorRel, { 'attr': {'class': 'form-control to-select-2'}}) }}
                        </div>
                        <label for="form_vehiculoRel" class="col-sm-2 control-label">Vehiculo:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.vehiculoRel, { 'attr': {'class': 'form-control to-select-2'}}) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="" class="control-label col-sm-2">Comentario:</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.comentario) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="widget-footer" style="padding-bottom: 5px;padding-top: 5px;">
                <a class="btn btn-default btn-sm"
                   href="{{ path('transporte_movimiento_recogida_recogida_lista') }}">Cancelar</a>
                {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
