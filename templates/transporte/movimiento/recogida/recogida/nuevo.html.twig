{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                <input id="txtCodigoCliente"  name="txtCodigoCliente"  type="text" class="form-control" value="{{ arRecogida.codigoClienteFk |default('') }}"/>
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arRecogida.clienteRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('transporte_bus_cliente', { 'campoCodigo': 'txtCodigoCliente', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_sectorRel" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                </div>
                <label for="form_sectorRel" class="col-sm-2 control-label">Fecha:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fecha) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label"></label>
                <div class="col-sm-1">
                </div>
                <label for="form_recogidaTipoRel" class="col-sm-2 control-label">Unidades:</label>
                <div class="col-sm-1">
                    {{ form_widget(form.unidades, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_sectorRel" class="col-sm-2 control-label">Peso:</label>
                <div class="col-sm-1">
                    {{ form_widget(form.pesoReal, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_sectorRel" class="col-sm-2 control-label">Volumen:</label>
                <div class="col-sm-1">
                    {{ form_widget(form.pesoVolumen, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_conductoRel" class="col-sm-2 control-label">Conductor:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.conductorRel, { 'attr': {'class': 'form-control to-select-2'}}) }}
                </div>
                <label for="form_vehiculoRel" class="col-sm-2 control-label">Vehiculo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.vehiculoRel, { 'attr': {'class': 'form-control to-select-2'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('transporte_movimiento_recogida_recogida_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
