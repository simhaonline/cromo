{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnDesautorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnAprobar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnAnular, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    <div style="float:right">
        {% if arCumplido.estadoAutorizado == true %}<span class="label label-default">Autorizado</span>{% endif %}
        {% if arCumplido.estadoAprobado == true %}<span class="label label-success">Aprobado</span>{% endif %}
        {% if arCumplido.estadoAnulado == true %}<span class="label label-danger">Anulado</span>{% endif %}
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arCumplido.numero }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arCumplido.fecha |date("Y/m/d") }}</td>
            <td class="titulo" >FLETE:</td>
            <td align="right">{{ arCumplido.vrFlete | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo">GUIAS:</td>
            <td class="td-in-well">{{ arCumplido.guias }}</td>
            <td class="titulo" >MANEJO:</td>
            <td align="right">{{ arCumplido.vrManejo | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >SUBTOTAL:</td>
            <td align="right">{{ arCumplido.vrSubtotal | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >TOTAL:</td>
            <td align="right">{{ arCumplido.vrTotal | number_format(0, '.', ',')}}</td>
        </tr>

        <tr>
            <td class="titulo" >COMENTARIO: </td>
            <td class="td-in-well" colspan="5">{{ arCumplido.comentario }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#guias" data-toggle="tab">Guias</a></li>
        <li><a href="#planillas" data-toggle="tab">Planillas</a></li>
        <li><a href="#otros" data-toggle="tab">Otros</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="guias">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>OI</th>
                            <th>OC</th>
                            <th>NUMERO</th>
                            <th>CLIENTE</th>
                            <th>DESTINO</th>
                            <th>UND</th>
                            <th>PES</th>
                            <th>VOL</th>
                            <th>FLETE</th>
                            <th>MANEJO</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arGuia in arGuias %}
                            <tr>
                                <td>{{ arGuia.codigoGuiaPk }}</td>
                                <td>{{ arGuia.codigoOperacionIngresoFk }}</td>
                                <td>{{ arGuia.codigoOperacionCargoFk }}</td>
                                <td>{{ arGuia.numero }}</td>
                                <td>{{ arGuia.clienteNombreCorto }}</td>
                                <td>{{ arGuia.ciudadDestino }}</td>
                                <td style="text-align: right">{{ arGuia.unidades }}</td>
                                <td style="text-align: right">{{ arGuia.pesoReal }}</td>
                                <td style="text-align: right">{{ arGuia.pesoVolumen }}</td>
                                <td style="text-align: right">{{ arGuia.vrFlete }}</td>
                                <td style="text-align: right">{{ arGuia.vrManejo }}</td>
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arGuia.codigoGuiaPk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    {% if not arCumplido.estadoAutorizado %}
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('transporte_movimiento_comercial_cumplido_detalle_adicionar_guia', {'codigoCumplido': arCumplido.codigoCumplidoPk }) }}', 'CumplidoAdicionarGuia', 600, 900)">Adicionar</a>
                    </div>
                    {% else %}
                    <input type="button" class="btn btn-default btn-sm" value="Adicionar" disabled>
                    {% endif %}
                    <div class="btn-group">
                        {{ form_widget(form.btnRetirarGuia, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="planillas">
            <div id="planillas" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arCumplidoPlanilla in arCumplidoPlanillas %}
                            <tr>
                                <td>{{ arCumplidoPlanilla.codigoCumplidoPlanillaPk }}</td>
                                <td><input type="checkbox" name="ChkSeleccionarPlanill[]" value="{{ arCumplidoPlanilla.codigoCumplidoPlanillaPk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    {% if not arCumplido.estadoAutorizado %}
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('transporte_movimiento_comercial_cumplido_detalle_adicionar_guia', {'codigoCumplido': arCumplido.codigoCumplidoPk }) }}', 'CumplidoAdicionarGuia', 600, 900)">Adicionar</a>
                    </div>
                    {% else %}
                    <input type="button" class="btn btn-default btn-sm" value="Adicionar" disabled>
                    <div class="btn-group">
                        {{ form_widget(form.btnRetirarGuia, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="tab-pane" id="otros">
            <div id="otros" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arCumplidoOtro in arCumplidoOtros %}
                            <tr>
                                <td>{{ arCumplidoOtro.codigoCumplidoOtroPk }}</td>
                                <td><input type="checkbox" name="ChkSeleccionarPlanill[]" value="{{ arCumplidoOtro.codigoCumplidoOtroPk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    {% if not arCumplido.estadoAutorizado %}
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('transporte_movimiento_comercial_cumplido_detalle_adicionar_guia', {'codigoCumplido': arCumplido.codigoCumplidoPk }) }}', 'CumplidoAdicionarGuia', 600, 900)">Adicionar</a>
                    </div>
                    {% else %}
                    <input type="button" class="btn btn-default btn-sm" value="Adicionar" disabled>
                    <div class="btn-group">
                        {{ form_widget(form.btnRetirarGuia, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('transporte_movimiento_comercial_cumplido_lista') }}">Volver</a>
{% endblock %}
