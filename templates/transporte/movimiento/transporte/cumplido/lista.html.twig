{% extends 'base_transporte.html.twig' %}
{% block content %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arCumplido in arCumplidos %}
            <tr>
                <td>{{ arCumplido.codigoCumplidoPk }}</td>
                <td style="text-align: center"><a href="{{ path('transporte_movimiento_transporte_cumplido_detalle', { 'codigoCumplido': arCumplido.codigoCumplidoPk }) }}"><img src="{{ asset('../assets/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-toolbar">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCumplidos.getTotalItemCount }}</span></div>
        </div>

        <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arCumplidos) }}
        </div>
    </div>
{% endblock %}

