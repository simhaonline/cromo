{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Auxiliar:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtAuxiliar, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Identificacion:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtIdentificacionAuxiliar, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar,{'attr': { 'style':'float:right','class':'btn btn-sm btn-default' }}) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>IDENTIFICACION</th>
            <th>NOMBRE</th>
            <th><input type="checkbox" name="ChkSeleccionarTodosDetalle" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
        </tr>
        </thead>
        <tbody>
        {% for arAuxiliar in arAuxiliares %}
            <tr>
                <td>{{ arAuxiliar.codigoAuxiliarPk }}</td>
                <td>{{ arAuxiliar.numeroIdentificacion }}</td>
                <td>{{ arAuxiliar.nombreCorto }}</td>
                <td  style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arAuxiliar.codigoAuxiliarPk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arAuxiliares.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arAuxiliares) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
