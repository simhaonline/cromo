<div id="content sortable-grid ui-sortable">
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
        <header role="heading" class="ui-sortable-handle">
            <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
            <h2>Filtro</h2>
        </header>
        <div>
            <div class="widget-body">
                {{ form_start(formFiltro, {'attr': {'class': 'form-horizontal'} }) }}
                {% include ('estructura/movimiento/buscarConductorTransporte.html.twig') %}
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label" >Codigo:</label>
                    <div class="col-sm-2">
                        {{ form_widget(formFiltro.codigoDespachoPk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Numero:</label>
                    <div class="col-sm-2">
                        {{ form_widget(formFiltro.numero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Vehiculo:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.codigoVehiculoFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Origen:</label>
                    <div class="col-sm-5">
                        {% include ('estructura/movimiento/buscaCiudadOrigenTransporteDespacho.html.twig') %}
                        {#{{ form_widget(formFiltro.codigoCiudadOrigenFk, { 'attr': {'class': 'form-control to-select-2'} }) }}#}
                    </div>
                    <label class="col-sm-1 control-label">Tipo:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.codigoDespachoTipoFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Destino:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.codigoCiudadDestinoFk, { 'attr': {'class': 'form-control to-select-2'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Autorizado:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.estadoAutorizado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Operacion:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.codigoOperacionFk, { 'attr': {'class': 'form-control to-select-2'} }) }}
                    </div>
                    <label class="col-sm-1 control-label">Aprobado:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.estadoAprobado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Desde:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.fechaSalidaDesde) }}
                    </div>
                    <label class="col-sm-1 control-label">Anulado:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.estadoAnulado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-1 control-label">Hasta:</label>
                    <div class="col-sm-5">
                        {{ form_widget(formFiltro.fechaSalidaHasta) }}
                    </div>
                </div>
                {{ form_end(formFiltro) }}
            </div>
        </div>
    </div>
</div>