{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-1 control-label">Conductor:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.txtCodigoConductor) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                {{ form_widget(form.txtNombreCorto) }}
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('transporte_bus_conductor', { 'campoCodigo': 'form_txtCodigoConductor', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtNumero, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Vehiculo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtVehiculo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Origen:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cboCiudadOrigenRel, { 'attr': {'class': 'form-control to-select-2'} }) }}
                </div>
                <label class="col-sm-2 control-label">Destino:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.cboCiudadDestinoRel, { 'attr': {'class': 'form-control to-select-2'} }) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>OP</th>
            <th>FECHA</th>
            <th>NUMERO</th>
            <th>VEH</th>
            <th>CONDUCTOR</th>
            <th>RUTA</th>
            <th>ORIGEN</th>
            <th>DESTINO</th>
            <th>CANT</th>
            <th>UND</th>
            <th>PES</th>
            <th>VOL</th>
            <th>AUT</th>
            <th>APR</th>
            <th>ANU</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arDespacho in arDespachos %}
            <tr>
                <td>{{ arDespacho.codigoDespachoPk }}</td>
                <td>{{ arDespacho.codigoOperacionFk }}</td>
                <td>{{ arDespacho.fechaSalida | date('Y-m-d') }}</td>
                <td>{{ arDespacho.numero }}</td>
                <td>{{ arDespacho.codigoVehiculoFk }}</td>
                <td>{{ arDespacho.conductorNombre }}</td>
                <td>{{ arDespacho.codigoRutaFk }}</td>
                <td>{{ arDespacho.ciudadOrigen }}</td>
                <td>{{ arDespacho.ciudadDestino }}</td>
                <td class="numero">{{ arDespacho.cantidad }}</td>
                <td class="numero">{{ arDespacho.unidades }}</td>
                <td class="numero">{{ arDespacho.pesoReal }}</td>
                <td class="numero">{{ arDespacho.pesoVolumen }}</td>
                <td class="estado">{{ arDespacho.estadoAutorizado?'SI':'NO' }}</td>
                <td class="estado">{{ arDespacho.estadoAprobado?'SI':'NO' }}</td>
                <td class="estado">{{ arDespacho.estadoAnulado?'SI':'NO' }}</td>
                <td style="text-align: center">
                    <a href="{{ path('transporte_movimiento_transporte_despacho_nuevo', { 'id': arDespacho.codigoDespachoPk }) }}">
                        <i class="fa fa-edit" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center">
                    <a href="{{ path('transporte_movimiento_transporte_despacho_detalle', { 'id': arDespacho.codigoDespachoPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arDespachos.getTotalItemCount }}</span>
            </div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arDespachos) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm"
               href="{{ path('transporte_movimiento_transporte_despacho_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}