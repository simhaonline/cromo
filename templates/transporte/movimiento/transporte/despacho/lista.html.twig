{% extends 'base.html.twig' %}
{% block content %}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>OP</th>
            <th>NUMERO</th>
            <th>VEH</th>
            <th>CONDUCTOR</th>
            <th>RUTA</th>
            <th>ORIGEN</th>
            <th>DESTINO</th>
            <th>UND</th>
            <th>PES</th>
            <th>VOL</th>
            <th>A</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arDespacho in arDespachos %}
            <tr>
                <td>{{ arDespacho.codigoDespachoPk }}</td>
                <td>{{ arDespacho.codigoOperacionFk }}</td>
                <td>{{ arDespacho.numero }}</td>
                <td>{{ arDespacho.codigoVehiculoFk }}</td>
                <td>{{ arDespacho.conductorNombre }}</td>
                <td>{{ arDespacho.codigoRutaFk }}</td>
                <td>{{ arDespacho.ciudadOrigen }}</td>
                <td>{{ arDespacho.ciudadDestino }}</td>
                <td class="numero">{{ arDespacho.unidades }}</td>
                <td class="numero">{{ arDespacho.pesoReal }}</td>
                <td class="numero">{{ arDespacho.pesoVolumen }}</td>
                <td class="estado">{{ arDespacho.estadoAnulado?'SI':'NO' }}</td>
                <td style="text-align: center"><a href="{{ path('tte_mto_transporte_despacho_detalle', { 'codigoDespacho': arDespacho.codigoDespachoPk }) }}"><img src="{{ asset('../assets/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arDespachos.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arDespachos) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('tte_mto_transporte_despacho_nuevo', {'codigoDespacho': 0}) }}">Nuevo</a>
        </div>
    </div>
{% endblock %}
