{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    <div style="float:right">
        {% if arGuia.estadoImpreso == 1 %}<span class="label label-default">Impresion</span>{% endif %}
        {% if arGuia.estadoDespachado == 1 %}<span class="label label-default">Despacho</span>{% endif %}
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arGuia.numero }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arGuia.fechaIngreso |date("Y/m/d") }}</td>
            <td class="titulo" >FLETE:</td>
            <td align="right">{{ arGuia.vrFlete | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >MANEJO:</td>
            <td align="right">{{ arGuia.vrManejo | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >DECLARA:</td>
            <td align="right">{{ arGuia.vrDeclara | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >RECAUDO:</td>
            <td align="right">{{ arGuia.vrRecaudo | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo" >COMENTARIO: </td>
            <td class="td-in-well" colspan="5">{{ arGuia.comentario }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#novedades" data-toggle="tab">Novedades</a></li>
        <li><a href="#despachos" data-toggle="tab">Despachos</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="novedades">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arNovedad in arNovedades %}
                            <tr>
                                <td>{{ arNovedad.codigoNovedadPk }}</td>
                                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arNovedad.codigoNovedadPk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('tte_mto_transporte_guia_detalle_adicionar_novedad', {'codigoGuia': arGuia.codigoGuiaPk }) }}', 'GuiaAdicionarNovedad', 600, 900)">Adicionar</a>
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.btnRetirarNovedad, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="despachos">
            <div id="despachos" style="width: 100%"><br>
                <div class="table-responsive">

                </div>
                <div class="separador-1"></div>

            </div>
        </div>
    </div>

    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('tte_mto_transporte_guia_lista') }}">Volver</a>
{% endblock %}
