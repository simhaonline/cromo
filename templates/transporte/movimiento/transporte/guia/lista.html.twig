{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div id="content sortable-grid ui-sortable">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-collapsed="true">
            <header>
                <span class="widget-icon"> <i class="fa fa-filter"></i> </span>
                <h2>Filtro</h2>
            </header>
            <div>
                <div class="widget-body">
                    <div class="form-group form-group-sm">
                        <label for="txtCodigoConductor" class="col-sm-1 control-label">Cliente:</label>
                        <div class="col-sm-11">
                            <div class="row">
                                <div class="col-lg-2">
                                    <div class="input-group">
                                        {{ form_widget(form.codigoClienteFk) }}
                                    </div>
                                </div>
                                <div class="col-lg-10">
                                    <div class="input-group">
                                        <input id="form_txtNombreCorto" class="form-control" readonly>
                                        <span class="input-group-btn">
                                            <a class="btn btn-default btn-sm" 
                                               href="javascript:abrirVentana3('{{ path('transporte_bus_cliente',
                                                   { 'campoCodigo': 'form_codigoClienteFk', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="form_cboGuiaTipoRel" class="col-sm-1 control-label">Tipo:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoGuiaTipoFk, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label for="form_cboOperacionRel" class="col-sm-1 control-label">Operacion:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoOperacionCargoFk, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label for="form_txtNumero" class="col-sm-1 control-label">Despacho:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoDespachoFk, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label class="col-sm-1 control-label">Despachado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoDespachado) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="form_cboServicioRel" class="col-sm-1 control-label">Servicio:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoServicioFk, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label for="form_TxtCodigo" class="col-sm-1 control-label">Guia:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoGuiaPk, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <label for="form_txtCodigoFactura" class="col-sm-1 control-label">Factura:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoFacturaFk, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label class="col-sm-1 control-label">Facturado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoFacturado) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-sm-1 control-label">Guia(FAC):</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.numeroFactura) }}
                        </div>
                        <label for="form_codigoDespachoFk" class="col-sm-1 control-label">Numero:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label for="form_txtRemitente" class="col-sm-1 control-label">Remitente:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.remitente, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label class="col-sm-1 control-label">Novedad(ACT):</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoNovedad) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-sm-1 control-label">Desde:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.fechaIngresoDesde) }}
                        </div>
                        <label for="form_txtDocumento" class="col-sm-1 control-label">Documento:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.documentoCliente, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label for="form_txtDocumento" class="col-sm-1 control-label">Destinatario:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.nombreDestinatario, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label class="col-sm-1 control-label">Novedad(SOL):</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoNovedadSolucion) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-sm-1 control-label">Hasta:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.fechaIngresoHasta) }}
                        </div>
                        <label class="col-sm-1 control-label">ciudad destino:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoCiudadDestinoFk) }}
                        </div>
                        <label class="col-sm-1 control-label">Ingreso:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.codigoOperacionCargoIngreso) }}
                        </div>

                        <label class="col-sm-1   control-label">Anulado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoAnulado) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <div class="col-sm-offset-2 col-sm-10">
                            {{ form_widget(form.btnFiltro, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th title="Codigo de guia">GUIA</th>
            <th title="Operacion ingreso">OI</th>
            <th title="Operacion cargo">OC</th>
            <th title="Codigo servicio">SER</th>
            <th title="Codigo guia tipo">TIPO</th>
            <th title="Numero">NUMERO</th>
            <th title="Documento cliente">DOC</th>
            <th title="Fecha ingreso">FECHA</th>
            <th title="Nombre cliente">CLIENTE</th>
            <th title="Ciudad Origen">ORIGEN</th>
            <th title="Ciudad destino">DESTINO</th>
            <th title="Unidades">UND</th>
            <th title="Peso real">PES</th>
            <th title="Peso volumen">VOL</th>
            <th title="Valor flete">FLETE</th>
            <th title="Valor manejo">MANEJO</th>
            <th title="Valor recaudo">REC</th>
            <th title="Codigo del despacho">DES</th>
            <th title="Tipo de pago cortesia">COR</th>
            <th title="Autorizado">AUT</th>
            <th title="Aprobado">APR</th>
            <th title="Embarcada sin despachar">B</th>
            <th title="Despachada">D</th>
            <th title="Entregada">E</th>
            <th title="Soporte de entrega">S</th>
            <th title="Cumplido entregado al cliente">C</th>
            <th title="Facturado">F</th>
            <th title="Con novedad">N</th>
            <th title="Anulado">A</th>
            <th title="Digitalizado">G</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arGuia in arGuias %}
            <tr>
                <td>{{ arGuia.codigoGuiaPk }}</td>
                <td>{{ arGuia.codigoOperacionIngresoFk }}</td>
                <td>{{ arGuia.codigoOperacionCargoFk }}</td>
                <td>{{ arGuia.codigoServicioFk }}</td>
                <td>{{ arGuia.codigoGuiaTipoFk }}</td>
                <td>{{ arGuia.numero }}</td>
                <td>{{ arGuia.documentoCliente }}</td>
                <td>{{ arGuia.fechaIngreso | date('Y-m-d') }}</td>
                <td>{{ arGuia.clienteNombreCorto }}</td>
                <td>{{ arGuia.ciudadOrigen }}</td>
                <td>{{ arGuia.ciudadDestino }}</td>
                <td>{{ arGuia.unidades }}</td>
                <td>{{ arGuia.pesoReal }}</td>
                <td>{{ arGuia.pesoVolumen }}</td>
                <td class="numero">{{ arGuia.vrFlete | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arGuia.vrManejo | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arGuia.vrRecaudo | number_format(0, '.', ',') }}</td>
                <td>{{ arGuia.codigoDespachoFk }}</td>
                <td>{{ arGuia.cortesia? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoAutorizado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoAprobado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoEmbarcado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoDespachado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoEntregado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoSoporte? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoCumplido? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoFacturado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoNovedad? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoAnulado? "SI":"NO" }}</td>
                <td>{{ arGuia.estadoDigitalizado? "SI":"NO" }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('transporte_movimiento_transporte_guia_detalle',{'id' : arGuia.codigoGuiaPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">
            <span class="badge">{{ arGuias.getTotalItemCount }}</span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arGuias) }}
    </div>
    <div class="btn-group btn-xs" style="float: left; width: 60px">
        {{ form_widget(form.limiteRegistros) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group" style="float: right">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    {{ form_end(form) }}
    <br /><br /><br />
{% endblock %}