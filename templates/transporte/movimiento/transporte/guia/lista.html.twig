{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="txtCodigoConductor" class="col-sm-1 control-label">Cliente:</label>
                <div class="col-sm-11">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.txtCodigoCliente) }}
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">
                                {{ form_widget(form.txtNombreCorto) }}
                                <span class="input-group-btn">
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('transporte_bus_cliente', { 'campoCodigo': 'form_txtCodigoCliente', 'campoNombre': 'form_txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-1 control-label">Tipo:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.cboGuiaTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-3 control-label"></label>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Servicio:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.cboServicioRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-1 control-label">Guia:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtCodigo, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-3 control-label"></label>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtNumero, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Documento:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtDocumento, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaDesde) }}
                </div>

                <label for="form_TxtCodigo" class="col-sm-1 control-label">Factura:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtCodigoFactura, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-1 control-label">Facturado:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.chkEstadoFacturado) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.fechaHasta) }}
                </div>

                <label for="form_TxtCodigo" class="col-sm-1 control-label">Remitente:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.txtRemitente, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">

                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-5">
                    {{ form_widget(form.filtrarFecha) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>GUIA</th>
            <th>OI</th>
            <th>OC</th>
            <th>SER</th>
            <th>TIPO</th>
            <th>NUMERO</th>
            <th>DOC</th>
            <th>FECHA</th>
            <th>CLIENTE</th>
            <th>DESTINO</th>
            <th>UND</th>
            <th>PES</th>
            <th>VOL</th>
            <th>FLETE</th>
            <th>MANEJO</th>
            <th>REC</th>
            <th title="Impresa">I</th>
            <th title="Embarcada sin despachar">B</th>
            <th title="Despachada">D</th>
            <th title="Entregada">E</th>
            <th title="Soporte de entrega">S</th>
            <th title="Cumplido entregado al cliente">C</th>
            <th title="Facturado">F</th>
            <th title="Con novedad">N</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arGuia in arGuias %}
            <tr>
                <td>{{ arGuia.codigoGuiaPk }}</td>
                <td>{{ arGuia.codigoOperacionIngresoFk }}</td>
                <td>{{ arGuia.codigoOperacionCargoFk }}</td>
                <td>{{ arGuia.codigoServicioFk }}</td>
                <td>{{ arGuia.codigoGuiaTipoFk }}</td>
                <td>{{ arGuia.numero }}</td>
                <td>{{ arGuia.documentoCliente }}</td>
                <td>{{ arGuia.fechaIngreso | date('Y-m-d') }}</td>
                <td>{{ arGuia.clienteNombreCorto }}</td>
                <td>{{ arGuia.ciudadDestino }}</td>
                <td class="numero">{{ arGuia.unidades | number_format(0, '.', ',')}}</td>
                <td class="numero">{{ arGuia.pesoReal | number_format(0, '.', ',')}}</td>
                <td class="numero">{{ arGuia.pesoVolumen | number_format(0, '.', ',')}}</td>
                <td class="numero">{{ arGuia.vrFlete | number_format(0, '.', ',')}}</td>
                <td class="numero">{{ arGuia.vrManejo | number_format(0, '.', ',')}}</td>
                <td class="numero">{{ arGuia.vrRecaudo | number_format(0, '.', ',')}}</td>
                <td class="estado">{{ arGuia.estadoImpreso?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoEmbarcado?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoDespachado?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoEntregado?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoSoporte?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoCumplido?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoFacturado?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoNovedad?'SI':'NO' }}</td>

                <td style="text-align: center;">
                    {% if arGuia.estadoEmbarcado == 0 %}
                        <a href="{{ path('transporte_movimiento_transporte_guia_nuevo',{'id' : arGuia.codigoGuiaPk}) }}">
                            <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                            </i>
                        </a>
                    {% endif %}
                </td>
                <td style="text-align: center"><a href="{{ path('transporte_movimiento_transporte_guia_detalle', { 'id': arGuia.codigoGuiaPk }) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arGuias.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arGuias) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group" style="float: right;">
            <a class="btn btn-sm btn-default"
               href="{{ path('transporte_movimiento_transporte_guia_nuevo',{'id' : 0}) }}">Nuevo</a>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
