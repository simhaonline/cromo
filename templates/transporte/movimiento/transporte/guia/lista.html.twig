{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-1 control-label">Tipo:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.guiaTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-3 control-label"></label>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Servicio:</label>
                <div class="col-sm-5">
                    {{ form_widget(form.servicioRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_TxtCodigo" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">

                </div>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Numero:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-1 control-label">Documento:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.documento, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>OI</th>
            <th>OC</th>
            <th>SER</th>
            <th>TIPO</th>
            <th>NUMERO</th>
            <th>DOC</th>
            <th>FECHA</th>
            <th>CLIENTE</th>
            <th>DESTINO</th>
            <th>UND</th>
            <th>PES</th>
            <th>VOL</th>
            <th>FLETE</th>
            <th>MANEJO</th>
            <th>REC</th>
            <th>I</th>
            <th>B</th>
            <th>D</th>
            <th>E</th>
            <th>S</th>
            <th>C</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arGuia in arGuias %}
            <tr>
                <td>{{ arGuia.codigoGuiaPk }}</td>
                <td>{{ arGuia.codigoOperacionIngresoFk }}</td>
                <td>{{ arGuia.codigoOperacionCargoFk }}</td>
                <td>{{ arGuia.codigoServicioFk }}</td>
                <td>{{ arGuia.codigoGuiaTipoFk }}</td>
                <td>{{ arGuia.numero }}</td>
                <td>{{ arGuia.documentoCliente }}</td>
                <td>{{ arGuia.fechaIngreso | date('Y-m-d') }}</td>
                <td>{{ arGuia.clienteNombreCorto }}</td>
                <td>{{ arGuia.ciudadDestino }}</td>
                <td class="numero">{{ arGuia.unidades }}</td>
                <td class="numero">{{ arGuia.pesoReal }}</td>
                <td class="numero">{{ arGuia.pesoVolumen }}</td>
                <td class="numero">{{ arGuia.vrFlete }}</td>
                <td class="numero">{{ arGuia.vrManejo }}</td>
                <td class="numero">{{ arGuia.vrRecaudo }}</td>
                <td class="estado">{{ arGuia.estadoImpreso?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoEmbarcado?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoDespachado?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoEntregado?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoSoporte?'SI':'NO' }}</td>
                <td class="estado">{{ arGuia.estadoCumplido?'SI':'NO' }}</td>
                <td style="text-align: center"><a href="{{ path('transporte_mto_transporte_guia_detalle', { 'codigoGuia': arGuia.codigoGuiaPk }) }}"><img src="{{ asset('../public/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arGuias.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arGuias) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

