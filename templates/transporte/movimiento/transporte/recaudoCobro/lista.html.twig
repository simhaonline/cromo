{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="modal-footer">
            {{ form_widget(form.btnFiltrar) }}
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>FECHA</th>
            <th>COMENTARIOS</th>
            <th>AUT</th>
            <th>APR</th>
            <th>ANU</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arRecaudoCobro in arRecaudoCobros %}
            <tr>
                <td>{{ arRecaudoCobro.codigoRecaudoCobroPk }}</td>
                <td>{{ arRecaudoCobro.fecha | date('Y-m-d') }}</td>
                <td>{{ arRecaudoCobro.comentario }}</td>
                <td class="estado">{{ arRecaudoCobro.estadoAutorizado?'SI':'NO' }}</td>
                <td class="estado">{{ arRecaudoCobro.estadoAprobado?'SI':'NO' }}</td>
                <td class="estado">{{ arRecaudoCobro.estadoAnulado?'SI':'NO' }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('transporte_movimiento_transporte_recaudo_cobro_nuevo',{'id' : arRecaudoCobro.codigoRecaudoCobroPk}) }}">
                        <i title="Editar el registro" class="fa fa-edit" style="font-size: large;color: black;">
                        </i>
                    </a>
                </td>
                <td style="text-align: center"><a href="{{ path('transporte_movimiento_transporte_recaudo_cobro_detalle', { 'id': arRecaudoCobro.codigoRecaudoCobroPk }) }}"><img src="{{ asset('../public/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRecaudoCobro.codigoRecaudoCobroPk }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRecaudoCobros.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRecaudoCobros) }}
    </div>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
        </div>
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.btnEliminar) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('transporte_movimiento_transporte_recaudo_cobro_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

