{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a  class="btn btn-default btn-sm" href="{{ path('transporte_proceso_transporte_general_intermediacion') }}">Volver</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.btnAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnDesautorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnAprobar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.btnAnular,  { 'attr': {'class': 'btn btn-default btn-sm', 'onclick': 'return confirm("Esta seguro de anular el registro?")'} }) }}
        </div>
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">AÃ‘O:</td>
            <td class="td-in-well">{{ arIntermediacion.anio }}</td>
            <td class="titulo">MES:</td>
            <td class="td-in-well">{{ arIntermediacion.mes }}</td>
            <td class="titulo" >FLETE (PAGADO)</td>
            <td align="right">{{ arIntermediacion.vrFletePago | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arIntermediacion.fecha | date('Y-m-d') }}</td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >FLETE (COBRADO)</td>
            <td align="right">{{ arIntermediacion.vrFleteCobro | number_format(0, '.', ',')}}</td>
        </tr>
        <tr>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo" >INTERMEDIACION (INGRESO)</td>
            <td align="right">{{ arIntermediacion.vrIngreso | number_format(0, '.', ',')}}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>NUMERO</th>
                            <th>CLIENTE</th>
                            <th>TIPO</th>
                            <th>FLETE</th>
                            <th>PAGO</th>
                            <th>PAR</th>
                            <th>INGRESO</th>
                            <th><input type="checkbox" name="ChkSeleccionar" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arIntermediacionDetalle in arIntermediacionDetalles %}
                            <tr>
                                <td><input type="hidden" name="arrCodigo[]" value="{{ arIntermediacionDetalle.codigoIntermediacionDetallePk }}">{{ arIntermediacionDetalle.codigoIntermediacionDetallePk }}</td>
                                <td>{{ arIntermediacionDetalle.numero }}</td>
                                <td>{{ arIntermediacionDetalle.clienteNombreCorto }}</td>
                                <td>{{ arIntermediacionDetalle.facturaTipoNombre }}</td>
                                <td class="numero">{{ arIntermediacionDetalle.vrFlete | number_format(0, '.', ',')}}</td>
                                <td class="numero">{{ arIntermediacionDetalle.vrPagoOperado | number_format(0, '.', ',')}}</td>
                                <td class="numero">{{ arIntermediacionDetalle.porcentajeParticipacion | number_format(0, '.', ',')}}</td>
                                <td class="numero">{{ arIntermediacionDetalle.vrIngresoOperado | number_format(0, '.', ',')}}</td>
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arIntermediacionDetalle.codigoIntermediacionDetallePk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}