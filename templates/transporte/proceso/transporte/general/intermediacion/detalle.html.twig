{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a  class="btn btn-default btn-sm" href="{{ path('transporte_proceso_transporte_general_intermediacion') }}">Volver</a>
        </div>
        <div class="btn-group">

        </div>
    </div>
    <br /><br />
    <table width="100%" class="table table-condensed table-bordered">
        <tr>
            <td class="titulo">AÃ‘O:</td>
            <td class="td-in-well">{{ arIntermediacion.anio }}</td>
            <td class="titulo">MES:</td>
            <td class="td-in-well">{{ arIntermediacion.mes }}</td>
            <td class="titulo" ></td>
            <td align="right"></td>
        </tr>

    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <div id="detalles" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>CLIENTE</th>
                            <th>FLETE</th>
                            <th>PAGO</th>
                            <th>PAR</th>
                            <th>INGRESO</th>
                            <th><input type="checkbox" name="ChkSeleccionar" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for arIntermediacionDetalle in arIntermediacionDetalles %}
                            <tr>
                                <td><input type="hidden" name="arrCodigo[]" value="{{ arIntermediacionDetalle.codigoIntermediacionDetallePk }}">{{ arIntermediacionDetalle.codigoIntermediacionDetallePk }}</td>
                                <td>{{ arIntermediacionDetalle.clienteNombreCorto }}</td>
                                <td class="numero">{{ arIntermediacionDetalle.vrFlete | number_format(0, '.', ',')}}</td>
                                <td class="numero">{{ arIntermediacionDetalle.vrPago | number_format(0, '.', ',')}}</td>
                                <td class="numero">{{ arIntermediacionDetalle.porcentajeParticipacion | number_format(0, '.', ',')}}</td>
                                <td class="numero">{{ arIntermediacionDetalle.vrIngreso | number_format(0, '.', ',')}}</td>
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arIntermediacionDetalle.codigoIntermediacionDetallePk }}" /></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="separador-1"></div>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}