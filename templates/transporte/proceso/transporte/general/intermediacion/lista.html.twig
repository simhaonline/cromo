{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>AÃ‘O</th>
            <th>MES</th>
            <th>PAGO_D</th>
            <th>PAGO_D</th>
            <th>PAGO</th>
            <th>FLETE</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for arIntermediacion in arIntermediacions %}
            <tr>
                <td>{{ arIntermediacion.codigoIntermediacionPk }}</td>
                <td>{{ arIntermediacion.anio }}</td>
                <td>{{ arIntermediacion.mes }}</td>
                <td class="numero">{{ arIntermediacion.vrFletePago | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arIntermediacion.vrFletePagoRecogida | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arIntermediacion.vrFletePagoTotal | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arIntermediacion.vrFlete | number_format(0, '.', ',') }}</td>
                <td>
                    {% if arIntermediacion.estadoGenerado == 0 %}
                        <button class="btn btn-default btn-xs" type="submit" name="OpGenerar"
                                value="{{ arIntermediacion.codigoIntermediacionPk }}">Generar
                        </button>
                    {% else %}
                        <button class="btn btn-default btn-xs" type="submit" name="OpDeshacer"
                                value="{{ arIntermediacion.codigoIntermediacionPk }}">Deshacer
                        </button>
                    {% endif %}

                </td>
                <td style="text-align: center"><a href="{{ path('transporte_proceso_transporte_general_intermediacion_detalle', { 'id': arIntermediacion.codigoIntermediacionPk }) }}"><img src="{{ asset('../public/img/bootstrap/glyphicons_152_new_window.png') }}"></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arIntermediacions.getTotalItemCount }}</span></div>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arIntermediacions) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('transporte_proceso_transporte_general_intermediacion_nuevo', {'id': 0}) }}">Nuevo</a>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

