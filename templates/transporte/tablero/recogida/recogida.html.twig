{% extends 'base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">Resumen operacion</div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tabla-datos">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Operacion</th>
                                <th>Cantidad</th>
                                <th>Unidades</th>
                                <th>Peso</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for arrResumenRecogidaOperacion in arrResumenRecogidasOperacion %}
                                <tr>
                                    <td></td>
                                    <td>{{ arrResumenRecogidaOperacion.codigoOperacionFk }}</td>
                                    <td style="text-align: right">{{ arrResumenRecogidaOperacion.cantidad }}</td>
                                    <td style="text-align: right">{{ arrResumenRecogidaOperacion.unidades }}</td>
                                    <td style="text-align: right">{{ arrResumenRecogidaOperacion.pesoReal }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i> Recogidas
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item">
                            <i class="fa fa-comment fa-fw"></i> Pendientes
                            <span class="pull-right text-muted small"><em>Cant:{{ arrResumenRecogidas.pendientes.cantidad }} Und:{{ arrResumenRecogidas.pendientes.unidades }} Peso:{{ arrResumenRecogidas.pendientes.pesoReal }}</em>
                                    </span>
                        </a>
                        <a href="#" class="list-group-item">
                            <i class="fa fa-twitter fa-fw"></i> Sin descargar
                            <span class="pull-right text-muted small"><em>Cant:{{ arrResumenRecogidas.sinDescargar.cantidad }} Und:{{ arrResumenRecogidas.sinDescargar.unidades }} Peso:{{ arrResumenRecogidas.sinDescargar.pesoReal }}</em>
                                    </span>
                        </a>
                        <a href="#" class="list-group-item">
                            <i class="fa fa-money fa-fw"></i> Cumplidas
                            <span class="pull-right text-muted small"><em>Cant:{{ arrResumenRecogidas.descargadas.cantidad }} Und:{{ arrResumenRecogidas.descargadas.unidades }} Peso:{{ arrResumenRecogidas.descargadas.pesoReal }}</em>
                                    </span>
                        </a>
                    </div>
                    <!-- /.list-group -->
                    <a href="#" class="btn btn-default btn-block">Ver todas</a>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

        <script src="//code.highcharts.com/4.1.8/highcharts.js"></script>
        <script src="//code.highcharts.com/4.1.8/modules/exporting.js"></script>
        <script type="text/javascript">
            {{ chart(chart) }}
        </script>

        <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>

        <!-- /.col-lg-4 -->
    </div>
{% endblock %}
