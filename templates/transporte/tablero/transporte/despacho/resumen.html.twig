{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Desde:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.fechaDesde) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-1 control-label">Hasta:</label>
                <div class="col-sm-2">
                    {{ form_widget(form.fechaHasta) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>COD</th>
            <th>OPERACION</th>
            <th>TIPO</th>
            <th>DESPACHOS</th>
            <th>GUIAS</th>
            <th>UNIDAD</th>
            <th>PESO</th>
            <th>VOLUMEN</th>
            <th>FLETE</th>
            <th>MANEJO</th>
        </tr>
        </thead>
        <tbody>
        {% for arResumen in arResumen %}
            <tr>
                <td>{{ arResumen.codigoOperacionFk }}</td>
                <td>{{ arResumen.operacionNombre }}</td>
                <td>{{ arResumen.tipo }}</td>
                <td class="numero">{{ arResumen.registros | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arResumen.guias | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arResumen.unidades | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arResumen.pesoReal | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arResumen.pesoVolumen | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arResumen.vrFlete | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ arResumen.vrManejo | number_format(0, '.', ',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group" style="float: right">
            {{ form_widget(form.btnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
