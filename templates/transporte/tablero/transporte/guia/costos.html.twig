{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <div class="row">
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <script src="//code.highcharts.com/4.1.8/highcharts.js"></script>
        <script src="//code.highcharts.com/4.1.8/modules/exporting.js"></script>
        <div class="panel panel-default">
            <div class="panel-heading">Filtros</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_TxtCodigo" class="col-sm-1 control-label">Mes:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.chkMes) }}
                    </div>
                    <label for="form_TxtCodigo" class="col-sm-1 control-label">AÃ±o:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.txtAnio) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            {{ chart(chart) }}
        </script>
        <div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
        <br/><br/>
        <table class="table table-striped table-bordered table-hover tabla-datos">
            <thead>
            <tr>
                <th>CLIENTE</th>
                <th>COSTO</th>
                <th>PRECIO</th>
            </tr>
            </thead>
            <tbody>
            {% for arrCostoMesCliente in arrCostosMesCliente %}
                <tr>
                    <td>{{ arrCostoMesCliente.nombreCorto }}</td>
                    <td class="numero">{{ arrCostoMesCliente.vrCosto | number_format(0, '.', ',') }}</td>
                    <td class="numero">{{ arrCostoMesCliente.vrPrecio | number_format(0, '.', ',') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <br /> <br />
        <script type="text/javascript">
            {{ chart(chartDestino) }}
        </script>
        <div id="container2" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
        <br/><br/>
        <table class="table table-striped table-bordered table-hover tabla-datos">
            <thead>
            <tr>
                <th>DESTINO</th>
                <th>COSTO</th>
                <th>PRECIO</th>
            </tr>
            </thead>
            <tbody>
            {% for arrCostoMesDestino in arrCostosMesDestino %}
                <tr>
                    <td>{{ arrCostoMesDestino.nombre }}</td>
                    <td class="numero">{{ arrCostoMesDestino.vrCosto | number_format(0, '.', ',') }}</td>
                    <td class="numero">{{ arrCostoMesDestino.vrPrecio | number_format(0, '.', ',') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <!-- /.col-lg-4 -->
    </div>
    {{ form_end(form) }}
{% endblock %}
