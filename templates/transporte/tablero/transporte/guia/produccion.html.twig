{% extends 'base_transporte.html.twig' %}
{% block content %}
    <div class="row">

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

        <script src="//code.highcharts.com/4.1.8/highcharts.js"></script>
        <script src="//code.highcharts.com/4.1.8/modules/exporting.js"></script>
        <script type="text/javascript">
            {{ chart(chart) }}
        </script>

        <div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>

        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>DIA</th>
                <th>FLETE</th>
                <th>MANEJO</th>
                <th>TOTAL</th>
            </tr>
            </thead>
            <tbody>
            {% set totalFlete = 0 %}
            {% set totalManejo = 0 %}
            {% set total = 0 %}
            {% for arrProduccion in arrProducciones %}
                <tr>
                    <td>{{ arrProduccion.dia }}</td>
                    <td class="numero">{{ arrProduccion.flete | number_format(0, '.', ',') }}</td>
                    <td class="numero">{{ arrProduccion.manejo | number_format(0, '.', ',') }}</td>
                    <td class="numero">{{ arrProduccion.total | number_format(0, '.', ',') }}</td>
                </tr>
                {% set totalFlete = totalFlete + arrProduccion.flete %}
                {% set totalManejo = totalManejo + arrProduccion.manejo %}
                {% set total = total + (arrProduccion.flete + arrProduccion.manejo) %}
            {% endfor %}
            <tr>
                <td></td>
                <td class="numero">{{ totalFlete | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ totalManejo | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ total | number_format(0, '.', ',') }}</td>
            </tr>
            </tbody>
        </table>
        <br /> <br />

        <script type="text/javascript">
            {{ chart(chartAnio) }}
        </script>
        <div id="container2" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>MES</th>
                <th>FLETE</th>
                <th>MANEJO</th>
                <th>TOTAL</th>
            </tr>
            </thead>
            <tbody>
            {% set totalFlete = 0 %}
            {% set totalManejo = 0 %}
            {% set total = 0 %}
            {% for arrProduccion in arrProduccionesAnio %}
                <tr>
                    <td>{{ arrProduccion.dia }}</td>
                    <td class="numero">{{ arrProduccion.flete | number_format(0, '.', ',') }}</td>
                    <td class="numero">{{ arrProduccion.manejo | number_format(0, '.', ',') }}</td>
                    <td class="numero">{{ arrProduccion.total | number_format(0, '.', ',') }}</td>
                </tr>
                {% set totalFlete = totalFlete + arrProduccion.flete %}
                {% set totalManejo = totalManejo + arrProduccion.manejo %}
                {% set total = total + (arrProduccion.flete + arrProduccion.manejo) %}
            {% endfor %}
            <tr>
                <td></td>
                <td class="numero">{{ totalFlete | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ totalManejo | number_format(0, '.', ',') }}</td>
                <td class="numero">{{ total | number_format(0, '.', ',') }}</td>
            </tr>
            </tbody>
        </table>
        <!-- /.col-lg-4 -->
    </div>
{% endblock %}
