{% extends 'base.html.twig' %}
{% block content %}
    <div class="row">
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <script src="//code.highcharts.com/4.1.8/highcharts.js"></script>
        <script src="//code.highcharts.com/4.1.8/modules/exporting.js"></script>
        <script type="text/javascript">
            {{ chart(chart) }}
        </script>
        <div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
        <table class="table table-striped table-bordered table-hover tabla-datos">
            <thead>
            <tr>
                <th>DIA</th>
                <th>CANTIDAD</th>
            </tr>
            </thead>
            <tbody>
            {% for arrNovedad in arrNovedades %}
                <tr>
                    <td>{{ arrNovedad.dia }}</td>
                    <td class="numero">{{ arrNovedad.cantidad | number_format(0, '.', ',') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <br /> <br />
        <script type="text/javascript">
            {{ chart(chartAnio) }}
        </script>
        <div id="container2" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
        <table class="table table-striped table-bordered table-hover tabla-datos">
            <thead>
            <tr>
                <th>MES</th>
                <th>CANTIDAD</th>
            </tr>
            </thead>
            <tbody>
            {% for arrNovedadAnio in arrNovedadesAnio %}
                <tr>
                    <td>{{ mesATexto(arrNovedadAnio.mes) }}</td>
                    <td class="numero">{{ arrNovedadAnio.cantidad | number_format(0, '.', ',') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <!-- /.col-lg-4 -->
    </div>
{% endblock %}
