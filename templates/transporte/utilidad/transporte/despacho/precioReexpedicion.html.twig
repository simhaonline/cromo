{% extends 'base_transporte.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtro</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Numero guia</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtGuiaNumero, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Codigo despacho:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtDespachoCodigo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>COD.GUIA</th>
            <th>COD.DESPACHO</th>
            <th>NUMERO GUIA</th>
            <th>PRECIO REEXPEDICION</th>
        </tr>
        </thead>
        <tbody>
        {% for arDespachoDetalle in arDespachoDetalles %}
            <tr>
                <td>{{ arDespachoDetalle.codigoDespachoDetallePk }}</td>
                <td>{{ arDespachoDetalle.codigoGuiaFk }}</td>
                <td>{{ arDespachoDetalle.codigoDespachoFk }}</td>
                <td>{{ arDespachoDetalle.guiaRel.numero }}</td>
                <td style="text-align: center;"><input type="text" value="{{ arDespachoDetalle.vrPrecioReexpedicion }}" name="arrVrPrecioReexpedicion[{{ arDespachoDetalle.codigoDespachoDetallePk }}]"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span
                        class="badge">{{ arDespachoDetalles.getTotalItemCount }}</span></div>
        </div>

        <div class="btn-group btn-xs" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arDespachoDetalles) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.btnActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
