{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(formFiltro, {'attr': {'class': 'form-horizontal'} }) }}
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-editbutton="false"
         data-widget-fullscreenbutton="true">
        <header>
            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
            <h2>Generar guia</h2>
        </header>
        <div>
            <div class="widget-body no-padding">
                <div class="panel-body">
                    {% include ('estructura/buscarClienteTransporte.html.twig') %}
                    <div class="form-group form-group-sm">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-3">
                            {{ form_widget(formFiltro.flArchivo, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="col-sm-3">
                            {{ form_widget(formFiltro.liquidar) }}
                        </div>
                        <div class="col-sm-4">
                            <a href="{{ asset('ejemplo/ejemploGuias.xls') }}" download class="btn btn-sm btn-default">Descargar ejemplo</a>
                            <a href="{{ asset('estructura/estructuraGenerarGuia.xlsx') }}" download class="btn btn-sm btn-default">Descargar estructura</a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    {{ form_widget(formFiltro.btnGenerar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_end(formFiltro) }}
    <br/>
{% endblock %}
