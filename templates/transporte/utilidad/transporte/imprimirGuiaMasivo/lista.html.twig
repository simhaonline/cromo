{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtro</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Numero guía desde</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtGuiaNumeroDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label class="col-sm-2 control-label">Numero guía hasta </label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtGuiaNumeroHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Codigo despacho</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtCodigoDespacho, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnGenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
