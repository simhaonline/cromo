{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{  form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h1>
        Programación turnos
        <small>Clientes: puesto nuevo</small>
    </h1>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="puesto_nombre" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                    {{   form_widget(form.nombre) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_pĺaca" class="col-sm-2 control-label">Direccion:</label>
                <div class="col-sm-4">
                    {{  form_widget(form.direccion) }}
                </div>
                <label for="form_digitoVerificacion" class="col-sm-2 control-label">Ciudad:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.ciudadRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_razonSocial" class="col-sm-2 control-label">Celular:</label>
                <div class="col-sm-4">
                    {{   form_widget(form.celular) }}
                </div>
                <label for="form_razonSocial" class="col-sm-2 control-label">Otra medio de comunicación:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.comunicacion) }}
                </div>
            </div>

            <div class="form-group form-group-sm">
                <label for="form_apellido1" class="col-sm-2 control-label">Codigo programador:</label>
                <div class="col-sm-4">
                    {{   form_widget(form.programadorRel) }}
                </div>
                <label for="form_apellido2" class="col-sm-2 control-label">Telefono:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.telefono) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_apellido1" class="col-sm-2 control-label">Centro costo:</label>
                <div class="col-sm-4">
                    {{   form_widget(form.centroCostoRel) }}
                </div>
                <label for="form_apellido2" class="col-sm-2 control-label">Ubicacion:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.ubicacionGps) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_apellido1" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">
                    {{   form_widget(form.estadoInactivo) }}
                </div>
                <label for="form_apellido2" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">

                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_movil" class="col-sm-2 control-label">Comentario:</label>
                <div class="col-sm-10">
                    {{   form_widget(form.comentario) }}
                </div>
            </div>
    </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="  path('turno_administracion_cliente_cliente_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
