{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <div class="row">
        <!-- /.col-lg-12 -->
    </div>
    <table width="100%" class="table table-condensed table-bordered tabla-informacion">
        <tr>
            <td class="titulo"><b>CODIGO CLIENTE:</b></td>
            <td class="td-in-well">{{ arCliente.codigoClientePk }}</td>
            <td class="titulo"><b>TIPO IDENTIFICACION</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCliente.identificacionRel.nombre |default('') }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>IDENTIFICACION:</b></td>
            <td class="td-in-well">{{ arCliente.numeroIdentificacion }}</td>
            <td class="titulo"><b>DIGITO</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCliente.digitoVerificacion }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>PRIMER NOMBRE:</b></td>
            <td class="td-in-well">{{ arCliente.nombre1 }}</td>
            <td class="titulo"><b>SEGUNDO NOMBRE:</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCliente.nombre2 }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>PRIMER APELLIDO:</b></td>
            <td class="td-in-well">{{ arCliente.apellido1 }}</td>
            <td class="titulo"><b>SEGUNDO APELLIDO:</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCliente.apellido2 }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>NOMBRE CORTO:</b></td>
            <td class="td-in-well">{{ arCliente.nombreCorto }}</td>
            <td class="titulo"><b>DIRECCION:</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCliente.direccion }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>NOMBRE EXTENDIDO:</b></td>
            <td class="td-in-well">{{ arCliente.nombreExtendido }}</td>
            <td class="titulo"><b>CELULAR:</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCliente.movil }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>TELEFONO:</b></td>
            <td class="td-in-well">{{ arCliente.telefono }}</td>
            <td class="titulo"><b>CORREO:</b></td>
            <td class="td-in-well" style="text-transform: uppercase;">{{ arCliente.correo }}</td>
        </tr>
        <tr>
            <td class="titulo"><b>PLAZO PAGO:</b></td>
            <td class="td-in-well">{{ arCliente.plazoPago }}</td>
            <td class="titulo"><b></b></td>
            <td class="td-in-well" style="text-transform: uppercase;"></td>
        </tr>
        <tr>
            <td class="titulo"><b>COMENTARIOS:</b></td>
            <td class="td-in-well">{{ arCliente.comentario }}</td>
            <td class="titulo"><b></b></td>
            <td class="td-in-well"></td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#puestos" data-toggle="tab">Puestos</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="puestos">
            <div id="puestos" style="width: 100%"><br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover tabla-datos">
                        <thead>
                        <tr>
                            <th>COD</th>
                            <th>NOMBRE</th>
                            <th>PROGRAMADOR</th>
                            <th>DIRRECCIÃ“N</th>
                            <th>CIUDAD</th>
                            <th title="CENTRO COSTRO">C_C</th>
                            <th>SALARIO</th>
                            <th></th>
                            <th></th>
                            <th class="text-center" title="SELECCIONAR TODOS LOS PUESTOS"><input type="checkbox" name="ChkSeleccionarTodos" onclick="ChequearTodosTabla(this, 'ChkSeleccionar[]')"> </th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for arPuesto  in arPuestos %}
                                <tr>
                                    <td>{{ arPuesto.codigoPuestoPk }}</td>
                                    <td>{{ arPuesto.nombre }}</td>
                                    <td>{{ arPuesto.programadorNombre }}</td>
                                    <td>{{ arPuesto.direccion }}</td>
                                    <td>{{ arPuesto.ciudadNombre }}</td>
                                    <td>{{ arPuesto.codigoCentroCostoFk }}</td>
                                    <td>{{ arPuesto.salario }}</td>
                                    <td style="text-align: center;">
                                        <a  href="javascript:abrirVentana3('{{ path('turno_administracion_comercial_puesto_nuevo', {'id': arPuesto.codigoPuestoPk, 'codigoCliente':arCliente.codigoClientePk}) }}', 'Editar puesto', 600, 1200) "><i class="fa fa-edit" style="color: black;font-size: large;"></i>
                                        </a>
                                    </td>
                                    <td style="text-align: center">
                                        <a href="{{ path('turno_administracion_comercial_puesto_detalle', { 'id': arPuesto.codigoPuestoPk }) }}" target="_blank">
                                            <i class="fa fa-share-square-o" style="font-size: large;color: black;"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <input type="checkbox" name="ChkSeleccionar[]" value="{{arPuesto.codigoPuestoPk }}"/>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <a class="btn btn-default btn-sm" href="{{ path('turno_administracion_comercial_cliente_lista') }}">Volver</a>
        <div class="btn-toolbar" style="float: right;">
            <div class="btn-group">
                <div class="btn-group">
                    <a href="javascript:abrirVentana3('{{ path('turno_administracion_comercial_puesto_nuevo', {'id': 0, 'codigoCliente':arCliente.codigoClientePk}) }}', 'Nuevo puesto', 600, 1200) " class="btn btn-default">Nuevo</a>
                </div>
                <div class="btn-group">
                    {{ form_widget(form.btnEliminar) }}
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}


{% endblock %}
