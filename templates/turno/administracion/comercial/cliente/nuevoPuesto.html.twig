{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="puesto_nombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.nombre) }}
                    </div>
                    <label for="puesto_nombre" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.puestoTipoRel) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_pĺaca" class="col-sm-2 control-label">Direccion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.direccion) }}
                    </div>
                    <label for="form_digitoVerificacion" class="col-sm-2 control-label">Ciudad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.ciudadRel) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_razonSocial" class="col-sm-2 control-label">Celular:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.celular) }}
                    </div>
                    <label for="form_razonSocial" class="col-sm-2 control-label">Otra medio de comunicación:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.comunicacion) }}
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label for="form_apellido1" class="col-sm-2 control-label">Codigo programador:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.programadorRel) }}
                    </div>
                    <label for="form_apellido2" class="col-sm-2 control-label">Telefono:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.telefono) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_apellido1" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.centroCostoRel) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_apellido2" class="col-sm-2 control-label">Salario</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.salarioRel) }}
                    </div>
                    <label for="form_apellido1" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estadoInactivo) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_movil" class="col-sm-2 control-label">Comentario:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentario) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Información control</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Supervisor:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.supervisorRel) }}
                        {{ form_errors(form.supervisorRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Latitud:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.latitud) }}
                        {{ form_errors(form.latitud) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Coordinador:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.coordinadorRel) }}
                        {{ form_errors(form.coordinadorRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Longitud:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.longitud) }}
                        {{ form_errors(form.longitud) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        {{ form_widget(form.controlPuesto) }}
                        {{ form_errors(form.controlPuesto) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Clasificacion</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Operacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.operacionRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Proyecto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.proyectoRel) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Area:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.areaRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Zona:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.zonaRel) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
