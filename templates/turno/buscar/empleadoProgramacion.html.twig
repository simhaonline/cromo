{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">

            <div class="form-group form-group-sm">
                <label for="form_txtNombre" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.txtNombre) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_txtNit" class="col-sm-2 control-label">Nit:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtIdentificacion) }}
                </div>
                <label for="form_TxtCodigo" class="col-sm-2 control-label">Codigo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.txtCodigo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table  class="table table-striped table-bordered table-condensed table-hover tabla-datos">
        <tr>
            <th>CÓDIGO</th>
            <th>NUEMRO IDENTIFICACIÓN</th>
            <th>NOMBRE</th>
            <th></th>
        </tr>
        {% for arEmpleado in arEmpleados %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arEmpleado.codigoEmpleadoPk }}">{{ arEmpleado.codigoEmpleadoPk }} </td>
                <td>{{ arEmpleado.numeroIdentificacion  }}</td>
                <td>{{ arEmpleado.nombreCorto }}</td>
                <td class="text-center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arEmpleado.codigoEmpleadoPk  }}"/></td>
            </tr>
        {% endfor %}
    </table>


    <!-- Botones Menu Items -->
    <div class="btn-toolbar">
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arEmpleados.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arEmpleados) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
    </div>
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
