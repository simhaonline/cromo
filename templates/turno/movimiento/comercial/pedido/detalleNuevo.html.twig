{% extends 'base_sin_menu.html.twig' %}
{% block title %}Pedido detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Pedido: nuevo detalle</small>
        </h1>
    </section>
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Contrato Concepto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.contratoConceptoRel) }}
                        {{ form_errors(form.contratoConceptoRel) }}

                    </div>
                    <label class="col-sm-2 control-label">Servicio (facturacion):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.contratoConceptoFacturacionRel) }}
                        {{ form_errors(form.contratoConceptoFacturacionRel) }}

                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Modalidad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.contratoModalidadRel) }}
                        {{ form_errors(form.contratoModalidadRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Puesto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.puestoRel) }}
                        {{ form_errors(form.puestoRel) }}

                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Cantidad:</label>
                    <div class="col-sm-1">
                        {{ form_widget(form.cantidad) }}
                        {{ form_errors(form.cantidad) }}

                    </div>
                    <label class="col-sm-2 control-label">Precio (Ajustado):</label>
                    <div class="col-sm-1">
                        {{ form_widget(form.vrPrecioAjustado, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.vrPrecioAjustado) }}

                    </div>
                    <label class="col-sm-2 control-label">Desde (Dia):</label>
                    <div class="col-sm-1">
                        {{ form_widget(form.diaDesde) }}
                        {{ form_errors(form.diaDesde) }}

                    </div>
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-1">
                        {{ form_widget(form.diaHasta) }}
                        {{ form_errors(form.diaHasta) }}

                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Hora inicio (Servicio):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.horaInicio) }}
                        {{ form_errors(form.horaInicio) }}

                    </div>
                    {#                    <label class="col-sm-2 control-label">Periodo:</label>#}
                    {#                    <div class="col-sm-4">#}
                    {#                        {{ form_widget(form.periodoRel) }}#}
                    {#                        {{ form_errors(form.periodoRel) }}#}

                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Hora fin (Servicio):</label>
                <div class="col-sm-4">
                    {{ form_widget(form.horaFin) }}
                    {{ form_errors(form.horaFin) }}

                </div>
                <div class="col-sm-6">
                    <div class="form-group form-group-sm">
                        <label class="col-sm-4 control-label">Base (iva):</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.porcentajeBaseIva, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.porcentajeBaseIva) }}

                        </div>
                        <label class="col-sm-4 control-label">Salario base (Liquidacion):</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.vrSalarioBase, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.vrSalarioBase) }}

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">Detalle (Factura):</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.detalleFactura) }}
                        {{ form_errors(form.detalleFactura) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-group-sm">
                    <label class="col-sm-4 control-label">Detalle puesto:</label>
                    <div class="col-sm-8">
                        {#                            {{ form_widget(form.detallePuesto, { 'attr': {'class': 'form-control'} }) }}#}
                        {#                            {{ form_errors(form.detallePuesto) }}#}

                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-sm-offset-2">
                <div class="col-sm-4">{{ form_widget(form.lunes) }}</div>
                {{ form_errors(form.lunes) }}

                <div class="col-sm-4">{{ form_widget(form.martes) }}</div>
                {{ form_errors(form.martes) }}

                <div class="col-sm-4">{{ form_widget(form.miercoles) }}</div>
                {{ form_errors(form.miercoles) }}

                <div class="col-sm-4">{{ form_widget(form.jueves) }}</div>
                {{ form_errors(form.jueves) }}

                <div class="col-sm-4">{{ form_widget(form.viernes) }}</div>
                {{ form_errors(form.viernes) }}

                <div class="col-sm-4">{{ form_widget(form.sabado) }}</div>
                {{ form_errors(form.sabado) }}

                <div class="col-sm-4">{{ form_widget(form.domingo) }}</div>
                {{ form_errors(form.domingo) }}

                <div class="col-sm-4">{{ form_widget(form.festivo) }}</div>
                {{ form_errors(form.festivo) }}
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-2">{{ form_widget(form.compuesto) }}</div>
                {{ form_errors(form.compuesto) }}

                {#                    <div class="col-sm-4">{{ form_widget(form.noFacturar) }}</div>#}
                {#                    {{ form_errors(form.noFacturar) }}#}

                {#                    <div class="col-sm-2">{{ form_widget(form.facturaDistribuida) }}</div>#}
                {#                    {{ form_errors(form.facturaDistribuida) }}#}

                {#                    <div class="col-sm-2">{{ form_widget(form.sumarBaseIva) }}</div>#}
                {#                    {{ form_errors(form.sumarBaseIva) }}#}
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Detalle:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.detalle, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.detalle) }}
                </div>
            </div>
        </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}