{% extends 'base_sin_menu.html.twig' %}
{% block title %}Contrato detalle nuevo - Semantica{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Contrato: nuevo detalle</small>
        </h1>
    </section>

    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Item:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.itemRel) }}
                        {{ form_errors(form.itemRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Modalidad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.modalidadRel) }}
                        {{ form_errors(form.modalidadRel) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Puesto:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.puestoRel) }}
                        {{ form_errors(form.puestoRel) }}

                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Fecha desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaDesde) }}
                        {{ form_errors(form.fechaDesde) }}
                    </div>
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-1">
                    </div>
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-1">
                    </div>
                    <label class="col-sm-2 control-label">Cantidad:</label>
                    <div class="col-sm-1">
                        {{ form_widget(form.cantidad) }}
                        {{ form_errors(form.cantidad) }}

                    </div>
                    <label class="col-sm-2 control-label">Porcentaje AIU:</label>
                    <div class="col-sm-1">
                        {{ form_widget(form.porcentajeBaseIva, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.porcentajeBaseIva) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Fecha hasta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaHasta) }}
                        {{ form_errors(form.fechaHasta) }}

                    </div>
                    <label class="col-sm-2 control-label">Salario (Liquidacion):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrSalarioBase) }}
                        {{ form_errors(form.vrSalarioBase) }}

                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Hora desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.horaDesde) }}
                    </div>
                    <label class="col-sm-2 control-label">Precio (Ajustado):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrPrecioAjustado) }}
                        {{ form_errors(form.vrPrecioAjustado) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Hora hassta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.horaHasta) }}
                    </div>
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-2">
                        {{ form_widget(form.lunes) }}
                        {{ form_widget(form.martes) }}
                        {{ form_widget(form.miercoles) }}
                        {{ form_widget(form.jueves) }}
                        {{ form_widget(form.viernes) }}
                        {{ form_widget(form.sabado) }}
                        {{ form_widget(form.domingo) }}
                        {{ form_widget(form.festivo) }}
                    </div>
                    <div class="col-sm-2">
                        {{ form_widget(form.compuesto) }}
                        {{ form_widget(form.programar) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}