{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <table class="table table-striped table-bordered table-hover tabla-datos">
        <thead>
        <tr>
            <th>ID</th>
            <th>TIPO</th>
            <th>NUMERO</th>
            <th>FECHA</th>
            <th>CLIENTE</th>
            <th>SECTOR</th>
            <th>H</th>
            <th>HD</th>
            <th>HN</th>
            <th>TOTAL</th>
            <th>USU</th>
            <th>AUT</th>
            <th>APR</th>
            <th>ANU</th>
            <th></th>
            <th class="text-center" title="seleccionar todas los grupos"><input type="checkbox" name="ChkSeleccionarTodos" onclick="ChequearTodosTabla(this, 'ChkSeleccionar[]')"> </th>
        </tr>
        </thead>
        <tbody>
        {% for arPedido in arPedidos %}
            <tr>
                <td>{{ arPedido.codigoPedidoPk }}</td>
                <td>{{ arPedido.pedidoTipoNombre }}</td>
                <td>{{ arPedido.numero }}</td>
                <td>{{ arPedido.fecha | date('Y-m-d') }}</td>
                <td>{{ arPedido.clienteNombreCorto }}</td>
                <td>{{ arPedido.sectorNombre }}</td>
                <td>{{ arPedido.horas }}</td>
                <td>{{ arPedido.horasDiurnas }}</td>
                <td>{{ arPedido.horasNocturnas }}</td>
                <td class="numero">{{ arPedido.vrTotal | number_format() }}</td>
                <td>{{ arPedido.usuario }}</td>
                <td>{{ arPedido.estadoAutorizado? 'SI':'NO' }}</td>
                <td>{{ arPedido.estadoAprobado? 'SI':'NO' }}</td>
                <td>{{ arPedido.estadoAnulado? 'SI':'NO' }}</td>
                <td style="text-align: center;">
                    <a href="{{ path('turno_movimiento_operacion_programacion_detalle',{'id' : arPedido.codigoPedidoPk}) }}">
                        <i class="fa fa-share-square-o" style="font-size: large;color: black;"></i></a>
                </td>
                <td class="text-center">
                    <input type="checkbox" name="ChkSeleccionar[]" value="{{ arPedido.codigoPedidoPk  }}"/>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros
            <span class="badge">{{ arPedidos.getTotalItemCount }}
        </span>
        </div>
    </div>
    <div class="btn-group btn-xs" style="float: left;margin-top: -18px;">
        {{ knp_pagination_render(arPedidos) }}
    </div>
    <br/><br/>
    {{ form_end(form) }}
{% endblock %}