{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_pedidoTipoRel" class="col-sm-2 control-label">Grupo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.grupoRel, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.grupoRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Desde:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.fechaDesde) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Hasta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.fechaHasta) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentario, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.comentario) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('turno_movimiento_comercial_pedido_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
